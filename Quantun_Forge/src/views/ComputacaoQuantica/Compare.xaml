<UserControl x:Class="Quantun_Forge.src.views.ComputacaoQuantica.Compare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#1F232A">
        <Border Padding="34,30,34,30" Background="Transparent">
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="🧩 Comparação Visual: Computação Clássica vs Quântica no Caixeiro Viajante"
                           FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,12" TextAlignment="Center"/>
                <!-- Descrição curta -->
                <TextBlock Text="Veja a diferença de tempo para resolver o TSP (30 cidades) em cada abordagem. Clique em 'Iniciar Simulação'!"
                           FontSize="16" Foreground="#B3B3B3" Margin="0,0,0,25" TextAlignment="Center"/>

                <!-- Barras e comparação -->
                <Grid Margin="0,0,0,22">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Clássico -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="🦕🕰️ Processamento Clássico" FontWeight="SemiBold" Foreground="#FF6F61"
                                   FontSize="18" Margin="0,0,0,6" TextAlignment="Center"/>
                        <Border CornerRadius="8" Background="#31161B">
                            <ProgressBar x:Name="pbClassico" Width="350" Height="36" Value="0" Maximum="100"
                                         Foreground="#FF6F61" Background="#522D36"
                                         ToolTip="Tempo estimado em um computador clássico: cresce exponencialmente com o número de cidades!"/>
                        </Border>
                        <TextBlock x:Name="txtTempoClassico" Text="0 anos" Foreground="#FF6F61"
                                   FontSize="16" Margin="0,5,0,0" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Text="Força bruta: testando todas as rotas possíveis" FontSize="13" Foreground="#C77B7B"
                                   Margin="0,4,0,0" TextAlignment="Center"/>
                    </StackPanel>
                    <!-- Separador visual VS -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="VS" Foreground="#FFD700" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Rectangle Width="2" Height="85" Fill="#444" Margin="0,6"/>
                    </StackPanel>
                    <!-- Quântico -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="⚡🧬 Processamento Quântico" FontWeight="SemiBold" Foreground="#61DFFF"
                                   FontSize="18" Margin="0,0,0,6" TextAlignment="Center"/>
                        <Border CornerRadius="8" Background="#16323E">
                            <ProgressBar x:Name="pbQuantico" Width="140" Height="36" Value="0" Maximum="100"
                                         Foreground="#61DFFF" Background="#225264"
                                         ToolTip="Algoritmos quânticos encontram soluções muito mais rápido!"/>
                        </Border>
                        <TextBlock x:Name="txtTempoQuantico" Text="0 min" Foreground="#61DFFF"
                                   FontSize="16" Margin="0,5,0,0" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Text="Explorando caminhos em paralelo com qubits" FontSize="13" Foreground="#7EC8E3"
                                   Margin="0,4,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Botão de simulação -->
                <Button x:Name="btnSimular" Content="Iniciar Simulação" Margin="0,0,0,32" Padding="17,9"
                        Background="#353580" Foreground="White" FontSize="19" FontWeight="Bold"
                        Click="btnSimular_Click" HorizontalAlignment="Center" BorderThickness="0"
                        Cursor="Hand" Width="290"
                        Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.ToolTip>
                        <TextBlock Text="Veja na prática a diferença de tempo entre as abordagens!"/>
                    </Button.ToolTip>
                </Button>

                <!-- Feedback após simulação -->
                <Border Margin="0,0,0,32" Background="#242529" CornerRadius="15" Padding="24">
                    <StackPanel>
                        <TextBlock FontSize="19" Foreground="White" FontWeight="SemiBold" Text="Resumo Didático"/>
                        <TextBlock FontSize="15" Foreground="White" Margin="0,10,0,0" TextWrapping="Wrap">
                            Enquanto um supercomputador clássico levaria cerca de
                            <Run Foreground="#FF6F61" FontWeight="Bold">280 bilhões de anos</Run>
                            para resolver o problema do Caixeiro Viajante com 30 cidades, um computador quântico pode encontrar uma solução próxima da ótima em apenas
                            <Run Foreground="#61DFFF" FontWeight="Bold">1 hora</Run>.
                            {"\n\n"}
                            <Run Foreground="#FFD700" FontWeight="Bold">Computação quântica redefine o que é possível calcular!</Run>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- SESSÃO: Bit vs Qubit Visual -->
                <Border Margin="0,0,0,0" Background="#222A35" CornerRadius="18" Padding="22">
                    <StackPanel>
                        <TextBlock Text="🟦 Bit Clássico vs Qubit"
                                   FontSize="22" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,15" TextAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Bit clássico -->
                            <StackPanel Margin="0,0,38,0" HorizontalAlignment="Center">
                                <TextBlock Text="Bit Clássico" FontWeight="Bold" Foreground="White" FontSize="17" TextAlignment="Center"/>
                                <Button x:Name="btnBit" Content="0" Width="84" Height="84" FontSize="34"
                                        Background="#262A35" Foreground="DodgerBlue" BorderBrush="#444" Click="btnBit_Click"
                                        Margin="0,14,0,0" BorderThickness="2" ToolTip="Clique para alternar entre 0 e 1"/>
                                <TextBlock Text="Só pode ser 0 ou 1" Foreground="#B3B3B3" FontSize="13" TextAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>

                            <!-- Qubit -->
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Qubit" FontWeight="Bold" Foreground="White" FontSize="17" TextAlignment="Center"/>
                                <Grid>
                                    <Ellipse Width="84" Height="84" Fill="#9649CB" Opacity="0.6"/>
                                    <TextBlock x:Name="txtQubit" Text="|ψ⟩" Foreground="White" FontSize="31"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button Content="Superpor" Width="78" Click="btnSuperposicao_Click"
                                            BorderThickness="1" BorderBrush="#9649CB" Margin="0,0,10,0" Background="#28204a" Foreground="#FFD700"/>
                                    <Button Content="Medir" Width="78" Click="btnMedirQubit_Click"
                                            BorderThickness="1" BorderBrush="#9649CB" Background="#20464a" Foreground="#FFD700"/>
                                </StackPanel>
                                <TextBlock x:Name="txtQubitEstado" Text="Estado: superposição possível!"
                                           Foreground="#B3B3B3" FontSize="13" TextAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <!-- Área de portas e interação -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="NOT/Flip Bit" Width="110" Height="34"
                                    Background="#1C3343" Foreground="#FFD700" FontWeight="Bold" Click="btnNotBit_Click" Margin="0,0,10,0"/>
                            <Button Content="Hadamard Qubit" Width="130" Height="34"
                                    Background="#412C6B" Foreground="#FFD700" FontWeight="Bold" Click="btnHadamardQubit_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="txtPortaInfo" FontSize="14" Foreground="#BBB" TextAlignment="Center" Margin="0,8,0,0"/>

                        <!-- Botão Medir Ambos -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="Medir Ambos" Width="130" Height="38"
                                    Background="#212A3E" Foreground="Gold" FontWeight="Bold" Click="btnMedirAmbos_Click"
                                    Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtComparacao" FontSize="15" Foreground="#FFD700" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Descrição didática -->
                        <TextBlock Margin="0,18,0,0" FontSize="14" Foreground="#BBBBBB" TextAlignment="Center" TextWrapping="Wrap">
                            <Run FontWeight="Bold">Bit:</Run> alterna entre 0 e 1. |
                            <Run FontWeight="Bold">Qubit:</Run> pode estar em superposição (0 e 1 ao mesmo tempo)! Ao medir, o qubit colapsa em 0 ou 1 de forma probabilística.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
