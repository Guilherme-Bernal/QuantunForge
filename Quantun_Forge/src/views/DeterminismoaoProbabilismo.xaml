<UserControl x:Class="Quantun_Forge.src.views.DeterminismoaoProbabilismo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Cores do Tema -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="ClassicalColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="QuantumColor" Color="#9B59B6"/>

        <!-- Animação de Fade In -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <!-- Estilo para Cards -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Botões -->
        <Style x:Key="SimulationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Badge -->
        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <!-- Estilos de Texto -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#FAFAFA">
        <StackPanel MaxWidth="1200" Margin="40,30">

            <!-- Header Principal -->
            <Border Style="{StaticResource CardStyle}" 
                    Background="White"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Título -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Viewbox Width="50" Height="50" Margin="0,0,15,0">
                            <Canvas Width="100" Height="100">
                                <!-- Ícone: Relógio (determinismo) + Dados (probabilismo) -->
                                <Ellipse Canvas.Left="15" Canvas.Top="15" Width="35" Height="35"
                                         Stroke="#3498DB" StrokeThickness="3" Fill="Transparent"/>
                                <Line X1="32" Y1="32" X2="32" Y2="20" Stroke="#3498DB" StrokeThickness="2"/>
                                <Line X1="32" Y1="32" X2="40" Y2="32" Stroke="#3498DB" StrokeThickness="2"/>

                                <!-- Dados probabilísticos -->
                                <Rectangle Canvas.Left="55" Canvas.Top="55" Width="30" Height="30"
                                           Stroke="#9B59B6" StrokeThickness="3" Fill="Transparent"
                                           RadiusX="3" RadiusY="3"/>
                                <Ellipse Canvas.Left="67" Canvas.Top="67" Width="6" Height="6" Fill="#9B59B6"/>

                                <!-- Ponto de interrogação -->
                                <TextBlock Text="?" Canvas.Left="75" Canvas.Top="25" 
                                         FontSize="20" FontWeight="Bold" Foreground="#E74C3C"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="🔬 Do Determinismo ao Probabilismo" 
                                     Style="{StaticResource SectionTitleStyle}"
                                     Margin="0"/>
                            <TextBlock Text="A Incerteza que Revela o Universo" 
                                     FontSize="16"
                                     Foreground="{StaticResource DarkGray}"
                                     FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Badges -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Style="{StaticResource BadgeStyle}" Background="#E3F2FD">
                            <TextBlock Text="🏛️ Determinismo" Foreground="#1976D2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#F3E5F5">
                            <TextBlock Text="⚛️ Probabilismo" Foreground="#7B1FA2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#FFF3E0">
                            <TextBlock Text="🐱 Schrödinger" Foreground="#E65100" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Separator Background="{StaticResource LightGray}" Margin="0,15,0,20"/>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource ContentTextStyle}" FontSize="15">
                        Por séculos, acreditou-se que o universo era uma 
                        <Run FontWeight="SemiBold" Foreground="#3498DB">máquina perfeita</Run>, 
                        regida por leis matemáticas exatas. Se conhecêssemos a posição e velocidade de todas as partículas, 
                        poderíamos prever <Run FontWeight="Bold">todo o futuro</Run>.
                        <LineBreak/><LineBreak/>
                        Mas no século XX, a Física Quântica revelou que o 
                        <Run FontWeight="SemiBold" Foreground="#E74C3C">mundo não é determinístico</Run> — 
                        ele é <Run FontWeight="Bold" Foreground="#9B59B6">probabilístico por essência</Run>. 
                        A incerteza não é uma limitação, mas uma característica fundamental da natureza.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Experimento do Gato de Schrödinger -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="🐱 Experimento do Gato de Schrödinger" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0,0,0,20">
                        Um gato é colocado em uma caixa com um mecanismo quântico que tem 
                        <Run FontWeight="Bold" Foreground="#E74C3C">50% de chance</Run> de liberar veneno. 
                        Antes de observar, o gato está 
                        <Run FontWeight="Bold" Foreground="#9B59B6">simultaneamente vivo e morto</Run> — 
                        um estado de superposição probabilística.
                    </TextBlock>

                    <!-- Simulador Interativo -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="30"
                            MinHeight="400">
                        <StackPanel>
                            <!-- Controles -->
                            <TextBlock Text="Nível de Observação:" 
                                     FontWeight="Bold"
                                     FontSize="16"
                                     Margin="0,0,0,15"
                                     HorizontalAlignment="Center"/>

                            <Slider x:Name="SliderObservacao"
                                    Minimum="0" Maximum="100" Value="0"
                                    Width="500"
                                    Margin="0,0,0,20"
                                    ValueChanged="SliderObservacao_ValueChanged"/>

                            <TextBlock x:Name="TxtEstadoSistema"
                                     Text="Sistema Não Observado | Estado: Superposição Quântica"
                                     FontSize="14"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource QuantumColor}"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,30"/>

                            <!-- Visualização da Caixa -->
                            <Grid Height="250">
                                <!-- Caixa Fechada (Superposição) -->
                                <StackPanel x:Name="CaixaFechada" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                    <Border Background="#2C3E50"
                                            BorderBrush="#34495E"
                                            BorderThickness="5"
                                            CornerRadius="15"
                                            Width="300"
                                            Height="200"
                                            Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#2C3E50" BlurRadius="20" ShadowDepth="5"/>
                                        </Border.Effect>

                                        <StackPanel VerticalAlignment="Center">
                                            <!-- Símbolo de Superposição -->
                                            <TextBlock Text="?" 
                                                     FontSize="80"
                                                     FontWeight="Bold"
                                                     Foreground="#9B59B6"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,10">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="#9B59B6" BlurRadius="20" ShadowDepth="0"/>
                                                </TextBlock.Effect>
                                            </TextBlock>

                                            <TextBlock Text="Estado de Superposição" 
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     TextWrapping="Wrap"
                                                     TextAlignment="Center"/>

                                            <TextBlock Text="50% Vivo | 50% Morto" 
                                                     FontSize="13"
                                                     Foreground="#BDC3C7"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Resultado Após Observação -->
                                <Grid x:Name="CaixaAberta" 
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Gato Vivo -->
                                    <Border x:Name="GatoVivo"
                                            Grid.Column="0"
                                            Background="#E8F5E9"
                                            BorderBrush="#27AE60"
                                            BorderThickness="5"
                                            CornerRadius="15"
                                            Width="200"
                                            Height="200"
                                            Padding="20"
                                            Margin="5"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="😺" 
                                                     FontSize="60"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,10"/>
                                            <TextBlock Text="VIVO" 
                                                     FontSize="24"
                                                     FontWeight="Bold"
                                                     Foreground="#27AE60"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="Estado Colapsado" 
                                                     FontSize="12"
                                                     Foreground="{StaticResource DarkGray}"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Gato Morto -->
                                    <Border x:Name="GatoMorto"
                                            Grid.Column="1"
                                            Background="#FFEBEE"
                                            BorderBrush="#E74C3C"
                                            BorderThickness="5"
                                            CornerRadius="15"
                                            Width="200"
                                            Height="200"
                                            Padding="20"
                                            Margin="5"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="😿" 
                                                     FontSize="60"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,10"/>
                                            <TextBlock Text="MORTO" 
                                                     FontSize="24"
                                                     FontWeight="Bold"
                                                     Foreground="#E74C3C"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="Estado Colapsado" 
                                                     FontSize="12"
                                                     Foreground="{StaticResource DarkGray}"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>

                            <!-- Botão de Reset -->
                            <Button x:Name="BtnReset"
                                    Content="🔄 Reiniciar Experimento"
                                    Style="{StaticResource SimulationButtonStyle}"
                                    Background="{StaticResource WarningColor}"
                                    HorizontalAlignment="Center"
                                    Margin="0,30,0,0"
                                    Click="BtnReset_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Explicação -->
                    <Border Background="#F3E5F5" 
                            BorderBrush="#7B1FA2"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource ContentTextStyle}">
                            <Run FontWeight="Bold" FontSize="15" Foreground="#7B1FA2">💡 Revelação:</Run>
                            <LineBreak/><LineBreak/>
                            A realidade não é definida até que seja observada. 
                            O ato de medir <Run FontWeight="SemiBold">colapsa o estado quântico</Run>, 
                            e apenas um dos resultados possíveis se manifesta. 
                            Esta é a essência do <Run FontWeight="Bold">Probabilismo Quântico</Run>.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Comparação Visual -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="⚖️ Determinismo vs Probabilismo" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Determinismo (Clássico) -->
                        <Border Grid.Column="0" 
                                Background="#E3F2FD"
                                CornerRadius="10"
                                Padding="25"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="🏛️ Determinismo Clássico" 
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1976D2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Relógio Visual -->
                                <Viewbox Width="100" Height="100" Margin="0,10">
                                    <Canvas Width="100" Height="100">
                                        <Ellipse Width="100" Height="100"
                                                Stroke="#1976D2" StrokeThickness="4" Fill="Transparent"/>
                                        <Line X1="50" Y1="50" X2="50" Y2="20" 
                                              Stroke="#1976D2" StrokeThickness="3"/>
                                        <Line X1="50" Y1="50" X2="70" Y2="50" 
                                              Stroke="#1976D2" StrokeThickness="3"/>
                                        <Ellipse Canvas.Left="45" Canvas.Top="45" Width="10" Height="10" Fill="#1976D2"/>
                                    </Canvas>
                                </Viewbox>

                                <TextBlock FontSize="13" TextAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap">
                                    <Run FontWeight="Bold">O Universo é um Relógio</Run>
                                    <LineBreak/><LineBreak/>
                                    • Previsibilidade total
                                    <LineBreak/>
                                    • Causa → Efeito (sempre)
                                    <LineBreak/>
                                    • Uma única resposta possível
                                    <LineBreak/>
                                    • Laplace: "Conheça tudo, preveja tudo"
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Seta de Transição -->
                        <StackPanel Grid.Column="1" 
                                  VerticalAlignment="Center"
                                  Margin="10">
                            <TextBlock Text="→" 
                                     FontSize="40"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource SuccessColor}"/>
                            <TextBlock Text="Heisenberg\n1927" 
                                     FontSize="10"
                                     FontWeight="Bold"
                                     TextAlignment="Center"
                                     Foreground="{StaticResource WarningColor}"/>
                        </StackPanel>

                        <!-- Probabilismo (Quântico) -->
                        <Border Grid.Column="2" 
                                Background="#F3E5F5"
                                CornerRadius="10"
                                Padding="25"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="⚛️ Probabilismo Quântico" 
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Dados Visual -->
                                <Viewbox Width="100" Height="100" Margin="0,10">
                                    <Canvas Width="100" Height="100">
                                        <Rectangle Width="60" Height="60" Canvas.Left="20" Canvas.Top="20"
                                                 Stroke="#7B1FA2" StrokeThickness="4" 
                                                 Fill="Transparent" RadiusX="8" RadiusY="8"/>
                                        <Ellipse Canvas.Left="45" Canvas.Top="35" Width="10" Height="10" Fill="#7B1FA2"/>
                                        <Ellipse Canvas.Left="30" Canvas.Top="50" Width="10" Height="10" Fill="#7B1FA2"/>
                                        <Ellipse Canvas.Left="60" Canvas.Top="50" Width="10" Height="10" Fill="#7B1FA2"/>
                                        <Ellipse Canvas.Left="30" Canvas.Top="65" Width="10" Height="10" Fill="#7B1FA2"/>
                                        <Ellipse Canvas.Left="60" Canvas.Top="65" Width="10" Height="10" Fill="#7B1FA2"/>
                                    </Canvas>
                                </Viewbox>

                                <TextBlock FontSize="13" TextAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap">
                                    <Run FontWeight="Bold">O Universo é Probabilístico</Run>
                                    <LineBreak/><LineBreak/>
                                    • Múltiplos resultados possíveis
                                    <LineBreak/>
                                    • Apenas probabilidades
                                    <LineBreak/>
                                    • Medição colapsa o estado
                                    <LineBreak/>
                                    • Heisenberg: Incerteza fundamental
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Princípio da Incerteza -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="❓ Princípio da Incerteza de Heisenberg" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource AccentColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" FontSize="15">
                        Em 1927, <Run FontWeight="Bold">Werner Heisenberg</Run> formulou um dos pilares da Física Quântica:
                    </TextBlock>

                    <!-- Fórmula em Destaque -->
                    <Border Background="#FFF3E0" 
                            BorderBrush="#F57C00"
                            BorderThickness="3"
                            CornerRadius="10"
                            Padding="20"
                            Margin="0,20,0,20">
                        <StackPanel>
                            <TextBlock Text="Δx · Δp ≥ h/4π" 
                                     FontSize="32"
                                     FontWeight="Bold"
                                     Foreground="#E65100"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>
                            <TextBlock FontSize="14" 
                                     TextAlignment="Center"
                                     Foreground="{StaticResource SecondaryColor}">
                                É <Run FontWeight="Bold">impossível</Run> determinar simultaneamente e com precisão 
                                a <Run FontWeight="Bold">posição (Δx)</Run> e o <Run FontWeight="Bold">momento (Δp)</Run> de uma partícula.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFEBEE" 
                            CornerRadius="8"
                            Padding="20">
                        <TextBlock Style="{StaticResource ContentTextStyle}">
                            <Run FontWeight="Bold" FontSize="15">💡 Isso não é uma falha de medição!</Run>
                            <LineBreak/><LineBreak/>
                            É uma <Run FontWeight="SemiBold" Foreground="#E74C3C">característica intrínseca da natureza</Run>. 
                            A própria tentativa de medir uma partícula 
                            <Run FontWeight="Bold">muda seu estado</Run>, 
                            pois o ato de observação <Run FontWeight="Bold">interfere com o observado</Run>.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Tabela Comparativa -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📊 Comparação Conceitual" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <!-- Header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource LightGray}" 
                                Padding="12" CornerRadius="8,0,0,0">
                            <TextBlock Text="Conceito" FontWeight="Bold" FontSize="14"/>
                        </Border>
                        <Border Grid.Column="1" Background="#E3F2FD" Padding="12">
                            <TextBlock Text="🏛️ Física Clássica" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                        </Border>
                        <Border Grid.Column="2" Background="#F3E5F5" 
                                Padding="12" CornerRadius="0,8,0,0">
                            <TextBlock Text="⚛️ Física Quântica" FontWeight="Bold" FontSize="14" Foreground="#7B1FA2"/>
                        </Border>
                    </Grid>

                    <!-- Linhas da Tabela -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Comportamento" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Determinístico — futuro previsível" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Probabilístico — apenas probabilidades" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Partículas" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Posição e velocidade definidas" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Função de onda (probabilidade)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Medição" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Não altera o sistema" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Colapsa o estado quântico" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Modelo Matemático" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Equações de trajetória" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Equação de Schrödinger" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="0,0,0,8">
                            <TextBlock Text="Interpretação" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="O universo é um relógio perfeito" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1" CornerRadius="0,0,8,0">
                            <TextBlock Text="O universo é probabilístico" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Relação com Computação Quântica -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="💻 Relação com a Computação Quântica" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource WarningColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <UniformGrid Columns="2" Rows="1">
                        <!-- Bit Clássico -->
                        <Border Background="#E3F2FD" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="💾 Bit Clássico" 
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#1976D2"
                                         Margin="0,0,0,15"/>
                                <TextBlock Style="{StaticResource ContentTextStyle}">
                                    • Estado <Run FontWeight="SemiBold">determinístico</Run>
                                    <LineBreak/>
                                    • Sempre 0 OU 1
                                    <LineBreak/>
                                    • Uma única resposta definida
                                    <LineBreak/>
                                    • Previsível e linear
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Qubit -->
                        <Border Background="#F3E5F5" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="⚛️ Qubit" 
                                         FontSize="18"
                                         FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         Margin="0,0,0,15"/>
                                <TextBlock Style="{StaticResource ContentTextStyle}">
                                    • Estado <Run FontWeight="SemiBold">probabilístico</Run>
                                    <LineBreak/>
                                    • Superposição: 0 E 1 simultaneamente
                                    <LineBreak/>
                                    • Colapsa ao ser medido
                                    <LineBreak/>
                                    • <Run FontWeight="Bold">Incerteza de Heisenberg</Run> é o motor da superposição!
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Conclusão Filosófica -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E3F2FD" Offset="0"/>
                        <GradientStop Color="#F3E5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="💭 Reflexão Final" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="25"
                            BorderBrush="{StaticResource QuantumColor}"
                            BorderThickness="2">
                        <TextBlock TextWrapping="Wrap" 
                                 TextAlignment="Center"
                                 LineHeight="28"
                                 FontSize="16"
                                 Foreground="{StaticResource SecondaryColor}">
                            <Run FontSize="20" Text="✨" />
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#3498DB">
                                A Física Clássica vê o universo como uma máquina.
                            </Run>
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#9B59B6">
                                A Física Quântica o vê como uma dança de possibilidades.
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontStyle="Italic" Foreground="{StaticResource DarkGray}">
                                "E é nessa dança que nasce o poder da Computação Quântica — 
                                um cálculo feito não pela certeza, mas pela harmonia entre as probabilidades."
                            </Run>
                            <LineBreak/>
                            <Run FontSize="20" Text="✨" />
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
