<UserControl x:Class="Quantun_Forge.src.views.FisicaClassica.PascalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#00BCD4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097A7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="💧 Princípio de Pascal - Prensa Hidráulica" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="A pressão aplicada em um fluido confinado é transmitida integralmente para todos os pontos" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Fórmula Principal -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 Princípio de Pascal" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#E0F7FA" BorderBrush="#00ACC1" BorderThickness="3" CornerRadius="8" Padding="20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="F₂/A₂ = F₁/A₁  →  F₂ = F₁ × (A₂/A₁)" 
                                          FontSize="28" 
                                          FontWeight="Bold" 
                                          Foreground="#00838F"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• F₁:" FontWeight="Bold" Foreground="#00BCD4"/>
                                            <Run Text=" Força aplicada (N)"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• A₁:" FontWeight="Bold" Foreground="#00BCD4"/>
                                            <Run Text=" Área do êmbolo menor (m²)"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• F₂:" FontWeight="Bold" Foreground="#00BCD4"/>
                                            <Run Text=" Força resultante (N)"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="#7F8C8D">
                                            <Run Text="• A₂:" FontWeight="Bold" Foreground="#00BCD4"/>
                                            <Run Text=" Área do êmbolo maior (m²)"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Simulação Visual -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎯 Prensa Hidráulica Interativa" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas Principal -->
                        <Border Background="#263238" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="400"
                                Margin="0,0,0,15">
                            <Canvas x:Name="CanvasPascal" ClipToBounds="True">
                                <!-- Fundo -->
                                <Rectangle Fill="#37474F" Width="800" Height="400"/>

                                <!-- Base da prensa -->
                                <Rectangle Fill="#455A64" Width="700" Height="30" Canvas.Left="50" Canvas.Top="350"/>

                                <!-- Recipiente do fluido (tubo em U) -->
                                <!-- Tubo esquerdo (menor) -->
                                <Rectangle x:Name="TuboEsquerdo" Fill="#546E7A" Width="80" Height="200" Canvas.Left="100" Canvas.Top="150" Stroke="#37474F" StrokeThickness="3"/>

                                <!-- Base conectora -->
                                <Rectangle Fill="#546E7A" Width="500" Height="40" Canvas.Left="100" Canvas.Top="310" Stroke="#37474F" StrokeThickness="3"/>

                                <!-- Tubo direito (maior) -->
                                <Rectangle x:Name="TuboDireito" Fill="#546E7A" Width="160" Height="200" Canvas.Left="520" Canvas.Top="150" Stroke="#37474F" StrokeThickness="3"/>

                                <!-- Fluido hidráulico (água/óleo) -->
                                <Rectangle x:Name="FluidoEsquerdo" Fill="#29B6F6" Width="74" Height="190" Canvas.Left="103" Canvas.Top="157" Opacity="0.8">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#0277BD" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <Rectangle x:Name="FluidoBase" Fill="#29B6F6" Width="494" Height="34" Canvas.Left="103" Canvas.Top="313" Opacity="0.8"/>

                                <Rectangle x:Name="FluidoDireito" Fill="#29B6F6" Width="154" Height="190" Canvas.Left="523" Canvas.Top="157" Opacity="0.8">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#0277BD" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Êmbolo esquerdo (menor) -->
                                <Rectangle x:Name="EmboloEsquerdo" Fill="#FF5722" Width="74" Height="25" Canvas.Left="103" Canvas.Top="125" Stroke="#BF360C" StrokeThickness="2">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#FF5722" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Haste do êmbolo esquerdo -->
                                <Rectangle Fill="#E64A19" Width="10" Height="80" Canvas.Left="135" Canvas.Top="45"/>

                                <!-- Força aplicada (seta para baixo) -->
                                <Line x:Name="SetaForca1"
                                     X1="140" Y1="20"
                                     X2="140" Y2="40"
                                     Stroke="#FFEB3B"
                                     StrokeThickness="5"
                                     Visibility="Collapsed">
                                    <Line.Effect>
                                        <DropShadowEffect Color="#FFEB3B" BlurRadius="15" ShadowDepth="0"/>
                                    </Line.Effect>
                                </Line>
                                <Polygon x:Name="PontaSetaForca1"
                                        Points="140,40 135,30 145,30"
                                        Fill="#FFEB3B"
                                        Visibility="Collapsed">
                                    <Polygon.Effect>
                                        <DropShadowEffect Color="#FFEB3B" BlurRadius="15" ShadowDepth="0"/>
                                    </Polygon.Effect>
                                </Polygon>

                                <!-- Label F1 -->
                                <Border Background="#000000" Opacity="0.8" CornerRadius="5" Padding="8,4" Canvas.Left="90" Canvas.Top="5" Visibility="Collapsed" x:Name="LabelF1Border">
                                    <TextBlock x:Name="LabelF1" Text="F₁ = 100 N" FontSize="13" FontWeight="Bold" Foreground="#FFEB3B"/>
                                </Border>

                                <!-- Êmbolo direito (maior) -->
                                <Rectangle x:Name="EmboloDireito" Fill="#4CAF50" Width="154" Height="25" Canvas.Left="523" Canvas.Top="125" Stroke="#2E7D32" StrokeThickness="2">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Haste do êmbolo direito -->
                                <Rectangle Fill="#388E3C" Width="15" Height="60" Canvas.Left="593" Canvas.Top="65"/>

                                <!-- Carga levantada -->
                                <Rectangle x:Name="CargaLevantada" Fill="#9E9E9E" Width="120" Height="50" Canvas.Left="540" Canvas.Top="15" Stroke="#616161" StrokeThickness="2">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Peso da carga -->
                                <TextBlock Text="🏋️" FontSize="32" Canvas.Left="570" Canvas.Top="20"/>

                                <!-- Força resultante (seta para cima) -->
                                <Line x:Name="SetaForca2"
                                     X1="600" Y1="15"
                                     X2="600" Y2="55"
                                     Stroke="#00E676"
                                     StrokeThickness="6"
                                     Visibility="Collapsed">
                                    <Line.Effect>
                                        <DropShadowEffect Color="#00E676" BlurRadius="20" ShadowDepth="0"/>
                                    </Line.Effect>
                                </Line>
                                <Polygon x:Name="PontaSetaForca2"
                                        Points="600,15 595,25 605,25"
                                        Fill="#00E676"
                                        Visibility="Collapsed">
                                    <Polygon.Effect>
                                        <DropShadowEffect Color="#00E676" BlurRadius="20" ShadowDepth="0"/>
                                    </Polygon.Effect>
                                </Polygon>

                                <!-- Label F2 -->
                                <Border Background="#000000" Opacity="0.8" CornerRadius="5" Padding="8,4" Canvas.Left="620" Canvas.Top="25" Visibility="Collapsed" x:Name="LabelF2Border">
                                    <TextBlock x:Name="LabelF2" Text="F₂ = 400 N" FontSize="14" FontWeight="Bold" Foreground="#00E676"/>
                                </Border>

                                <!-- Labels das áreas -->
                                <Border Background="#37474F" Opacity="0.9" CornerRadius="5" Padding="8,4" Canvas.Left="100" Canvas.Top="360">
                                    <TextBlock x:Name="LabelA1" Text="A₁ = 0.01 m²" FontSize="11" Foreground="#FFB74D"/>
                                </Border>

                                <Border Background="#37474F" Opacity="0.9" CornerRadius="5" Padding="8,4" Canvas.Left="560" Canvas.Top="360">
                                    <TextBlock x:Name="LabelA2" Text="A₂ = 0.04 m²" FontSize="11" Foreground="#81C784"/>
                                </Border>

                                <!-- Ganho mecânico -->
                                <Border x:Name="GanhoMecanico"
                                       Background="#FF6F00" 
                                       Opacity="0.95"
                                       CornerRadius="8" 
                                       Padding="15,10"
                                       Canvas.Left="300"
                                       Canvas.Top="20"
                                       Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="⚙️ GANHO MECÂNICO" 
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtGanhoMecanico" 
                                                  Text="4x" 
                                                  FontSize="24"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Info da pressão -->
                                <Border Background="#000000" 
                                       Opacity="0.85" 
                                       CornerRadius="8" 
                                       Padding="12"
                                       Canvas.Right="10"
                                       Canvas.Top="10"
                                       Visibility="Collapsed"
                                       x:Name="InfoPressao">
                                    <StackPanel>
                                        <TextBlock Text="💧 Pressão no Fluido" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"
                                                  Foreground="#00BCD4"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtPressao" 
                                                  Text="P = 10000 Pa" 
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  Foreground="#29B6F6"
                                                  Margin="0,0,0,3"/>
                                        <TextBlock Text="(mesma em todo fluido)" 
                                                  FontSize="9"
                                                  Foreground="#B0BEC5"/>
                                    </StackPanel>
                                </Border>
                            </Canvas>
                        </Border>

                        <!-- Legenda -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Fill="#FF5722" Width="20" Height="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Êmbolo menor" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Fill="#4CAF50" Width="20" Height="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Êmbolo maior" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Fill="#29B6F6" Width="20" Height="12" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.8"/>
                                <TextBlock Text="Fluido hidráulico" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Polygon Points="0,6 10,6 8,2 10,6 8,10" Fill="#FFEB3B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Forças" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Resultado Detalhado -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Análise do Sistema" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Cálculo passo a passo -->
                        <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="🔢 Cálculo Detalhado:" FontSize="13" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                <TextBlock x:Name="TxtPassoAPasso" 
                                          TextWrapping="Wrap"
                                          FontSize="12" 
                                          Foreground="#2C3E50" 
                                          LineHeight="22"
                                          FontFamily="Consolas"
                                          Text="Configure os valores e clique em 'Calcular Sistema' para ver o resultado"/>
                            </StackPanel>
                        </Border>

                        <!-- Resultados -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#E0F7FA" BorderBrush="#00BCD4" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="💪 Força Resultante:" FontSize="13" FontWeight="Bold" Foreground="#00838F" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtForcaResultado" 
                                              Text="F₂ = ?" 
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="#00695C"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtComparacaoForca" 
                                              TextWrapping="Wrap"
                                              FontSize="10" 
                                              Foreground="#7F8C8D"
                                              Text="Aguardando cálculo..."/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#FFF9C4" BorderBrush="#FBC02D" BorderThickness="2" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚙️ Ganho Mecânico:" FontSize="13" FontWeight="Bold" Foreground="#F57F17" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtGanhoResultado" 
                                              Text="GM = ?" 
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="#E65100"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtExplicacaoGanho" 
                                              TextWrapping="Wrap"
                                              FontSize="10" 
                                              Foreground="#7F8C8D"
                                              Text="Quantas vezes a força é multiplicada"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Princípio -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Entendendo o Princípio de Pascal" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#E1F5FE" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="🔑 Princípio Fundamental:" FontSize="13" FontWeight="Bold" Foreground="#0277BD" Margin="0,0,0,8"/>
                                <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="20">
                                    <Run Text="A pressão aplicada em um ponto de um fluido incompressível e em equilíbrio é transmitida INTEGRALMENTE para todos os pontos do fluido."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#FFEBEE" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="📏 Mesma Pressão" FontSize="13" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="11" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="18">
                                        <Run FontWeight="Bold">P₁ = P₂</Run>
                                        <LineBreak/>
                                        <Run Text="A pressão é igual em ambos os êmbolos, independente do tamanho!"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚡ Multiplicação de Força" FontSize="13" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="11" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="18">
                                        <Run FontWeight="Bold">F₂ = F₁ × (A₂/A₁)</Run>
                                        <LineBreak/>
                                        <Run Text="Área maior = Força maior!"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Configurações" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Força Aplicada -->
                        <TextBlock Text="Força Aplicada F₁ (N):" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <Slider x:Name="SliderForca1"
                               Minimum="10"
                               Maximum="1000"
                               Value="100"
                               TickFrequency="10"
                               ValueChanged="Sliders_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtForca1Slider" 
                                  Text="100 N" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Área 1 -->
                        <TextBlock Text="Área do Êmbolo Menor A₁ (cm²):" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,5"/>
                        <Slider x:Name="SliderArea1"
                               Minimum="10"
                               Maximum="200"
                               Value="100"
                               TickFrequency="10"
                               ValueChanged="Sliders_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtArea1Slider" 
                                  Text="100 cm² (0.01 m²)" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Área 2 -->
                        <TextBlock Text="Área do Êmbolo Maior A₂ (cm²):" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,5"/>
                        <Slider x:Name="SliderArea2"
                               Minimum="100"
                               Maximum="1000"
                               Value="400"
                               TickFrequency="50"
                               ValueChanged="Sliders_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtArea2Slider" 
                                  Text="400 cm² (0.04 m²)" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Botões -->
                        <Button Content="💧 Calcular Sistema" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="BtnCalcular_Click"/>

                        <Button Content="🔄 Resetar" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Click="BtnResetar_Click"/>

                        <Separator Background="#E0E0E0" Margin="0,15"/>

                        <!-- Cenários -->
                        <TextBlock Text="🔧 Cenários Prontos:" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,10"/>

                        <Button Content="🚗 Elevador de Carro" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#FF5722"
                               Click="BtnElevadorCarro_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="✈️ Sistema de Freio" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#2196F3"
                               Click="BtnSistemaFreio_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="🏋️ Macaco Hidráulico" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#4CAF50"
                               Click="BtnMacacoHidraulico_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="⚙️ Grande Multiplicação" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9C27B0"
                               Click="BtnGrandeMultiplicacao_Click"
                               FontSize="11"
                               Padding="10,8"/>
                    </StackPanel>
                </Border>

                <!-- Pressão -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Pressão no Sistema" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

