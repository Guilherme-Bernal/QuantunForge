<UserControl x:Class="Quantun_Forge.src.views.FisicaClassica.Arquimedes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#03A9F4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#03A9F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0288D1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonFluidoStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="🌊 Princípio de Arquimedes - Empuxo" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Todo corpo imerso em um fluido sofre uma força vertical para cima igual ao peso do fluido deslocado" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Fórmula Principal -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 A Lei do Empuxo" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#E1F5FE" BorderBrush="#0288D1" BorderThickness="3" CornerRadius="8" Padding="20">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="E = d_fluido × V_imerso × g" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#01579B"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• E:" FontWeight="Bold" Foreground="#03A9F4"/>
                                            <Run Text=" Empuxo (N)"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• d_fluido:" FontWeight="Bold" Foreground="#03A9F4"/>
                                            <Run Text=" Densidade do fluido (kg/m³)"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5">
                                            <Run Text="• V_imerso:" FontWeight="Bold" Foreground="#03A9F4"/>
                                            <Run Text=" Volume imerso (m³)"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="#7F8C8D">
                                            <Run Text="• g:" FontWeight="Bold" Foreground="#03A9F4"/>
                                            <Run Text=" 9.8 m/s²"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Simulação Visual -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎯 Simulação Interativa" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas Principal -->
                        <Border Background="#87CEEB" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="450"
                                Margin="0,0,0,15">
                            <Canvas x:Name="CanvasArquimedes" ClipToBounds="True" Width="800">
                                <!-- Céu/Ar -->
                                <Rectangle Fill="#E3F2FD" Width="800" Height="150"/>

                                <!-- Água/Fluido -->
                                <Rectangle x:Name="RectanguloFluido" Fill="#4FC3F7" Width="800" Height="300" Canvas.Top="150" Opacity="0.7">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#0288D1" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Linha da superfície da água -->
                                <Line X1="0" Y1="150" X2="800" Y2="150" Stroke="#0277BD" StrokeThickness="3" StrokeDashArray="10,5"/>

                                <!-- Label do fluido -->
                                <Border Background="#01579B" Opacity="0.8" CornerRadius="5" Padding="10,5" Canvas.Left="10" Canvas.Top="170">
                                    <StackPanel>
                                        <TextBlock x:Name="LabelFluido" Text="💧 Água" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock x:Name="LabelDensidadeFluido" Text="ρ = 1000.0 kg/m³" FontSize="10" Foreground="#B3E5FC"/>
                                    </StackPanel>
                                </Border>

                                <!-- Objeto submerso -->
                                <Rectangle x:Name="ObjetoSubmerso" 
                                          Fill="#FF6F00" 
                                          Width="120" 
                                          Height="120" 
                                          Canvas.Left="340" 
                                          Canvas.Top="200"
                                          Stroke="#E65100"
                                          StrokeThickness="3">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="10" Opacity="0.4"/>
                                    </Rectangle.Effect>
                                </Rectangle>

                                <!-- Emoji do objeto -->
                                <TextBlock x:Name="EmojiObjeto" Text="📦" FontSize="64" Canvas.Left="368" Canvas.Top="218"/>

                                <!-- Peso do objeto (seta para baixo) -->
                                <Line x:Name="SetaPeso"
                                     X1="400" Y1="325"
                                     X2="400" Y2="390"
                                     Stroke="#F44336"
                                     StrokeThickness="6"
                                     Visibility="Collapsed">
                                    <Line.Effect>
                                        <DropShadowEffect Color="#F44336" BlurRadius="15" ShadowDepth="0"/>
                                    </Line.Effect>
                                </Line>
                                <Polygon x:Name="PontaSetaPeso"
                                        Points="400,390 395,380 405,380"
                                        Fill="#F44336"
                                        Visibility="Collapsed">
                                    <Polygon.Effect>
                                        <DropShadowEffect Color="#F44336" BlurRadius="15" ShadowDepth="0"/>
                                    </Polygon.Effect>
                                </Polygon>

                                <!-- Label Peso -->
                                <Border x:Name="LabelPesoBorder" Background="#000000" Opacity="0.85" CornerRadius="5" Padding="8,4" Canvas.Left="420" Canvas.Top="350" Visibility="Collapsed">
                                    <TextBlock x:Name="LabelPeso" Text="P = 588 N" FontSize="14" FontWeight="Bold" Foreground="#F44336"/>
                                </Border>

                                <!-- Empuxo (seta para cima) -->
                                <Line x:Name="SetaEmpuxo"
                                     X1="400" Y1="195"
                                     X2="400" Y2="120"
                                     Stroke="#4CAF50"
                                     StrokeThickness="7"
                                     Visibility="Collapsed">
                                    <Line.Effect>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="20" ShadowDepth="0"/>
                                    </Line.Effect>
                                </Line>
                                <Polygon x:Name="PontaSetaEmpuxo"
                                        Points="400,120 395,130 405,130"
                                        Fill="#4CAF50"
                                        Visibility="Collapsed">
                                    <Polygon.Effect>
                                        <DropShadowEffect Color="#4CAF50" BlurRadius="20" ShadowDepth="0"/>
                                    </Polygon.Effect>
                                </Polygon>

                                <!-- Label Empuxo -->
                                <Border x:Name="LabelEmpuxoBorder" Background="#000000" Opacity="0.85" CornerRadius="5" Padding="8,4" Canvas.Left="420" Canvas.Top="150" Visibility="Collapsed">
                                    <TextBlock x:Name="LabelEmpuxo" Text="E = 706 N" FontSize="14" FontWeight="Bold" Foreground="#4CAF50"/>
                                </Border>

                                <!-- Força resultante -->
                                <Border x:Name="ResultadoBorder"
                                       Background="#9C27B0" 
                                       Opacity="0.95"
                                       CornerRadius="8" 
                                       Padding="12,8"
                                       Canvas.Left="500"
                                       Canvas.Top="240"
                                       Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock x:Name="TxtResultadoVisual" 
                                                  Text="⬆️ FLUTUA" 
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtForcaResultante" 
                                                  Text="F_res = +118 N" 
                                                  FontSize="13"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Volume deslocado -->
                                <Rectangle x:Name="VolumeDeslocado" 
                                          Fill="#FFEB3B" 
                                          Width="120" 
                                          Height="120" 
                                          Canvas.Left="340" 
                                          Canvas.Top="200"
                                          Opacity="0.3"
                                          Visibility="Collapsed"
                                          Stroke="#FBC02D"
                                          StrokeThickness="2"
                                          StrokeDashArray="5,3"/>

                                <!-- Label volume deslocado -->
                                <Border x:Name="LabelVolumeBorder" Background="#F57F17" Opacity="0.9" CornerRadius="5" Padding="8,4" Canvas.Left="240" Canvas.Top="250" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Volume Deslocado:" FontSize="10" Foreground="White"/>
                                        <TextBlock x:Name="LabelVolumeDeslocado" Text="0.06 m³" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <!-- Info das forças -->
                                <Border Background="#000000" 
                                       Opacity="0.85" 
                                       CornerRadius="8" 
                                       Padding="15"
                                       Canvas.Right="15"
                                       Canvas.Top="15"
                                       Visibility="Collapsed"
                                       x:Name="InfoForcas">
                                    <StackPanel>
                                        <TextBlock Text="⚖️ Balanço de Forças" 
                                                  FontSize="12" 
                                                  FontWeight="Bold"
                                                  Foreground="#03A9F4"
                                                  Margin="0,0,0,8"/>
                                        <TextBlock x:Name="TxtPesoInfo" 
                                                  Text="Peso: 588 N ⬇️" 
                                                  FontSize="11"
                                                  Foreground="#F44336"
                                                  Margin="0,0,0,3"/>
                                        <TextBlock x:Name="TxtEmpuxoInfo" 
                                                  Text="Empuxo: 706 N ⬆️" 
                                                  FontSize="11"
                                                  Foreground="#4CAF50"
                                                  Margin="0,0,0,3"/>
                                        <Separator Background="#424242" Margin="0,5"/>
                                        <TextBlock x:Name="TxtResultanteInfo" 
                                                  Text="Resultante: +118 N ⬆️" 
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  Foreground="#FFD54F"/>
                                    </StackPanel>
                                </Border>

                                <!-- Bolhas (efeito decorativo) -->
                                <Ellipse Fill="White" Width="15" Height="15" Canvas.Left="250" Canvas.Top="380" Opacity="0.6"/>
                                <Ellipse Fill="White" Width="12" Height="12" Canvas.Left="280" Canvas.Top="350" Opacity="0.5"/>
                                <Ellipse Fill="White" Width="18" Height="18" Canvas.Left="520" Canvas.Top="370" Opacity="0.6"/>
                                <Ellipse Fill="White" Width="10" Height="10" Canvas.Left="550" Canvas.Top="340" Opacity="0.5"/>
                                <Ellipse Fill="White" Width="14" Height="14" Canvas.Left="180" Canvas.Top="390" Opacity="0.6"/>
                            </Canvas>
                        </Border>

                        <!-- Legenda -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Polygon Points="0,10 10,10 8,5 10,10 8,15" Fill="#F44336" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Peso (P)" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Polygon Points="0,5 10,5 8,10 10,5 8,0" Fill="#4CAF50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Empuxo (E)" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Fill="#FF6F00" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Objeto" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Fill="#FFEB3B" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.5"/>
                                <TextBlock Text="Volume deslocado" FontSize="11" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Resultado Detalhado -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Análise Completa" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Cálculo passo a passo -->
                        <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="🔢 Cálculo Detalhado:" FontSize="13" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                <TextBlock x:Name="TxtPassoAPasso" 
                                          TextWrapping="Wrap"
                                          FontSize="12" 
                                          Foreground="#2C3E50" 
                                          LineHeight="22"
                                          FontFamily="Consolas"
                                          Text="Configure os valores e clique em 'Analisar Flutuação' para ver o resultado"/>
                            </StackPanel>
                        </Border>

                        <!-- Resultados -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="⚓ Peso do Objeto:" FontSize="13" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtPesoResultado" 
                                              Text="P = ?" 
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="#B71C1C"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtComparacaoPeso" 
                                              TextWrapping="Wrap"
                                              FontSize="10" 
                                              Foreground="#7F8C8D"
                                              Text="Força para baixo"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="🌊 Empuxo:" FontSize="13" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtEmpuxoResultado" 
                                              Text="E = ?" 
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="#1B5E20"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtComparacaoEmpuxo" 
                                              TextWrapping="Wrap"
                                              FontSize="10" 
                                              Foreground="#7F8C8D"
                                              Text="Força para cima"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Conclusão -->
                        <Border Background="#E1F5FE" BorderBrush="#03A9F4" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="🎯 Conclusão:" FontSize="13" FontWeight="Bold" Foreground="#0277BD" Margin="0,0,0,8"/>
                                <TextBlock x:Name="TxtConclusao" 
                                          Text="Aguardando análise..." 
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Foreground="#01579B"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Condições de Flutuação -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Condições de Flutuação" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="⬆️ FLUTUA" FontSize="14" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="20">
                                        <Run FontWeight="Bold">E > P</Run>
                                        <LineBreak/>
                                        <Run Text="Empuxo maior que o peso - objeto sobe à superfície"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Background="#FFF9C4" CornerRadius="5" Padding="15" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="⚖️ EQUILÍBRIO" FontSize="14" FontWeight="Bold" Foreground="#F57F17" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="20">
                                        <Run FontWeight="Bold">E = P</Run>
                                        <LineBreak/>
                                        <Run Text="Empuxo igual ao peso - objeto permanece em qualquer posição"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Background="#FFEBEE" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="⬇️ AFUNDA" FontSize="14" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,8"/>
                                    <TextBlock FontSize="12" Foreground="#2C3E50" TextWrapping="Wrap" LineHeight="20">
                                        <Run FontWeight="Bold">E &lt; P</Run>
                                        <LineBreak/>
                                        <Run Text="Empuxo menor que o peso - objeto afunda"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles do Objeto -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Configurações do Objeto" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Massa do objeto -->
                        <TextBlock Text="Massa do Objeto (kg):" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                        <Slider x:Name="SliderMassaObjeto"
                               Minimum="10"
                               Maximum="200"
                               Value="60"
                               TickFrequency="10"
                               ValueChanged="Sliders_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtMassaObjetoSlider" 
                                  Text="60 kg" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Volume do objeto -->
                        <TextBlock Text="Volume do Objeto (m³):" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,5"/>
                        <Slider x:Name="SliderVolumeObjeto"
                               Minimum="0.01"
                               Maximum="0.2"
                               Value="0.06"
                               TickFrequency="0.01"
                               ValueChanged="Sliders_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtVolumeObjetoSlider" 
                                  Text="0.06 m³" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Densidade calculada -->
                        <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Densidade do Objeto:" FontSize="11" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtDensidadeObjeto" 
                                          Text="1000.00 kg/m³" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          Foreground="#0D47A1"
                                          HorizontalAlignment="Center"
                                          Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Botões -->
                        <Button Content="🌊 Analisar Flutuação" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="BtnAnalisar_Click"/>

                        <Button Content="🔄 Resetar" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Click="BtnResetar_Click"/>
                    </StackPanel>
                </Border>

                <!-- Controles do Fluido -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💧 Seleção de Fluidos" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Escolha um fluido:" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>

                        <!-- Botões de Fluidos -->
                        <Button Content="💧 Água" 
                               Style="{StaticResource ButtonFluidoStyle}"
                               Click="BtnAgua_Click"/>

                        <Button Content="🌊 Água do Mar" 
                               Style="{StaticResource ButtonFluidoStyle}"
                               Click="BtnAguaMar_Click"/>

                        <Button Content="🛢️ Óleo" 
                               Style="{StaticResource ButtonFluidoStyle}"
                               Click="BtnOleo_Click"/>

