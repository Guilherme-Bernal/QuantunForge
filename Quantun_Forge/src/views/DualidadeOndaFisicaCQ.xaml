<UserControl x:Class="Quantun_Forge.src.views.DualidadeOndaFisicaCQ"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Cores do Tema -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="ClassicalColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="QuantumColor" Color="#9B59B6"/>

        <!-- Animação de Fade In -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <!-- Animação de Onda -->
        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="X1"
                           From="0" To="100" Duration="0:0:2"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Estilo para Cards -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Botões de Simulação -->
        <Style x:Key="SimulationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#2980B9" BlurRadius="10" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F618D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Badge -->
        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <!-- Estilo para Títulos -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Estilo para Conteúdo -->
        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#FAFAFA">
        <StackPanel MaxWidth="1200" Margin="40,30">

            <!-- Header Principal -->
            <Border Style="{StaticResource CardStyle}" 
                    Background="White"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Título com Ícone -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Viewbox Width="50" Height="50" Margin="0,0,15,0">
                            <Canvas Width="100" Height="100">
                                <!-- Ícone de Onda + Partícula -->
                                <Path Data="M 10,50 Q 25,20 40,50 T 70,50 T 90,50" 
                                      Stroke="#3498DB" StrokeThickness="4" Fill="Transparent"/>
                                <Ellipse Canvas.Left="75" Canvas.Top="40" Width="20" Height="20"
                                         Fill="#9B59B6"/>
                                <Path Data="M 50,30 L 50,70 M 30,50 L 70,50" 
                                      Stroke="#E74C3C" StrokeThickness="3"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="🌊 Dualidade Onda-Partícula" 
                                     Style="{StaticResource SectionTitleStyle}"
                                     Margin="0"/>
                            <TextBlock Text="A Natureza Dual da Luz e da Matéria" 
                                     FontSize="16"
                                     Foreground="{StaticResource DarkGray}"
                                     FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Badges -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Style="{StaticResource BadgeStyle}" Background="#E3F2FD">
                            <TextBlock Text="🏛️ Física Clássica" Foreground="#1976D2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#F3E5F5">
                            <TextBlock Text="⚛️ Física Quântica" Foreground="#7B1FA2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#E8F5E9">
                            <TextBlock Text="🔬 Experimento" Foreground="#2E7D32" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Separator Background="{StaticResource LightGray}" Margin="0,15,0,20"/>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource ContentTextStyle}" FontSize="15">
                        Durante séculos, acreditou-se que o universo era composto por 
                        <Run FontWeight="SemiBold" Foreground="#3498DB">entidades distintas</Run>: 
                        as ondas, que se propagam através de um meio, e as partículas, corpos materiais com posição e massa bem definidas.
                        <LineBreak/><LineBreak/>
                        Mas conforme os experimentos se tornaram mais precisos, 
                        <Run FontWeight="SemiBold" Foreground="#E74C3C">a fronteira entre onda e partícula começou a desmoronar</Run>. 
                        A luz e a matéria revelaram uma natureza dual e complementar que desafiou toda a física conhecida.
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Seção de Comparação Visual Interativa -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="🎮 Simulação Interativa: Visualize a Dualidade" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <!-- Controles de Simulação -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <Button x:Name="BtnMostrarClassico"
                                Content="🏛️ Visão Clássica"
                                Style="{StaticResource SimulationButtonStyle}"
                                Click="BtnMostrarClassico_Click"/>
                        <Button x:Name="BtnMostrarQuantico"
                                Content="⚛️ Visão Quântica"
                                Style="{StaticResource SimulationButtonStyle}"
                                Background="{StaticResource QuantumColor}"
                                Click="BtnMostrarQuantico_Click"/>
                        <Button x:Name="BtnComparacao"
                                Content="⚖️ Comparação Lado a Lado"
                                Style="{StaticResource SimulationButtonStyle}"
                                Background="{StaticResource SuccessColor}"
                                Click="BtnComparacao_Click"/>
                    </StackPanel>

                    <!-- Área de Visualização -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            MinHeight="400">
                        <Grid>
                            <!-- Visão Clássica -->
                            <StackPanel x:Name="PainelClassico" Visibility="Collapsed">
                                <TextBlock Text="🏛️ Comportamento Clássico" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource ClassicalColor}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <Grid Height="300">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Fonte de Luz -->
                                    <StackPanel Grid.Column="0" 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <Ellipse Width="60" Height="60" 
                                                Fill="#FDD835"
                                                Stroke="#F57F17"
                                                StrokeThickness="3">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="#FDD835" BlurRadius="20" ShadowDepth="0"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <TextBlock Text="Fonte de Luz" 
                                                 FontSize="12"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,10,0,0"/>
                                    </StackPanel>

                                    <!-- Propagação Ondulatória -->
                                    <Canvas Grid.Column="1">
                                        <!-- Ondas -->
                                        <Path x:Name="WaveClassical1"
                                              Data="M 0,100 Q 40,60 80,100 T 160,100 T 240,100 T 320,100"
                                              Stroke="#3498DB" StrokeThickness="3" Fill="Transparent"
                                              Canvas.Top="50"/>
                                        <Path x:Name="WaveClassical2"
                                              Data="M 0,100 Q 40,60 80,100 T 160,100 T 240,100 T 320,100"
                                              Stroke="#3498DB" StrokeThickness="3" Fill="Transparent"
                                              Canvas.Top="100" Opacity="0.6"/>
                                        <Path x:Name="WaveClassical3"
                                              Data="M 0,100 Q 40,60 80,100 T 160,100 T 240,100 T 320,100"
                                              Stroke="#3498DB" StrokeThickness="3" Fill="Transparent"
                                              Canvas.Top="150" Opacity="0.4"/>

                                        <!-- Descrição -->
                                        <Border Canvas.Left="100" Canvas.Top="200"
                                                Background="White"
                                                CornerRadius="8"
                                                Padding="15">
                                            <TextBlock FontSize="13">
                                                <Run FontWeight="Bold" Text="Comportamento:"/>
                                                <LineBreak/>
                                                • Propagação contínua
                                                <LineBreak/>
                                                • Energia distribuída
                                                <LineBreak/>
                                                • Interferência previsível
                                            </TextBlock>
                                        </Border>
                                    </Canvas>
                                </Grid>

                                <!-- Limitação -->
                                <Border Background="#FFEBEE" 
                                        BorderBrush="#E74C3C"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="⚠️ Limitação da Visão Clássica" 
                                                 FontWeight="Bold"
                                                 FontSize="14"
                                                 Foreground="#C62828"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Style="{StaticResource ContentTextStyle}">
                                            <Run Text="Não explica:" FontWeight="SemiBold"/>
                                            <LineBreak/>
                                            • Efeito fotoelétrico (luz arranca elétrons apenas com frequência alta)
                                            <LineBreak/>
                                            • Espectros atômicos discretos
                                            <LineBreak/>
                                            • Catástrofe do ultravioleta no corpo negro
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Visão Quântica -->
                            <StackPanel x:Name="PainelQuantico" Visibility="Collapsed">
                                <TextBlock Text="⚛️ Comportamento Quântico" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource QuantumColor}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <Grid Height="300">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Fonte de Fótons -->
                                    <StackPanel Grid.Column="0" 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <Ellipse Width="60" Height="60" 
                                                Fill="#AB47BC"
                                                Stroke="#6A1B9A"
                                                StrokeThickness="3">
                                            <Ellipse.Effect>
                                                <DropShadowEffect Color="#AB47BC" BlurRadius="20" ShadowDepth="0"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <TextBlock Text="Fonte de Fótons" 
                                                 FontSize="12"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,10,0,0"/>
                                    </StackPanel>

                                    <!-- Fótons Discretos -->
                                    <Canvas Grid.Column="1">
                                        <!-- Partículas/Fótons -->
                                        <Ellipse x:Name="Photon1" Width="15" Height="15" Fill="#9C27B0" Canvas.Left="50" Canvas.Top="80"/>
                                        <Ellipse x:Name="Photon2" Width="15" Height="15" Fill="#9C27B0" Canvas.Left="120" Canvas.Top="120"/>
                                        <Ellipse x:Name="Photon3" Width="15" Height="15" Fill="#9C27B0" Canvas.Left="190" Canvas.Top="90"/>
                                        <Ellipse x:Name="Photon4" Width="15" Height="15" Fill="#9C27B0" Canvas.Left="260" Canvas.Top="130"/>

                                        <!-- Função de Onda (probabilidade) -->
                                        <Path Data="M 0,100 Q 40,50 80,100 T 160,100 T 240,100 T 320,100"
                                              Stroke="#CE93D8" StrokeThickness="2" 
                                              StrokeDashArray="4,2"
                                              Fill="Transparent"
                                              Canvas.Top="50" Opacity="0.5"/>

                                        <!-- Descrição -->
                                        <Border Canvas.Left="100" Canvas.Top="200"
                                                Background="White"
                                                CornerRadius="8"
                                                Padding="15">
                                            <TextBlock FontSize="13">
                                                <Run FontWeight="Bold" Text="Comportamento:"/>
                                                <LineBreak/>
                                                • Pacotes discretos (quanta)
                                                <LineBreak/>
                                                • E = hf (energia quantizada)
                                                <LineBreak/>
                                                • Probabilidade de detecção
                                            </TextBlock>
                                        </Border>
                                    </Canvas>
                                </Grid>

                                <!-- Avanço -->
                                <Border Background="#E8F5E9" 
                                        BorderBrush="#27AE60"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="✅ O Que a Visão Quântica Explica" 
                                                 FontWeight="Bold"
                                                 FontSize="14"
                                                 Foreground="#1B5E20"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Style="{StaticResource ContentTextStyle}">
                                            <Run Text="Resolve:" FontWeight="SemiBold"/>
                                            <LineBreak/>
                                            • Efeito fotoelétrico (Einstein, 1905)
                                            <LineBreak/>
                                            • Espectros atômicos discretos (Bohr)
                                            <LineBreak/>
                                            • Radiação do corpo negro (Planck)
                                            <LineBreak/>
                                            • Difração de elétrons (de Broglie)
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Comparação Lado a Lado -->
                            <Grid x:Name="PainelComparacao" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Lado Clássico -->
                                <Border Grid.Column="0" 
                                        Background="#E3F2FD"
                                        CornerRadius="10"
                                        Padding="20"
                                        Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="🏛️ Clássica" 
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Foreground="#1976D2"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,15"/>

                                        <!-- Onda Visual -->
                                        <Canvas Height="120" Margin="0,10">
                                            <Path Data="M 0,60 Q 30,20 60,60 T 120,60 T 180,60 T 240,60"
                                                  Stroke="#1976D2" StrokeThickness="3" Fill="Transparent"/>
                                            <TextBlock Text="ONDA" 
                                                     Canvas.Left="90" Canvas.Top="80"
                                                     FontWeight="Bold"
                                                     Foreground="#1976D2"/>
                                        </Canvas>

                                        <Separator Background="#90CAF9" Margin="0,10"/>

                                        <TextBlock FontSize="12" TextWrapping="Wrap" LineHeight="18">
                                            <Run FontWeight="Bold">Natureza:</Run> Apenas onda
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Energia:</Run> Contínua
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Previsão:</Run> Determinística
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Problema:</Run> Não explica efeito fotoelétrico
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Lado Quântico -->
                                <Border Grid.Column="1" 
                                        Background="#F3E5F5"
                                        CornerRadius="10"
                                        Padding="20"
                                        Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="⚛️ Quântica" 
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Foreground="#7B1FA2"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,15"/>

                                        <!-- Onda + Partícula Visual -->
                                        <Canvas Height="120" Margin="0,10">
                                            <Path Data="M 0,60 Q 30,20 60,60 T 120,60 T 180,60 T 240,60"
                                                  Stroke="#CE93D8" StrokeThickness="2" 
                                                  StrokeDashArray="3,2"
                                                  Fill="Transparent" Opacity="0.6"/>
                                            <Ellipse Canvas.Left="50" Canvas.Top="50" Width="20" Height="20" Fill="#7B1FA2"/>
                                            <Ellipse Canvas.Left="110" Canvas.Top="50" Width="20" Height="20" Fill="#7B1FA2"/>
                                            <Ellipse Canvas.Left="170" Canvas.Top="50" Width="20" Height="20" Fill="#7B1FA2"/>
                                            <TextBlock Text="ONDA + PARTÍCULA" 
                                                     Canvas.Left="60" Canvas.Top="85"
                                                     FontWeight="Bold"
                                                     FontSize="10"
                                                     Foreground="#7B1FA2"/>
                                        </Canvas>

                                        <Separator Background="#CE93D8" Margin="0,10"/>

                                        <TextBlock FontSize="12" TextWrapping="Wrap" LineHeight="18">
                                            <Run FontWeight="Bold">Natureza:</Run> Dual (onda E partícula)
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Energia:</Run> Quantizada (E=hf)
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Previsão:</Run> Probabilística
                                            <LineBreak/>
                                            <Run FontWeight="Bold">Solução:</Run> Explica todos os fenômenos
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Experimento da Fenda Dupla -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="🔬 O Experimento da Fenda Dupla" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource AccentColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}">
                        Na versão clássica, <Run FontWeight="SemiBold">Thomas Young</Run> mostrou que ao passar luz por duas fendas, 
                        surgia um padrão de interferência — típico de ondas.
                        <LineBreak/><LineBreak/>
                        Mas quando o experimento foi repetido com <Run FontWeight="SemiBold" Foreground="#9B59B6">elétrons individuais</Run>, 
                        algo extraordinário aconteceu: mesmo emitidos um de cada vez, 
                        os elétrons formavam o mesmo padrão ondulatório com o tempo.
                        <LineBreak/><LineBreak/>
                        Quando um detector é colocado para observar por qual fenda o elétron passa, 
                        <Run FontWeight="SemiBold" Foreground="#E74C3C">o padrão desaparece</Run> — 
                        os elétrons passam a se comportar como partículas clássicas novamente.
                    </TextBlock>

                    <!-- Diagrama Simplificado -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Sem Observação -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Sem Observação" 
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,10"/>
                                <Canvas Height="150" Width="200">
                                    <!-- Fendas -->
                                    <Rectangle Canvas.Left="80" Canvas.Top="40" Width="5" Height="30" Fill="#2C3E50"/>
                                    <Rectangle Canvas.Left="80" Canvas.Top="80" Width="5" Height="30" Fill="#2C3E50"/>

                                    <!-- Padrão de Interferência -->
                                    <Rectangle Canvas.Left="140" Canvas.Top="20" Width="3" Height="10" Fill="#9B59B6"/>
                                    <Rectangle Canvas.Left="140" Canvas.Top="40" Width="3" Height="25" Fill="#9B59B6"/>
                                    <Rectangle Canvas.Left="140" Canvas.Top="70" Width="3" Height="35" Fill="#9B59B6"/>
                                    <Rectangle Canvas.Left="140" Canvas.Top="110" Width="3" Height="20" Fill="#9B59B6"/>

                                    <TextBlock Text="Padrão de\nInterferência" 
                                             Canvas.Left="10" Canvas.Top="60"
                                             FontSize="10"
                                             TextAlignment="Center"/>
                                </Canvas>
                            </StackPanel>

                            <!-- Seta -->
                            <TextBlock Grid.Column="1" 
                                     Text="VS" 
                                     FontSize="20"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"
                                     Margin="20,0"/>

                            <!-- Com Observação -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Com Observação" 
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,10"/>
                                <Canvas Height="150" Width="200">
                                    <!-- Fendas -->
                                    <Rectangle Canvas.Left="80" Canvas.Top="40" Width="5" Height="30" Fill="#2C3E50"/>
                                    <Rectangle Canvas.Left="80" Canvas.Top="80" Width="5" Height="30" Fill="#2C3E50"/>

                                    <!-- Detector -->
                                    <Ellipse Canvas.Left="70" Canvas.Top="50" Width="10" Height="10" Fill="#E74C3C"/>
                                    <Ellipse Canvas.Left="70" Canvas.Top="90" Width="10" Height="10" Fill="#E74C3C"/>

                                    <!-- Padrão de Partículas -->
                                    <Rectangle Canvas.Left="140" Canvas.Top="50" Width="3" Height="25" Fill="#3498DB"/>
                                    <Rectangle Canvas.Left="140" Canvas.Top="90" Width="3" Height="25" Fill="#3498DB"/>

                                    <TextBlock Text="Padrão de\nPartículas" 
                                             Canvas.Left="10" Canvas.Top="60"
                                             FontSize="10"
                                             TextAlignment="Center"/>
                                </Canvas>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Conclusão do Experimento -->
                    <Border Background="#FFF3E0" 
                            BorderBrush="#F57C00"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource ContentTextStyle}">
                            <Run FontWeight="Bold" FontSize="15" Foreground="#E65100">💡 Revelação:</Run>
                            <LineBreak/><LineBreak/>
                            A simples observação altera o resultado. A matéria e a luz não são apenas ondas nem apenas partículas, 
                            mas entidades híbridas cuja natureza depende da interação com o observador.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Tabela Comparativa -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="⚖️ Comparação: Clássico vs Quântico" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <!-- Header da Tabela -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource LightGray}" 
                                Padding="12" CornerRadius="8,0,0,0">
                            <TextBlock Text="Conceito" FontWeight="Bold" FontSize="14"/>
                        </Border>
                        <Border Grid.Column="1" Background="#E3F2FD" Padding="12">
                            <TextBlock Text="🏛️ Física Clássica" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                        </Border>
                        <Border Grid.Column="2" Background="#F3E5F5" 
                                Padding="12" CornerRadius="0,8,0,0">
                            <TextBlock Text="⚛️ Física Quântica" FontWeight="Bold" FontSize="14" Foreground="#7B1FA2"/>
                        </Border>
                    </Grid>

                    <!-- Linhas da Tabela -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Natureza da Luz" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Onda eletromagnética contínua" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Feixes discretos de fótons" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Matéria" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Partículas localizadas" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Comportamento ondulatório (de Broglie)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Energia" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Contínua e proporcional à amplitude" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Quantizada em pacotes E = hf" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Previsibilidade" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Determinística - posição conhecida" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Probabilística - apenas probabilidades" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="0,0,0,8">
                            <TextBlock Text="Medição" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Não altera o sistema" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1" CornerRadius="0,0,8,0">
                            <TextBlock Text="Colapsa o estado quântico" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Conclusão Filosófica -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E3F2FD" Offset="0"/>
                        <GradientStop Color="#F3E5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="💭 Conclusão Filosófica" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="25"
                            BorderBrush="{StaticResource QuantumColor}"
                            BorderThickness="2">
                        <TextBlock TextWrapping="Wrap" 
                                 TextAlignment="Center"
                                 LineHeight="28"
                                 FontSize="16"
                                 Foreground="{StaticResource SecondaryColor}">
                            <Run FontSize="20" Text="✨" />
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#3498DB">
                                A luz e a matéria não são entidades separadas.
                            </Run>
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#9B59B6">
                                Elas são a mesma essência, vista de dois modos complementares: onda e partícula.
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontStyle="Italic" Foreground="{StaticResource DarkGray}">
                                "O que chamamos de partícula é apenas a onda sendo observada,
                                e o que chamamos de onda é a partícula em liberdade."
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontWeight="SemiBold" FontSize="17" Foreground="#2C3E50">
                                🌌 A física clássica vê trajetórias; a física quântica vê possibilidades.
                            </Run>
                            <LineBreak/>
                            <Run FontSize="20" Text="✨" />
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
