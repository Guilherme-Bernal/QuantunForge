<UserControl x:Class="Quantun_Forge.src.views.VonNeumannControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ComponentBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="ActiveComponentStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F8F5"/>
            <Setter Property="BorderBrush" Value="#1ABC9C"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E86C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal - Simulador -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="Simulador - Arquitetura de Von Neumann" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Modelo computacional clássico" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Componentes da Arquitetura -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🖥️ Componentes da Arquitetura" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- CPU - Unidade de Controle -->
                            <Border x:Name="borderControle" Grid.Row="0" Grid.Column="0" Style="{StaticResource ComponentBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="🧠 Unidade de Controle" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"/>
                                    <Separator Background="#E0E0E0" Margin="0,8,0,8"/>
                                    <TextBlock Text="Estado:" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock x:Name="txtControle" 
                                               Text="Aguardando instrução" 
                                               FontSize="12" 
                                               Foreground="#2C3E50"
                                               TextWrapping="Wrap"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- CPU - ALU -->
                            <Border x:Name="borderALU" Grid.Row="0" Grid.Column="1" Style="{StaticResource ComponentBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔢 ALU (ULA)" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"/>
                                    <Separator Background="#E0E0E0" Margin="0,8,0,8"/>
                                    <TextBlock Text="Operação:" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock x:Name="txtALU" 
                                               Text="Nenhuma" 
                                               FontSize="12" 
                                               Foreground="#2C3E50"
                                               TextWrapping="Wrap"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Memória Principal -->
                            <Border x:Name="borderMemoria" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource ComponentBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="💾 Memória Principal (RAM)" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,10"/>
                                    <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="lstMemoria">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FFFFFF" 
                                                            BorderBrush="#D5DBDB" 
                                                            BorderThickness="1" 
                                                            Padding="8" 
                                                            Margin="2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{Binding Endereco}" 
                                                                       FontFamily="Consolas" 
                                                                       FontSize="12" 
                                                                       FontWeight="Bold"
                                                                       Foreground="#7F8C8D"
                                                                       Margin="0,0,15,0"/>
                                                            <TextBlock Grid.Column="1" 
                                                                       Text="{Binding Valor}" 
                                                                       FontFamily="Consolas" 
                                                                       FontSize="12"
                                                                       Foreground="#2C3E50"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <TextBlock Text="8 endereços de memória disponíveis" 
                                               FontSize="10" 
                                               Foreground="#95A5A6" 
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Entrada/Saída -->
                            <Border x:Name="borderIO" Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource ComponentBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔌 Entrada/Saída (I/O)" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="📥 INPUT" FontSize="12" FontWeight="Bold" Foreground="#27AE60"/>
                                            <TextBox x:Name="txtInput" 
                                                     Height="35" 
                                                     FontSize="16"
                                                     FontFamily="Consolas"
                                                     Margin="0,5,0,0"
                                                     ToolTip="Digite um valor numérico"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="📤 OUTPUT" FontSize="12" FontWeight="Bold" Foreground="#E74C3C"/>
                                            <Border Background="#FFFFFF" 
                                                    BorderBrush="#E0E0E0" 
                                                    BorderThickness="1" 
                                                    Height="35" 
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Center">
                                                <TextBlock x:Name="txtOutput" 
                                                           Text="--" 
                                                           FontSize="20" 
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Foreground="#E74C3C"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Controles de Execução -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎮 Controles de Execução" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Operações Disponíveis:" 
                                   FontSize="12" 
                                   Foreground="#2C3E50" 
                                   Margin="0,0,0,10"/>

                        <WrapPanel>
                            <Button Content="➕ Somar (ADD)" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarADD_Click"
                                    ToolTip="Soma o valor de INPUT com M[1] e armazena em M[4]"/>
                            <Button Content="➖ Subtrair (SUB)" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarSUB_Click"
                                    ToolTip="Subtrai M[1] do valor de INPUT e armazena em M[4]"/>
                            <Button Content="✖️ Multiplicar (MUL)" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarMUL_Click"
                                    ToolTip="Multiplica INPUT por M[1] e armazena em M[4]"/>
                            <Button Content="📥 Carregar (LOAD)" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarLOAD_Click"
                                    ToolTip="Carrega valor de INPUT para M[0]"/>
                            <Button Content="📤 Armazenar (STORE)" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarSTORE_Click"
                                    ToolTip="Envia valor de M[4] para OUTPUT"/>
                            <Button Content="🔄 Resetar" 
                                    Style="{StaticResource ButtonSecondaryStyle}"
                                    Click="Resetar_Click"
                                    ToolTip="Limpa toda a memória e reinicia"/>
                        </WrapPanel>

                        <TextBlock Text="💡 Dica: Execute LOAD primeiro para carregar valores na memória" 
                                   FontSize="11" 
                                   Foreground="#95A5A6" 
                                   Margin="0,15,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Registradores -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📦 Registradores da CPU" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="PC (Program Counter)" FontSize="11" FontWeight="Bold" Foreground="#7F8C8D"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="0,5,0,0">
                                    <TextBlock x:Name="txtPC" Text="0x00" FontFamily="Consolas" FontSize="14" Foreground="#2C3E50"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="MAR (Address Register)" FontSize="11" FontWeight="Bold" Foreground="#7F8C8D"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="0,5,0,0">
                                    <TextBlock x:Name="txtMAR" Text="--" FontFamily="Consolas" FontSize="14" Foreground="#2C3E50"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="5">
                                <TextBlock Text="MDR (Data Register)" FontSize="11" FontWeight="Bold" Foreground="#7F8C8D"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="0,5,0,0">
                                    <TextBlock x:Name="txtMDR" Text="--" FontFamily="Consolas" FontSize="14" Foreground="#2C3E50"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Log de Execução -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Log de Execução" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <ListBox x:Name="lstLog" 
                                 Height="200" 
                                 Background="#FAFAFA"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"/>

                        <Button Content="🗑️ Limpar Log" 
                                Style="{StaticResource ButtonSecondaryStyle}"
                                Click="LimparLog_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Informações -->
            <StackPanel Grid.Column="2">
                <!-- Sobre a Arquitetura -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Sobre" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="A Arquitetura de Von Neumann foi proposta por John von Neumann em 1945." 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="16"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Características principais:" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="#2C3E50" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="• Memória unificada para dados e instruções" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="• Processamento sequencial" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="• Ciclo fetch-decode-execute" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="• Barramento único (gargalo)" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Componentes -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔧 Componentes" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Unidade de Controle" FontSize="11" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Coordena o fluxo de dados" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="ALU" FontSize="11" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Executa operações aritméticas" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Memória" FontSize="11" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Armazena dados e instruções" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="I/O" FontSize="11" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Interface com mundo externo" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Estatísticas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Estatísticas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Instruções executadas:" FontSize="11" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtInstrucoesExecutadas" Text="0" FontSize="16" FontWeight="Bold" Foreground="#3498DB"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Acessos à memória:" FontSize="11" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtAcessosMemoria" Text="0" FontSize="16" FontWeight="Bold" Foreground="#E67E22"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Operações ALU:" FontSize="11" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtOperacoesALU" Text="0" FontSize="16" FontWeight="Bold" Foreground="#27AE60"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>