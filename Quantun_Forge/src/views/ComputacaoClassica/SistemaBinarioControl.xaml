<UserControl x:Class="Quantun_Forge.src.views.SistemaBinarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="BitToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="#E74C3C"
                                BorderBrush="#C0392B"
                                BorderThickness="2"
                                CornerRadius="5">
                            <TextBlock x:Name="text" 
                                      Text="0" 
                                      FontSize="24" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#229954"/>
                                <Setter TargetName="text" Property="Text" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E86C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="Simulador de Sistema Binário" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Explore a base da computação digital" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Editor de Bits Interativo -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎛️ Editor de Bits Interativo (8 bits)" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Clique nos bits para alternar entre 0 e 1" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,15"/>

                        <!-- Bits -->
                        <StackPanel x:Name="pnlBits" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Labels de peso dos bits -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <TextBlock Text="128" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="64" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="32" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="16" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="8" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="4" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="2" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                            <TextBlock Text="1" Width="56" TextAlignment="Center" FontSize="10" Foreground="#7F8C8D" FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Controles rápidos -->
                        <WrapPanel HorizontalAlignment="Center">
                            <Button Content="🔄 Inverter Todos" Style="{StaticResource ButtonPrimaryStyle}" Click="InverterBits_Click"/>
                            <Button Content="1️⃣ Todos ON (255)" Style="{StaticResource ButtonPrimaryStyle}" Click="TodosON_Click"/>
                            <Button Content="0️⃣ Todos OFF (0)" Style="{StaticResource ButtonSecondaryStyle}" Click="TodosOFF_Click"/>
                            <Button Content="🎲 Aleatório" Style="{StaticResource ButtonPrimaryStyle}" Click="Aleatorio_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Resultado ao Vivo -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Conversões em Tempo Real" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Decimal -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                                <TextBlock Text="🔢 Decimal (Base 10)" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#E8F8F5" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="5" Padding="12">
                                    <TextBlock x:Name="txtResultDecimal" Text="0" FontSize="28" FontWeight="Bold" Foreground="#000000" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Binário -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                                <TextBlock Text="💻 Binário (Base 2)" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#EBF5FB" BorderBrush="#3498DB" BorderThickness="2" CornerRadius="5" Padding="12">
                                    <TextBlock x:Name="txtResultBinario" Text="00000000" FontSize="20" FontWeight="Bold" Foreground="#000000" FontFamily="Consolas" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Hexadecimal -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Text="🔠 Hexadecimal (Base 16)" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#FCF3CF" BorderBrush="#F39C12" BorderThickness="2" CornerRadius="5" Padding="12">
                                    <TextBlock x:Name="txtResultHex" Text="0x00" FontSize="20" FontWeight="Bold" Foreground="#000000" FontFamily="Consolas" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Octal -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                                <TextBlock Text="8️⃣ Octal (Base 8)" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#F4ECF7" BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="5" Padding="12">
                                    <TextBlock x:Name="txtResultOctal" Text="000" FontSize="20" FontWeight="Bold" Foreground="#000000" FontFamily="Consolas" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- ASCII -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                                <TextBlock Text="🔤 ASCII (se imprimível)" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#FADBD8" BorderBrush="#E74C3C" BorderThickness="2" CornerRadius="5" Padding="12">
                                    <TextBlock x:Name="txtResultASCII" Text="--" FontSize="20" FontWeight="Bold" Foreground="#000000" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Conversor Manual -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Conversor Manual" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Decimal para outras bases -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Decimal → Outras Bases" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtInputDecimal" 
                                         Height="35" 
                                         FontSize="14"
                                         Margin="0,0,0,8"
                                         ToolTip="Digite um número decimal (0-255)"/>
                                <Button Content="🔄 Converter" 
                                        Style="{StaticResource ButtonPrimaryStyle}"
                                        Click="ConverterDecimal_Click"
                                        HorizontalAlignment="Stretch"
                                        Margin="0"/>
                            </StackPanel>

                            <!-- Binário para Decimal -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Binário → Decimal" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtInputBinario" 
                                         Height="35" 
                                         FontSize="14"
                                         FontFamily="Consolas"
                                         Margin="0,0,0,8"
                                         ToolTip="Digite um número binário (ex: 10101010)"/>
                                <Button Content="🔄 Converter" 
                                        Style="{StaticResource ButtonPrimaryStyle}"
                                        Click="ConverterBinario_Click"
                                        HorizontalAlignment="Stretch"
                                        Margin="0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Operações Binárias -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🧮 Operações Binárias" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Número A:" VerticalAlignment="Center" Margin="0,0,10,8" Foreground="#2C3E50"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtOpA" Height="30" Margin="0,0,0,8" ToolTip="Digite valor decimal (0-255)"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Número B:" VerticalAlignment="Center" Margin="0,0,10,8" Foreground="#2C3E50"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtOpB" Height="30" Margin="0,0,0,8" ToolTip="Digite valor decimal (0-255)"/>
                        </Grid>

                        <WrapPanel Margin="0,10,0,15">
                            <Button Content="➕ Somar" Style="{StaticResource ButtonPrimaryStyle}" Click="Somar_Click"/>
                            <Button Content="➖ Subtrair" Style="{StaticResource ButtonPrimaryStyle}" Click="Subtrair_Click"/>
                            <Button Content="AND (∧)" Style="{StaticResource ButtonPrimaryStyle}" Click="AND_Click"/>
                            <Button Content="OR (∨)" Style="{StaticResource ButtonPrimaryStyle}" Click="OR_Click"/>
                            <Button Content="XOR (⊕)" Style="{StaticResource ButtonPrimaryStyle}" Click="XOR_Click"/>
                            <Button Content="◀ Shift Left" Style="{StaticResource ButtonPrimaryStyle}" Click="ShiftLeft_Click"/>
                            <Button Content="Shift Right ▶" Style="{StaticResource ButtonPrimaryStyle}" Click="ShiftRight_Click"/>
                        </WrapPanel>

                        <Border Background="#E8F8F5" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="5" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Resultado:" FontSize="12" FontWeight="Bold" Foreground="#16A085" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtResultOperacao" Text="Nenhuma operação executada" FontSize="14" Foreground="#2C3E50" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Referência -->
            <StackPanel Grid.Column="2">
                <!-- Referência Rápida -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Referência" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Bases Numéricas:" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <TextBlock Text="• Binário (Base 2): 0, 1" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,3"/>
                        <TextBlock Text="• Octal (Base 8): 0-7" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,3"/>
                        <TextBlock Text="• Decimal (Base 10): 0-9" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,3"/>
                        <TextBlock Text="• Hexadecimal (Base 16): 0-9, A-F" FontSize="10" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <Separator Background="#E0E0E0" Margin="0,10"/>

                        <TextBlock Text="Potências de 2:" FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Margin="0,10,0,8"/>
                        <TextBlock Text="2⁰ = 1" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2¹ = 2" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2² = 4" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2³ = 8" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2⁴ = 16" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2⁵ = 32" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2⁶ = 64" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                        <TextBlock Text="2⁷ = 128" FontSize="10" Foreground="#7F8C8D" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>

                <!-- Exemplos -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Exemplos" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="65 (decimal) = 01000001 (binário) = A (ASCII)" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="255 (decimal) = 11111111 (binário) = FF (hex)" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="42 (decimal) = 00101010 (binário) = * (ASCII)" 
                                   FontSize="10" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>