<UserControl x:Class="Quantun_Forge.src.views.CicloInstrucaoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilo para Seções -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="RegisterStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ActiveRegisterStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F8F5"/>
            <Setter Property="BorderBrush" Value="#1ABC9C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="MemoryCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E86C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal - Simulador -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="Simulador de Ciclo de Instrução" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Arquitetura de von Neumann" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Estado Atual do Ciclo -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔄 Estado do Ciclo" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Etapa 1: FETCH -->
                            <Border x:Name="bordaFetch" Grid.Column="0" Style="{StaticResource RegisterStyle}">
                                <StackPanel>
                                    <TextBlock Text="FETCH" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Buscar" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Etapa 2: DECODE -->
                            <Border x:Name="bordaDecode" Grid.Column="1" Style="{StaticResource RegisterStyle}">
                                <StackPanel>
                                    <TextBlock Text="DECODE" FontWeight="Bold" Foreground="#9B59B6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Decodificar" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Etapa 3: EXECUTE -->
                            <Border x:Name="bordaExecute" Grid.Column="2" Style="{StaticResource RegisterStyle}">
                                <StackPanel>
                                    <TextBlock Text="EXECUTE" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Executar" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Etapa 4: STORE -->
                            <Border x:Name="bordaStore" Grid.Column="3" Style="{StaticResource RegisterStyle}">
                                <StackPanel>
                                    <TextBlock Text="STORE" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Armazenar" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <TextBlock x:Name="txtEtapaAtual" 
                                   Text="Ciclo não iniciado" 
                                   FontSize="14" 
                                   Foreground="#2C3E50" 
                                   Margin="0,15,0,5"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtDescricaoEtapa" 
                                   Text="Clique em 'Iniciar Ciclo' para começar a simulação" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Registradores da CPU -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📦 Registradores da CPU" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- PC - Program Counter -->
                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="PC (Program Counter)" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtPC" Text="0x0000" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Próxima instrução" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>

                            <!-- IR - Instruction Register -->
                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="IR (Instruction Register)" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtIR" Text="----" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Instrução atual" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>

                            <!-- ACC - Accumulator -->
                            <StackPanel Grid.Column="2" Margin="5">
                                <TextBlock Text="ACC (Accumulator)" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtACC" Text="0" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Resultado temporário" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>

                            <!-- MAR - Memory Address Register -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Text="MAR (Memory Address)" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtMAR" Text="----" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Endereço de memória" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>

                            <!-- MDR - Memory Data Register -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                                <TextBlock Text="MDR (Memory Data)" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtMDR" Text="----" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Dados da memória" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>

                            <!-- ALU Status -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
                                <TextBlock Text="ALU Status" FontWeight="Bold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="3" Padding="8">
                                    <TextBlock x:Name="txtALU" Text="IDLE" FontFamily="Consolas" FontSize="14" Foreground="#000000"/>
                                </Border>
                                <TextBlock Text="Estado da ULA" FontSize="10" Foreground="#95A5A6" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Memória Simulada -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💾 Memória Principal (RAM)" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="120">
                            <StackPanel x:Name="pnlMemoria" Orientation="Horizontal"/>
                        </ScrollViewer>

                        <TextBlock Text="Instruções carregadas na memória" 
                                   FontSize="11" 
                                   Foreground="#95A5A6" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Controles -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎮 Controles de Simulação" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <WrapPanel>
                            <Button x:Name="btnIniciar" 
                                    Content="▶️ Iniciar Ciclo" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="IniciarCiclo_Click"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="btnProximoPasso" 
                                    Content="⏭️ Próximo Passo" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ProximoPasso_Click"
                                    IsEnabled="False"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="btnExecutarCompleto" 
                                    Content="⚡ Executar Tudo" 
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Click="ExecutarCompleto_Click"
                                    IsEnabled="False"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="btnReset" 
                                    Content="🔄 Resetar" 
                                    Style="{StaticResource ButtonSecondaryStyle}"
                                    Click="Reset_Click"/>
                        </WrapPanel>

                        <!-- Velocidade de Execução -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <TextBlock Text="⚙️ Velocidade:" 
                                       FontSize="13" 
                                       Foreground="#2C3E50" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Slider x:Name="sliderVelocidade" 
                                    Width="200" 
                                    Minimum="100" 
                                    Maximum="2000" 
                                    Value="1000"
                                    TickFrequency="100"
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtVelocidade" 
                                       Text="1000 ms" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Log e Informações -->
            <StackPanel Grid.Column="2">
                <!-- Log de Execução -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Log de Execução" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>
                        <ListBox x:Name="lstLog" 
                                 Height="300" 
                                 Background="#FAFAFA" 
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="11"/>
                        <Button Content="🗑️ Limpar Log" 
                                Style="{StaticResource ButtonSecondaryStyle}"
                                Click="LimparLog_Click"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Estatísticas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Estatísticas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Ciclos executados:" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtCiclosExecutados" Text="0" FontSize="16" FontWeight="Bold" Foreground="#3498DB"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Instruções processadas:" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtInstrucoesProcessadas" Text="0" FontSize="16" FontWeight="Bold" Foreground="#27AE60"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Acessos à memória:" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtAcessosMemoria" Text="0" FontSize="16" FontWeight="Bold" Foreground="#E74C3C"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>