<UserControl x:Class="Quantun_Forge.src.views.PortasLogicasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="GateButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ECF0F1"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="#E74C3C"
                                BorderBrush="#C0392B"
                                BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="label" 
                                          Text="{TemplateBinding Content}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"/>
                                <TextBlock x:Name="value" 
                                          Text="0" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          Margin="0,5,0,0"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#229954"/>
                                <Setter TargetName="value" Property="Text" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E86C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="Simulador de Portas Lógicas" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Circuitos digitais fundamentais" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Entradas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎚️ Entradas" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Configure as entradas digitais (0 ou 1)" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton x:Name="toggleA" 
                                         Content="Input A" 
                                         Style="{StaticResource InputToggleStyle}"
                                         Checked="Entrada_Changed"
                                         Unchecked="Entrada_Changed"/>
                            <ToggleButton x:Name="toggleB" 
                                         Content="Input B" 
                                         Style="{StaticResource InputToggleStyle}"
                                         Checked="Entrada_Changed"
                                         Unchecked="Entrada_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Portas Lógicas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔌 Selecione a Porta Lógica" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <UniformGrid Columns="4" HorizontalAlignment="Center">
                            <!-- AND -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarAND">
                                <StackPanel>
                                    <TextBlock Text="AND" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                    <TextBlock Text="A ∧ B" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/and.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- OR -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarOR">
                                <StackPanel>
                                    <TextBlock Text="OR" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                    <TextBlock Text="A ∨ B" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/or.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- NOT -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarNOT">
                                <StackPanel>
                                    <TextBlock Text="NOT" FontSize="18" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                    <TextBlock Text="¬A" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/not.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- XOR -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarXOR">
                                <StackPanel>
                                    <TextBlock Text="XOR" FontSize="18" FontWeight="Bold" Foreground="#E67E22" HorizontalAlignment="Center"/>
                                    <TextBlock Text="A ⊕ B" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/xor.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- NAND -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarNAND">
                                <StackPanel>
                                    <TextBlock Text="NAND" FontSize="18" FontWeight="Bold" Foreground="#9B59B6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="¬(A ∧ B)" FontSize="13" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/nand.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- NOR -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarNOR">
                                <StackPanel>
                                    <TextBlock Text="NOR" FontSize="18" FontWeight="Bold" Foreground="#9B59B6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="¬(A ∨ B)" FontSize="13" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/nor.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- XNOR -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarXNOR">
                                <StackPanel>
                                    <TextBlock Text="XNOR" FontSize="18" FontWeight="Bold" Foreground="#E67E22" HorizontalAlignment="Center"/>
                                    <TextBlock Text="¬(A ⊕ B)" FontSize="13" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/xnor.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>

                            <!-- BUFFER -->
                            <Button Style="{StaticResource GateButtonStyle}" Click="SelecionarBUFFER">
                                <StackPanel>
                                    <TextBlock Text="BUFFER" FontSize="18" FontWeight="Bold" Foreground="#16A085" HorizontalAlignment="Center"/>
                                    <TextBlock Text="A" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <Image Source="/resources/gates/buffer.png" Width="40" Height="40" Margin="0,8,0,0" Stretch="Uniform" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Resultado -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Resultado" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#ECF0F1" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="30"
                                HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock x:Name="txtPortaSelecionada" 
                                           Text="Selecione uma porta" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtResultado" 
                                           Text="--" 
                                           FontSize="48" 
                                           FontWeight="Bold" 
                                           Foreground="#E74C3C" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtResultadoDescricao" 
                                           Text="" 
                                           FontSize="12" 
                                           Foreground="#7F8C8D" 
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <Button Content="📋 Ver Tabela Verdade" 
                                Style="{StaticResource ButtonPrimaryStyle}"
                                Click="MostrarTabela_Click"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Tabela Verdade -->
                <Border x:Name="borderTabelaVerdade" 
                        Style="{StaticResource SectionBorderStyle}" 
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="📋 Tabela Verdade" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#000000"/>
                            <TextBlock x:Name="txtTituloTabela" 
                                       Text="" 
                                       FontSize="14" 
                                       Foreground="#7F8C8D" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <DataGrid x:Name="dataGridTabela"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"
                                  Background="White"
                                  BorderBrush="#BDC3C7"
                                  BorderThickness="1"
                                  GridLinesVisibility="All"
                                  HeadersVisibility="Column">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#3498DB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Informações -->
            <StackPanel Grid.Column="2">
                <!-- Descrição da Porta -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Sobre a Porta" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock x:Name="txtDescricaoPorta" 
                                   Text="Selecione uma porta lógica para ver sua descrição e funcionamento." 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>

                <!-- Aplicações -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔧 Aplicações" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock x:Name="txtAplicacoes" 
                                   Text="As portas lógicas são usadas em processadores, memórias, circuitos aritméticos, multiplexadores e em todos os sistemas digitais." 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="16"/>
                    </StackPanel>
                </Border>

                <!-- Curiosidade -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Você Sabia?" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="A porta NAND é considerada 'universal' porque qualquer outra porta lógica pode ser construída usando apenas portas NAND!" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>