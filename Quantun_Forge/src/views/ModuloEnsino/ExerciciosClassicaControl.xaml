<Page x:Class="Quantun_Forge.src.views.ModuloEnsino.ExerciciosClassicaControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExerciciosClassicaControl">

    <Page.Resources>
        <!-- Estilo para os Cards de Tópicos -->
        <Style x:Key="ClassicalCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBF5FB"/>
                    <Setter Property="BorderBrush" Value="#2E86C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ClassicalTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ClassicalSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#5A5A6B"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="ClassicalHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Margin="30,20,30,0">
            <TextBlock Text="Computação Clássica" Style="{StaticResource ClassicalHeaderStyle}"/>
            <TextBlock Text="Explore os fundamentos da computação moderna" 
                       FontSize="14" 
                       Foreground="#5A5A6B" 
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- ScrollViewer para o conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <StackPanel>
                <!-- Tópico 1: Bits e o Sistema Binário -->
                <Border Style="{StaticResource ClassicalCardStyle}" 
                        x:Name="BitsCard"
                        MouseLeftButtonDown="BitsCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Bits e o Sistema Binário" Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="A matéria-prima da informação digital" 
                                   Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 2: Portas Lógicas e Álgebra Booleana -->
                <Border Style="{StaticResource ClassicalCardStyle}"
                        x:Name="PortasLogicasCard"
                        MouseLeftButtonDown="PortasLogicasCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔌" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Portas Lógicas e Álgebra Booleana" Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Como a informação é processada através de operações lógicas" 
                                   Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 3: Arquitetura de von Neumann -->
                <Border Style="{StaticResource ClassicalCardStyle}"
                        x:Name="VonNeumannCard"
                        MouseLeftButtonDown="VonNeumannCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏛️" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="A Arquitetura de von Neumann" 
                                       Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="O design físico e lógico que define os computadores modernos" 
                                   Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>


                <Border Style="{StaticResource ClassicalCardStyle}"
         x:Name="TuringCard"
         MouseLeftButtonDown="TuringCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🤖" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Alan Turing e Máquina de Turing" 
                        Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="O pai da computação e o modelo que define o que é computável" 
                    Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 5: Algoritmos e Estruturas de Dados -->
                <Border Style="{StaticResource ClassicalCardStyle}"
                        x:Name="AlgoritmosCard"
                        MouseLeftButtonDown="AlgoritmosCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧮" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Algoritmos e Estruturas de Dados" 
                                       Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="A inteligência e eficiência por trás do software moderno" 
                                   Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 6: Sistema Operacional -->
                <Border Style="{StaticResource ClassicalCardStyle}"
                        x:Name="SistemaOperacionalCard"
                        MouseLeftButtonDown="SistemaOperacionalCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💻" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="O Sistema Operacional" 
                                       Style="{StaticResource ClassicalTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="O software que gerencia hardware e permite a interação com usuário" 
                                   Style="{StaticResource ClassicalSubtitleStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>