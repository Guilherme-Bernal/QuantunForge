<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.bitsistemabinariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica"
        mc:Ignorable="d"
        Title="Bits e Sistemas Binários - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="FormulaText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cambria Math, Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Foreground" Value="#E67E22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CodeExample" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#FEF5E7"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="BitBox" TargetType="Border">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Bits e Sistemas Binários" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="A Linguagem Fundamental dos Computadores"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        O <Run Foreground="#E67E22" FontWeight="Bold">sistema binário</Run> é a base de toda computação moderna. 
                        Enquanto nós, humanos, usamos o sistema decimal (base 10), os computadores utilizam apenas dois estados: 
                        <Run FontWeight="Bold">0 e 1</Run>. Esses estados representam ausência ou presença de corrente elétrica nos 
                        circuitos eletrônicos.
                    </TextBlock>

                    <!-- O que é um Bit -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        O que é um Bit?
                    </TextBlock>
                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run FontWeight="Bold" Foreground="#E67E22">Bit</Run> é a abreviação de 
                                <Run FontWeight="Bold">"Binary Digit"</Run> (dígito binário). É a menor unidade de informação 
                                em computação e pode armazenar apenas dois valores: <Run FontWeight="Bold">0 ou 1</Run>.
                            </TextBlock>
                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource BitBox}">
                                        <TextBlock Text="0" 
                                                 Foreground="White" 
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="ou" 
                                             Foreground="#7F8C8D" 
                                             FontSize="16" 
                                             Margin="15,0"
                                             VerticalAlignment="Center"/>
                                    <Border Style="{StaticResource BitBox}">
                                        <TextBlock Text="1" 
                                                 Foreground="White" 
                                                 FontSize="20" 
                                                 FontWeight="Bold"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Bytes e Unidades -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Bytes e Outras Unidades
                    </TextBlock>
                    <TextBlock Style="{StaticResource NormalText}">
                        Um conjunto de 8 bits forma um <Run Foreground="#E67E22" FontWeight="Bold">byte</Run>, 
                        que é a unidade básica de armazenamento:
                    </TextBlock>

                    <Border Background="White" 
                            BorderBrush="#E67E22" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="10,8">
                        <StackPanel>
                            <TextBlock Text="1 Byte = 8 Bits" 
                                     TextAlignment="Center" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22"
                                     Margin="0,0,0,15"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="0" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="0" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="0" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource BitBox}">
                                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,10,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">1 Kilobyte (KB)</Run> = 1.024 bytes
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">1 Megabyte (MB)</Run> = 1.024 KB = 1.048.576 bytes
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">1 Gigabyte (GB)</Run> = 1.024 MB = 1.073.741.824 bytes
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">1 Terabyte (TB)</Run> = 1.024 GB
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Conversão Binário-Decimal -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Conversão Binário ↔ Decimal
                    </TextBlock>
                    <TextBlock Style="{StaticResource NormalText}">
                        Cada posição em um número binário representa uma potência de 2:
                    </TextBlock>
                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center">
                                Posições: 2⁷  2⁶  2⁵  2⁴  2³  2²  2¹  2⁰
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center">
                                Valores:  128  64  32  16   8   4   2   1
                            </TextBlock>
                            <Separator Margin="0,10" Background="#E67E22"/>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     TextAlignment="Center" 
                                     FontWeight="Bold">
                                Exemplo: 10110101₂
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     TextAlignment="Center" 
                                     FontSize="12">
                                = 1×128 + 0×64 + 1×32 + 1×16 + 0×8 + 1×4 + 0×2 + 1×1
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     TextAlignment="Center" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22">
                                = 181₁₀
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Operações Binárias Básicas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Operações Binárias Básicas
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}" FontWeight="Bold" Margin="0,8,0,5">
                        AND (E lógico):
                    </TextBlock>
                    <Border Background="#F8F9FA" BorderBrush="#E67E22" BorderThickness="1" CornerRadius="6" Padding="10" Margin="5,0,5,10">
                        <TextBlock FontFamily="Cascadia Code" FontSize="12" Foreground="#2C3E50">
                            0 AND 0 = 0&#x0A;0 AND 1 = 0&#x0A;1 AND 0 = 0&#x0A;1 AND 1 = 1
                        </TextBlock>
                    </Border>

                    <TextBlock Style="{StaticResource NormalText}" FontWeight="Bold" Margin="0,8,0,5">
                        OR (OU lógico):
                    </TextBlock>
                    <Border Background="#F8F9FA" BorderBrush="#E67E22" BorderThickness="1" CornerRadius="6" Padding="10" Margin="5,0,5,10">
                        <TextBlock FontFamily="Cascadia Code" FontSize="12" Foreground="#2C3E50">
                            0 OR 0 = 0&#x0A;0 OR 1 = 1&#x0A;1 OR 0 = 1&#x0A;1 OR 1 = 1
                        </TextBlock>
                    </Border>

                    <TextBlock Style="{StaticResource NormalText}" FontWeight="Bold" Margin="0,8,0,5">
                        NOT (NÃO lógico):
                    </TextBlock>
                    <Border Background="#F8F9FA" BorderBrush="#E67E22" BorderThickness="1" CornerRadius="6" Padding="10" Margin="5,0,5,10">
                        <TextBlock FontFamily="Cascadia Code" FontSize="12" Foreground="#2C3E50">
                            NOT 0 = 1&#x0A;NOT 1 = 0
                        </TextBlock>
                    </Border>

                    <!-- Aplicações Práticas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Aplicações Práticas
                    </TextBlock>
                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Representação de caracteres:</Run> ASCII usa 8 bits (1 byte) por caractere
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Cores RGB:</Run> 8 bits para vermelho, verde e azul (24 bits total)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Endereços IP (IPv4):</Run> 32 bits divididos em 4 octetos
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#E67E22" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Processadores:</Run> arquiteturas de 32 ou 64 bits
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: INTERPRETADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Interpretador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Interpretador Portugol" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Experimente com sistemas binários!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>

                    <!-- Comandos Disponíveis -->
                    <Expander Header="Comandos Disponíveis" 
                            IsExpanded="False" 
                            Margin="0,15,0,0"
                            Foreground="#2C3E50" 
                            FontWeight="SemiBold"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Background="#F8F9FA">
                        <StackPanel Margin="10">
                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="escreva(&quot;texto&quot;)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Exibe mensagens no console" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="binarioParaDecimal(binario)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Converte binário para decimal" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="decimalParaBinario(decimal)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Converte decimal para binário" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="AND(bit1, bit2)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Operação lógica E" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="OR(bit1, bit2)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Operação lógica OU" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="NOT(bit)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Operação lógica NÃO (inversão)" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="bytesParaBits(bytes)" 
                                             Foreground="#E67E22" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Converte bytes para bits" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Editor de Código -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Editor de Código" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <TextBox x:Name="CodeEditor" 
                                 Grid.Row="1"
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 FontFamily="Cascadia Code, Consolas"
                                 FontSize="13"
                                 Background="White"
                                 Foreground="#2C3E50"
                                 CaretBrush="#E67E22"
                                 VerticalScrollBarVisibility="Auto" 
                                 BorderThickness="0"
                                 Padding="15"
                                 Text="// Bem-vindo ao mundo binário!&#x0A;escreva(&quot;=== Conversões Binárias ===&quot;)&#x0A;&#x0A;// Converter decimal 42 para binário:&#x0A;decimalParaBinario(42)&#x0A;&#x0A;// Converter binário 1010 para decimal:&#x0A;binarioParaDecimal(1010)&#x0A;&#x0A;// Operações lógicas:&#x0A;AND(1, 0)&#x0A;OR(1, 0)&#x0A;NOT(1)" />
                    </Grid>
                </Border>

                <!-- Botões de Ação -->
                <Grid Grid.Row="2" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="EXECUTAR" 
                            Height="45" 
                            Style="{StaticResource ButtonStyle}"
                            FontSize="14" 
                            Click="RunCode_Click"/>

                    <Button Grid.Column="2" 
                            Content="LIMPAR" 
                            Height="45"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            Click="ClearCode_Click"/>
                </Grid>

                <!-- Console de Saída -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Console de Saída" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="15">
