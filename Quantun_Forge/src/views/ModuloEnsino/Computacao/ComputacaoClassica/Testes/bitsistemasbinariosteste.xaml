<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.Testes.bitsistemasbinariosteste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.Testes"
        mc:Ignorable="d"
        Title="Teste - Bits e Sistemas Binários" Height="700" Width="1100"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="650" MinWidth="1000">

    <Window.Resources>
        <!-- Estilo para botões de opção -->
        <Style x:Key="OptionButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FEF5E7"/>
                    <Setter Property="BorderBrush" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botão correto -->
        <Style x:Key="CorrectButton" TargetType="Button" BasedOn="{StaticResource OptionButton}">
            <Setter Property="Background" Value="#D5F4E6"/>
            <Setter Property="BorderBrush" Value="#27AE60"/>
            <Setter Property="Foreground" Value="#1E8449"/>
        </Style>

        <!-- Estilo para botão incorreto -->
        <Style x:Key="IncorrectButton" TargetType="Button" BasedOn="{StaticResource OptionButton}">
            <Setter Property="Background" Value="#FADBD8"/>
            <Setter Property="BorderBrush" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="#C0392B"/>
        </Style>

        <!-- Estilo para botão de ação -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Foreground" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E8449"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABEÇALHO -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,0,2"
                Padding="30,20">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Teste: Bits e Sistemas Binários" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="#2C3E50"/>
                        <TextBlock x:Name="SubtitleText" Text="Questão 1 de 10" 
                                 FontSize="13" Foreground="#7F8C8D" 
                                 Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Timer (opcional) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="⏱️" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Tempo" Foreground="#7F8C8D" FontSize="11"/>
                        <TextBlock x:Name="TimerText" Text="00:00" 
                                 Foreground="#E67E22" FontSize="18" 
                                 FontWeight="Bold" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BARRA DE PROGRESSO -->
                <Border Grid.Row="0" Background="#E8E8E8" 
                        CornerRadius="10" Height="25" Margin="0,0,0,20">
                    <Grid>
                        <Border x:Name="ProgressBar" 
                                Background="#E67E22" 
                                CornerRadius="10" 
                                HorizontalAlignment="Left"
                                Width="0"/>
                        <TextBlock x:Name="ProgressText" Text="0%" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Foreground="#2C3E50" FontWeight="Bold"
                                 FontSize="12"/>
                    </Grid>
                </Border>

                <!-- PONTUAÇÃO E VIDAS -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pontuação -->
                    <Border Grid.Column="0" Background="White" 
                            BorderBrush="#BDC3C7" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="0,0,7,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Pontuação" 
                                         Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock x:Name="ScoreText" Text="0 pontos" 
                                         Foreground="#E67E22" FontSize="20" 
                                         FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Acertos -->
                    <Border Grid.Column="1" Background="White" 
                            BorderBrush="#BDC3C7" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="7,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Acertos" 
                                         Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock x:Name="CorrectText" Text="0/10" 
                                         Foreground="#27AE60" FontSize="20" 
                                         FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Vidas -->
                    <Border Grid.Column="2" Background="White" 
                            BorderBrush="#BDC3C7" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="7,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Vidas" 
                                         Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock x:Name="LivesText" Text="❤️ ❤️ ❤️" 
                                         Foreground="#E74C3C" FontSize="20" 
                                         FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ÁREA DA QUESTÃO -->
                <Border Grid.Row="2" Background="White" 
                        BorderBrush="#BDC3C7" BorderThickness="1"
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Categoria da Questão -->
                        <Border Background="#FEF5E7" 
                                BorderBrush="#E67E22" 
                                BorderThickness="1"
                                CornerRadius="5" 
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,15">
                            <TextBlock x:Name="CategoryText" 
                                     Text="💻 Conversão Binária" 
                                     Foreground="#E67E22" 
                                     FontSize="12" 
                                     FontWeight="Bold"/>
                        </Border>

                        <!-- Pergunta -->
                        <TextBlock x:Name="QuestionText" 
                                 Text="Qual é o valor decimal do número binário 1010?"
                                 FontSize="20" FontWeight="Bold"
                                 Foreground="#2C3E50" TextWrapping="Wrap"
                                 Margin="0,0,0,20"/>

                        <!-- Dica (opcional, visível apenas quando necessário) -->
                        <Border x:Name="HintPanel" 
                                Background="#FFF9E6" 
                                BorderBrush="#F39C12" 
                                BorderThickness="1"
                                CornerRadius="6" 
                                Padding="12"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💡" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock x:Name="HintText" 
                                         Text="Lembre-se: cada posição representa uma potência de 2"
                                         FontSize="13" 
                                         Foreground="#D68910" 
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Opções de resposta -->
                        <Button x:Name="Option1" Content="A) 8" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="1"/>

                        <Button x:Name="Option2" Content="B) 10" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="2"/>

                        <Button x:Name="Option3" Content="C) 12" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="3"/>

                        <Button x:Name="Option4" Content="D) 14" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="4"/>
                    </StackPanel>
                </Border>

                <!-- FEEDBACK -->
                <Border x:Name="FeedbackPanel" Grid.Row="3" 
                        Background="#D5F4E6" 
                        BorderBrush="#27AE60" BorderThickness="2"
                        CornerRadius="8" 
                        Padding="20" Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <Grid>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock x:Name="FeedbackIcon" Text="✓" 
                                         FontSize="32" FontWeight="Bold"
                                         Foreground="#27AE60" Margin="0,0,15,0"/>
                                <StackPanel>
                                    <TextBlock x:Name="FeedbackTitle" 
                                             Text="Correto! +10 pontos" 
                                             FontSize="18" FontWeight="Bold"
                                             Foreground="#1E8449"/>
                                    <TextBlock x:Name="FeedbackMessage" 
                                             Text="Muito bem! 1010₂ = 10₁₀" 
                                             FontSize="14" Foreground="#27AE60"
                                             TextWrapping="Wrap" Margin="0,5,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Explicação detalhada -->
                            <Border x:Name="ExplanationPanel" 
                                    Background="White" 
                                    BorderBrush="#27AE60" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="15"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="📚 Explicação:" 
                                             FontWeight="Bold" 
                                             Foreground="#1E8449"
                                             FontSize="13"
                                             Margin="0,0,0,8"/>
                                    <TextBlock x:Name="ExplanationText" 
                                             Text="1×2³ + 0×2² + 1×2¹ + 0×2⁰ = 8 + 0 + 2 + 0 = 10"
                                             FontSize="13" 
                                             Foreground="#2C3E50"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- BOTÕES DE AÇÃO -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botão de Dica -->
                    <Button x:Name="HintButton" Grid.Column="0" 
                            Content="💡 DICA" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ShowHint_Click"/>

                    <!-- Botão Pular -->
                    <Button x:Name="SkipButton" Grid.Column="2" 
                            Content="PULAR" 
                            Style="{StaticResource SecondaryButton}"
                            Click="SkipQuestion_Click"/>

                    <!-- Botão Verificar/Próxima -->
                    <Button x:Name="CheckButton" Grid.Column="4" 
                            Content="VERIFICAR RESPOSTA" 
                            Style="{StaticResource ActionButton}"
                            Click="CheckAnswer_Click"
                            IsEnabled="False"/>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- PAINEL DE RESULTADO FINAL (inicialmente oculto) -->
        <Border x:Name="ResultPanel" 
                Grid.RowSpan="2"
                Background="#CC000000"
                Visibility="Collapsed">
            <Border Background="White" 
                    BorderBrush="#E67E22" 
                    BorderThickness="3"
                    CornerRadius="12" 
                    MaxWidth="600"
                    Padding="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <!-- Ícone de resultado -->
                    <TextBlock x:Name="ResultIcon" 
                             Text="🎉" 
                             FontSize="64" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <!-- Título -->
                    <TextBlock x:Name="ResultTitle" 
                             Text="Teste Concluído!" 
                             FontSize="28" 
                             FontWeight="Bold"
                             Foreground="#2C3E50"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,10"/>

                    <!-- Pontuação final -->
                    <TextBlock x:Name="FinalScoreText" 
                             Text="Pontuação: 85/100" 
                             FontSize="24" 
                             Foreground="#E67E22"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <!-- Estatísticas -->
                    <Border Background="#F8F9FA" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1"
                            CornerRadius="8" 
                            Padding="20"
                            Margin="0,0,0,25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="Questões Corretas:" 
                                     FontSize="15" Foreground="#2C3E50"
                                     Margin="0,5"/>
                            <TextBlock x:Name="FinalCorrectText" 
                                     Grid.Row="0" Grid.Column="1"
                                     Text="8/10" 
                                     FontSize="15" FontWeight="Bold"
                                     Foreground="#27AE60"
                                     Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="Questões Incorretas:" 
                                     FontSize="15" Foreground="#2C3E50"
                                     Margin="0,5"/>
                            <TextBlock x:Name="FinalIncorrectText" 
                                     Grid.Row="1" Grid.Column="1"
                                     Text="2/10" 
                                     FontSize="15" FontWeight="Bold"
                                     Foreground="#E74C3C"
                                     Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                     Text="Taxa de Acerto:" 
                                     FontSize="15" Foreground="#2C3E50"
                                     Margin="0,5"/>
                            <TextBlock x:Name="AccuracyText" 
                                     Grid.Row="2" Grid.Column="1"
                                     Text="80%" 
                                     FontSize="15" FontWeight="Bold"
                                     Foreground="#E67E22"
                                     Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                     Text="Tempo Total:" 
                                     FontSize="15" Foreground="#2C3E50"
                                     Margin="0,5"/>
                            <TextBlock x:Name="FinalTimeText" 
                                     Grid.Row="3" Grid.Column="1"
                                     Text="05:32" 
                                     FontSize="15" FontWeight="Bold"
                                     Foreground="#3498DB"
                                     Margin="0,5"/>
                        </Grid>
                    </Border>

                    <!-- Mensagem de performance -->
                    <TextBlock x:Name="PerformanceMessage" 
                             Text="Excelente desempenho! Continue praticando!" 
                             FontSize="14" 
                             Foreground="#7F8C8D"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,0,25"/>

                    <!-- Botões finais -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="TENTAR NOVAMENTE" 
                                Style="{StaticResource ActionButton}"
                                Click="RestartTest_Click"/>

                        <Button Grid.Column="2" 
                                Content="FECHAR" 
                                Style="{StaticResource SecondaryButton}"
                                Click="CloseTest_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>