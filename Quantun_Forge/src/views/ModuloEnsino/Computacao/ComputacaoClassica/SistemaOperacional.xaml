<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.SistemaOperacional"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica"
        mc:Ignorable="d"
        Title="Sistemas Operacionais - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#FEF5E7"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="OSBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Sistemas Operacionais" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="O Coração do Computador"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        Um <Run Foreground="#E67E22" FontWeight="Bold">Sistema Operacional (SO)</Run> é o software fundamental 
                        que gerencia todos os recursos de hardware e software de um computador. Ele atua como intermediário entre 
                        os aplicativos e o hardware, facilitando a comunicação e garantindo o uso eficiente dos recursos.
                    </TextBlock>

                    <!-- O que é um SO -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        O que é um Sistema Operacional?
                    </TextBlock>
                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22"
                                     Margin="0,0,0,10">
                                Funções Principais:
                            </TextBlock>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="🖥️ Gerenciamento de Processos" 
                                             FontWeight="Bold" 
                                             Foreground="#E67E22"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Controla a execução de programas e distribui tempo de CPU
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="💾 Gerenciamento de Memória" 
                                             FontWeight="Bold" 
                                             Foreground="#3498DB"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Aloca e controla o uso da memória RAM pelos programas
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#27AE60" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="📁 Sistema de Arquivos" 
                                             FontWeight="Bold" 
                                             Foreground="#27AE60"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Organiza e gerencia o armazenamento de dados em disco
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#9B59B6" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="⚙️ Gerenciamento de Dispositivos" 
                                             FontWeight="Bold" 
                                             Foreground="#9B59B6"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Controla periféricos através de drivers de dispositivo
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#F39C12" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="🔒 Segurança e Proteção" 
                                             FontWeight="Bold" 
                                             Foreground="#F39C12"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Controla acessos e protege recursos do sistema
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Tipos de Sistemas Operacionais -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Tipos de Sistemas Operacionais
                    </TextBlock>

                    <Border Style="{StaticResource OSBox}">
                        <StackPanel>
                            <TextBlock Text="🪟 Windows" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#0078D4"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,5">
                                Sistema operacional proprietário da Microsoft. O mais popular para uso doméstico e empresarial.
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D">
                                <Run FontWeight="Bold">Características:</Run> Interface gráfica intuitiva, ampla compatibilidade de software
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource OSBox}">
                        <StackPanel>
                            <TextBlock Text="🐧 Linux" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#FCC624"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,5">
                                Sistema operacional de código aberto baseado em Unix. Muito usado em servidores e desenvolvimento.
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D">
                                <Run FontWeight="Bold">Características:</Run> Gratuito, altamente customizável, seguro e estável
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource OSBox}">
                        <StackPanel>
                            <TextBlock Text="🍎 macOS" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#000000"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,5">
                                Sistema operacional exclusivo da Apple para computadores Mac. Baseado em Unix.
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D">
                                <Run FontWeight="Bold">Características:</Run> Design elegante, integração com ecossistema Apple, alta performance
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource OSBox}">
                        <StackPanel>
                            <TextBlock Text="📱 Mobile (Android/iOS)" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#3DDC84"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,5">
                                Sistemas operacionais otimizados para dispositivos móveis como smartphones e tablets.
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D">
                                <Run FontWeight="Bold">Características:</Run> Interface touch, economia de energia, apps móveis
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Componentes do SO -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Componentes Principais
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22"
                                     Margin="0,0,0,10">
                                Arquitetura do Sistema Operacional:
                            </TextBlock>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="🔧 Kernel (Núcleo)" 
                                             FontWeight="Bold" 
                                             FontSize="13"
                                             Foreground="#E67E22"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        O coração do SO. Gerencia recursos de hardware e fornece serviços básicos para outros componentes.
                                        Tipos: Monolítico, Microkernel, Híbrido.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="🖼️ Interface do Usuário" 
                                             FontWeight="Bold" 
                                             FontSize="13"
                                             Foreground="#3498DB"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        GUI (Interface Gráfica) ou CLI (Linha de Comando). Permite interação entre usuário e sistema.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#27AE60" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="📚 Bibliotecas do Sistema" 
                                             FontWeight="Bold" 
                                             FontSize="13"
                                             Foreground="#27AE60"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Conjuntos de funções pré-compiladas que aplicativos podem usar para realizar tarefas comuns.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#9B59B6" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="🔌 Drivers" 
                                             FontWeight="Bold" 
                                             FontSize="13"
                                             Foreground="#9B59B6"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Software que permite ao SO se comunicar com dispositivos de hardware específicos.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Processos e Threads -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Processos e Threads
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}">
                        <Run FontWeight="Bold" Foreground="#E67E22">Processo:</Run> Um programa em execução. 
                        Cada processo tem seu próprio espaço de memória, recursos e estado.
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}">
                        <Run FontWeight="Bold" Foreground="#3498DB">Thread:</Run> Uma unidade de execução dentro de um processo. 
                        Múltiplas threads compartilham o mesmo espaço de memória do processo pai.
                    </TextBlock>

                    <Border Background="#F8F9FA" 
                            BorderBrush="#E67E22" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="10,10">
                        <StackPanel>
                            <TextBlock Text="Estados de um Processo:" 
                                     FontWeight="Bold" 
                                     FontSize="13"
                                     Foreground="#E67E22"
                                     Margin="0,0,0,10"/>
                            <TextBlock FontFamily="Cascadia Code" FontSize="11" Foreground="#2C3E50">
                                Novo → Pronto → Executando → Esperando → Terminado
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Gerenciamento de Memória -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Gerenciamento de Memória
                    </TextBlock>

                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="💾" FontSize="16"/> 
                                <Run FontWeight="Bold">Memória RAM:</Run> Armazenamento temporário de dados e programas em execução
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🔄" FontSize="16"/> 
                                <Run FontWeight="Bold">Memória Virtual:</Run> Técnica que usa o disco como extensão da RAM
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="📄" FontSize="16"/> 
                                <Run FontWeight="Bold">Paginação:</Run> Divide a memória em blocos de tamanho fixo (páginas)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🗂️" FontSize="16"/> 
                                <Run FontWeight="Bold">Segmentação:</Run> Divide a memória em segmentos de tamanho variável
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Sistemas de Arquivos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Sistemas de Arquivos
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}">
                        O sistema de arquivos organiza e controla como os dados são armazenados e recuperados.
                    </TextBlock>

                    <StackPanel Margin="0,10,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0" FontWeight="Bold">
                                    NTFS (Windows)
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0,3,0,0" FontSize="11" Foreground="#7F8C8D">
                                    Suporta arquivos grandes, permissões, compressão e criptografia
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0" FontWeight="Bold">
                                    ext4 (Linux)
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0,3,0,0" FontSize="11" Foreground="#7F8C8D">
                                    Sistema robusto com journaling, suporte a arquivos grandes
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0" FontWeight="Bold">
                                    APFS (macOS)
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0,3,0,0" FontSize="11" Foreground="#7F8C8D">
                                    Otimizado para SSDs, criptografia nativa, snapshots
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0" FontWeight="Bold">
                                    FAT32/exFAT
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" Margin="0,3,0,0" FontSize="11" Foreground="#7F8C8D">
                                    Compatibilidade universal, usado em pendrives e cartões SD
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Escalonamento de CPU -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Escalonamento de CPU
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}">
                        Algoritmos que determinam qual processo será executado pelo processador:
                    </TextBlock>

                    <Border Background="#F8F9FA" 
                            BorderBrush="#E67E22" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="10,10">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                <Run Foreground="#E67E22" FontWeight="Bold">FCFS</Run> - First Come, First Served (Primeiro a chegar, primeiro a ser atendido)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                <Run Foreground="#3498DB" FontWeight="Bold">SJF</Run> - Shortest Job First (Trabalho mais curto primeiro)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                <Run Foreground="#27AE60" FontWeight="Bold">Round Robin</Run> - Cada processo recebe fatia de tempo igual
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                <Run Foreground="#9B59B6" FontWeight="Bold">Prioridade</Run> - Processos com maior prioridade executam primeiro
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: SIMULADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Simulador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Simulador de Processos" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Visualize o escalonamento de CPU!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Área do Simulador -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Seletor de Algoritmo -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🎯 Algoritmo de Escalonamento" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         Margin="0,0,0,15"/>

                                <ComboBox x:Name="SchedulingComboBox" 
                                        FontSize="13"
                                        Padding="10"
                                        Margin="0,0,0,15"
                                        SelectionChanged="SchedulingComboBox_SelectionChanged">
                                    <ComboBoxItem Content="FCFS (First Come, First Served)" IsSelected="True"/>
                                    <ComboBoxItem Content="SJF (Shortest Job First)"/>
                                    <ComboBoxItem Content="Round Robin"/>
                                    <ComboBoxItem Content="Prioridade"/>
                                </ComboBox>

                                <Border Background="#FEF5E7" 
                                        BorderBrush="#E67E22" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="12">
                                    <TextBlock x:Name="AlgorithmDescription" 
                                             Text="FCFS: Os processos são executados na ordem de chegada, sem interrupção."
                                             FontSize="12"
                                             Foreground="#2C3E50"
                                             TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Adicionar Processo -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="➕ Adicionar Processo" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nome do Processo -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                             Text="Nome:" 
                                             Style="{StaticResource NormalText}"
                                             VerticalAlignment="Center"
                                             Margin="0,5,15,5"/>
                                    <TextBox x:Name="ProcessNameTextBox" 
                                           Grid.Row="0" Grid.Column="1"
                                           FontSize="13"
                                           Padding="8"
                                           Margin="0,5"
                                           Text="P1"/>

                                    <!-- Tempo de Execução -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                             Text="Tempo (ms):" 
                                             Style="{StaticResource NormalText}"
                                             VerticalAlignment="Center"
                                             Margin="0,5,15,5"/>
                                    <TextBox x:Name="ProcessTimeTextBox" 
                                           Grid.Row="1" Grid.Column="1"
                                           FontSize="13"
                                           Padding="8"
                                           Margin="0,5"
                                           Text="100"/>

                                    <!-- Prioridade -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" 
                                             Text="Prioridade:" 
                                             Style="{StaticResource NormalText}"
                                             VerticalAlignment="Center"
                                             Margin="0,5,15,5"/>
                                    <TextBox x:Name="ProcessPriorityTextBox" 
                                           Grid.Row="2" Grid.Column="1"
                                           FontSize="13"
                                           Padding="8"
                                           Margin="0,5"
                                           Text="1"/>

                                    <!-- Botão Adicionar -->
                                    <Button x:Name="AddProcessButton"
                                          Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                          Content="ADICIONAR PROCESSO" 
                                          Style="{StaticResource ButtonStyle}"
                                          Height="40"
                                          Margin="0,15,0,0"
                                          Click="AddProcess_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Lista de Processos -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📋 Fila de Processos" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         Margin="0,0,0,15"/>

                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="ProcessListPanel">
                                        <!-- Processos serão adicionados aqui dinamicamente -->
                                        <Border Background="#F8F9FA" 
                                                BorderBrush="#BDC3C7" 
                                                BorderThickness="1"
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,3">
                                            <Grid>
                                                <TextBlock Text="Nenhum processo adicionado" 
                                                         FontSize="12"
                                                         Foreground="#7F8C8D"
                                                         FontStyle="Italic"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Controles de Simulação -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="⚙️ Controles da Simulação" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <!-- Botões de Controle -->
                                <Grid Margin="0,5,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" 
                                            x:Name="StartButton"
                                            Content="▶ INICIAR" 
                                            Style="{StaticResource ButtonStyle}"
                                            Height="40"
                                            Click="StartSimulation_Click"/>

                                    <Button Grid.Column="2" 
                                            x:Name="ResetButton"
                                            Content="🔄 RESETAR" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Height="40"
                                            Click="ResetSimulation_Click"/>
                                </Grid>

                                <!-- Status da Simulação -->
                                <Border Background="#E8F8F5" 
                                        BorderBrush="#1ABC9C" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="ℹ️ Status" 
                                                 FontWeight="Bold" 
                                                 FontSize="12"
                                                 Foreground="#1ABC9C"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock x:Name="StatusText" 
                                                 Text="Aguardando processos..."
                                                 FontSize="11"
                                                 Foreground="#2C3E50"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock x:Name="CurrentProcessText" 
                                                 Text="Processo atual: Nenhum"
                                                 FontSize="11"
                                                 Foreground="#2C3E50"
                                                 TextWrapping="Wrap"
                                                 Margin="0,3,0,0"/>
                                        <TextBlock x:Name="TimeElapsedText" 
                                                 Text="Tempo decorrido: 0 ms"
                                                 FontSize="11"
                                                 Foreground="#2C3E50"
                                                 TextWrapping="Wrap"
                                                 Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Rodapé com botões de ação -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Border Background="#F8F9FA" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="🎓 Recursos Adicionais" 
                                     FontWeight="Bold" 
                                     FontSize="13"
                                     Foreground="#E67E22"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" 
                                        x:Name="ExercisesButton"
                                        Content="📝 Exercícios" 
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"
                                        FontSize="12"
                                        Click="ExercisesButton_Click" Grid.ColumnSpan="3" Margin="122,10,122,0"/>

                                
                            </Grid>

                           
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>