<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.ALES"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica"
        mc:Ignorable="d"
        Title="Algoritmos e Estruturas de Dados - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#FEF5E7"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="DataStructureBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Algoritmos e Estruturas de Dados" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Os Pilares Fundamentais da Programação"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        <Run Foreground="#E67E22" FontWeight="Bold">Algoritmos</Run> são sequências finitas de 
                        instruções bem definidas para resolver um problema. 
                        <Run Foreground="#E67E22" FontWeight="Bold">Estruturas de Dados</Run> são formas de 
                        organizar e armazenar dados de maneira eficiente. Juntos, formam a base da programação 
                        e da ciência da computação.
                    </TextBlock>

                    <!-- O que são Algoritmos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        O que são Algoritmos?
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22"
                                     Margin="0,0,0,10">
                                Características de um Algoritmo:
                            </TextBlock>

                            <Border Background="White" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="1️⃣ Finitude" 
                                             FontWeight="Bold" 
                                             Foreground="#E67E22"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Deve terminar após um número finito de passos
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="2️⃣ Definição Clara" 
                                             FontWeight="Bold" 
                                             Foreground="#3498DB"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Cada passo deve ser preciso e sem ambiguidades
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#27AE60" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="3️⃣ Entrada" 
                                             FontWeight="Bold" 
                                             Foreground="#27AE60"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Recebe zero ou mais entradas (dados de entrada)
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#9B59B6" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="4️⃣ Saída" 
                                             FontWeight="Bold" 
                                             Foreground="#9B59B6"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Produz pelo menos uma saída (resultado)
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#F39C12" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="5️⃣ Efetividade" 
                                             FontWeight="Bold" 
                                             Foreground="#F39C12"
                                             FontSize="13"
                                             Margin="0,0,0,5"/>
                                    <TextBlock Style="{StaticResource NormalText}" 
                                             FontSize="12" 
                                             Margin="0">
                                        Cada operação deve ser básica e executável
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Estruturas de Dados Lineares -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Estruturas de Dados Lineares
                    </TextBlock>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="📊 Array (Vetor)" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#E67E22"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                Coleção de elementos do mesmo tipo armazenados em posições contíguas de memória. 
                                <Run FontWeight="Bold">Acesso: O(1)</Run> | <Run FontWeight="Bold">Busca: O(n)</Run>
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10">
                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#2C3E50">
                                    [10] [20] [30] [40] [50]
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="📚 Lista Encadeada (Linked List)" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#3498DB"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                Elementos conectados por ponteiros/referências. Inserção e remoção eficientes.
                                <Run FontWeight="Bold">Inserção/Remoção: O(1)</Run> | <Run FontWeight="Bold">Acesso: O(n)</Run>
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10">
                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#2C3E50">
                                    [10]→[20]→[30]→[40]→NULL
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="📥 Pilha (Stack - LIFO)" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#27AE60"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                Last In, First Out. Usado em recursão, desfazer (undo), navegação.
                                <Run FontWeight="Bold">Push/Pop: O(1)</Run>
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#27AE60" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10">
                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#2C3E50" TextAlignment="Center">
                                    ┌───┐
                                    │ 40│ ← topo
                                    ├───┤
                                    │ 30│
                                    ├───┤
                                    │ 20│
                                    └───┘
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="📤 Fila (Queue - FIFO)" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#9B59B6"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                First In, First Out. Usado em impressão, processamento de tarefas.
                                <Run FontWeight="Bold">Enqueue/Dequeue: O(1)</Run>
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#9B59B6" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10">
                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#2C3E50">
                                    início→[10][20][30][40]←fim
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Estruturas Não-Lineares -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Estruturas de Dados Não-Lineares
                    </TextBlock>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="🌳 Árvore Binária" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#E67E22"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                Estrutura hierárquica com raiz e filhos. Cada nó tem no máximo 2 filhos.
                                <Run FontWeight="Bold">Busca (balanceada): O(log n)</Run>
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#E67E22" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="10">
                                <TextBlock FontFamily="Consolas" FontSize="10" Foreground="#2C3E50" TextAlignment="Center">
                                        10
                                       /  \
                                      5    15
                                     / \   / \
                                    3   7 12 20
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DataStructureBox}">
                        <StackPanel>
                            <TextBlock Text="🕸️ Grafo" 
                                     FontWeight="Bold" 
                                     FontSize="14"
                                     Foreground="#3498DB"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                Conjunto de vértices conectados por arestas. Usado em redes sociais, mapas, rotas.
                                Pode ser <Run FontWeight="Bold">direcionado</Run> ou <Run FontWeight="Bold">não-direcionado</Run>.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Complexidade de Algoritmos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Complexidade de Algoritmos (Big O)
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#E67E22"
                                     Margin="0,0,0,10">
                                Notação Big O mede a eficiência de um algoritmo:
                            </TextBlock>

                            <StackPanel Margin="10,5">
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#27AE60" FontWeight="Bold">O(1)</Run> - Constante: Acesso direto a array
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#27AE60" FontWeight="Bold">O(log n)</Run> - Logarítmico: Busca binária
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#F39C12" FontWeight="Bold">O(n)</Run> - Linear: Busca sequencial
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#E67E22" FontWeight="Bold">O(n log n)</Run> - Linearítmico: Merge Sort, Quick Sort
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#E74C3C" FontWeight="Bold">O(n²)</Run> - Quadrático: Bubble Sort, Selection Sort
                                </TextBlock>
                                <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                    <Run Foreground="#C0392B" FontWeight="Bold">O(2ⁿ)</Run> - Exponencial: Recursão ingênua (Fibonacci)
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Algoritmos Clássicos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Algoritmos Clássicos
                    </TextBlock>

                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🔍" FontSize="16"/> 
                                <Run FontWeight="Bold">Busca:</Run> Linear, Binária, em Profundidade (DFS), em Largura (BFS)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="📊" FontSize="16"/> 
                                <Run FontWeight="Bold">Ordenação:</Run> Bubble, Selection, Insertion, Merge, Quick, Heap Sort
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🗺️" FontSize="16"/> 
                                <Run FontWeight="Bold">Caminhos:</Run> Dijkstra, Bellman-Ford, Floyd-Warshall, A*
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🎯" FontSize="16"/> 
                                <Run FontWeight="Bold">Dinâmica:</Run> Programação Dinâmica, Memoization, Backtracking
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: VISUALIZADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Visualizador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Visualizador Interativo" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Veja algoritmos em ação!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Área do Visualizador -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Seletor de Algoritmo -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🎯 Escolha um Algoritmo" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         Margin="0,0,0,15"/>

                                <ComboBox x:Name="AlgorithmComboBox" 
                                        FontSize="13"
                                        Padding="10"
                                        Margin="0,0,0,15"
                                        SelectionChanged="AlgorithmComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Busca Linear" IsSelected="True"/>
                                    <ComboBoxItem Content="Busca Binária"/>
                                    <ComboBoxItem Content="Bubble Sort"/>
                                    <ComboBoxItem Content="Inserir em Pilha"/>
                                    <ComboBoxItem Content="Inserir em Fila"/>
                                </ComboBox>

                                <Border Background="#FEF5E7" 
                                        BorderBrush="#E67E22" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="12">
                                    <TextBlock x:Name="AlgorithmDescription" 
                                             Text="Percorre o array elemento por elemento procurando o valor desejado."
                                             FontSize="12"
                                             Foreground="#2C3E50"
                                             TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Visualização do Array -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#E67E22" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📊 Array de Dados" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <StackPanel x:Name="ArrayPanel" 
                                          Orientation="Horizontal" 
                                          HorizontalAlignment="Center">
                                    <!-- Elementos do array serão gerados aqui -->
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Status e Controles -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="⚙️ Controles" 
                                         FontWeight="Bold" 
                                         FontSize="14"
                                         Foreground="#E67E22"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <!-- Input -->
                                <TextBlock Text="Valor a buscar:" 
                                         FontSize="12"
                                         Foreground="#7F8C8D"
                                         Margin="0,0,0,5"/>
                                <TextBox x:Name="SearchValueTextBox" 
                                       FontSize="14"
                                       Padding="10"
                                       Margin="0,0,0,15"
                                       Text="30"/>

                                <!-- Botões -->
                                <Grid Margin="0,5,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" 
                                            x:Name="ExecuteButton"
                                            Content="▶ EXECUTAR" 
                                            Style="{StaticResource ButtonStyle}"
                                            Height="40"
                                            Click="ExecuteButton_Click"/>

                                    <Button Grid.Column="2" 
                                            x:Name="ResetArrayButton"
                                            Content="🔄 RESETAR" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Height="40"
                                            Click="ResetArray_Click"/>
                                </Grid>

                                <!-- Resultado -->
                                <Border x:Name="ResultPanel"
                                        Background="#D5F4E6" 
                                        BorderBrush="#27AE60" 
                                        BorderThickness="2" 
                                        CornerRadius="6" 
                                        Padding="15"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock x:Name="ResultText" 
                                                 Text="Valor encontrado na posição 2!"
                                                 FontWeight="Bold"
                                                 FontSize="13"
                                                 Foreground="#27AE60"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Informações adicionais -->
                                <Border Background="#E8F8F5" 
                                        BorderBrush="#1ABC9C" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="12"
                                        Margin="0,15,0,0">
                                    <StackPanel>
                                        <TextBlock Text="ℹ️ Informações" 
                                                 FontWeight="Bold"
                                                   FontSize="12"
                                                 Foreground="#1ABC9C"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock x:Name="InfoText" 
                                                 Text="Número de comparações: 0"
                                                 FontSize="11"
                                                 Foreground="#2C3E50"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock x:Name="ComplexityText" 
                                                 Text="Complexidade: O(n)"
                                                 FontSize="11"
                                                 Foreground="#2C3E50"
                                                 TextWrapping="Wrap"
                                                 Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Rodapé com botões de ação -->
                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                    <Border Background="#F8F9FA" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15">
                        <StackPanel>
                            

                            <Grid RenderTransformOrigin="0.652,0.623">
