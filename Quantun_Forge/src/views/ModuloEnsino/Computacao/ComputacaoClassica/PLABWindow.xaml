<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica.PLABWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Computacao.ComputacaoClassica"
        mc:Ignorable="d"
        Title="Portas Lógicas e Álgebra Booleana - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="FormulaText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cambria Math, Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Foreground" Value="#3498DB"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#EBF5FB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="GateBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Portas Lógicas e Álgebra Booleana" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Os Blocos Fundamentais dos Circuitos Digitais"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        A <Run Foreground="#3498DB" FontWeight="Bold">Álgebra Booleana</Run> é um sistema matemático 
                        desenvolvido por George Boole no século XIX. Ela trabalha com apenas dois valores: 
                        <Run FontWeight="Bold">VERDADEIRO (1)</Run> e <Run FontWeight="Bold">FALSO (0)</Run>. 
                        As portas lógicas são implementações físicas dessas operações booleanas em circuitos eletrônicos.
                    </TextBlock>

                    <!-- Portas Lógicas Básicas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Portas Lógicas Fundamentais
                    </TextBlock>

                    <!-- Porta AND -->
                    <Border Style="{StaticResource GateBox}">
                        <StackPanel>
                            <TextBlock Text="Porta AND (E)" 
                                     FontWeight="Bold" 
                                     FontSize="15" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                A saída é <Run FontWeight="Bold">1</Run> apenas quando 
                                <Run FontWeight="Bold">todas</Run> as entradas são <Run FontWeight="Bold">1</Run>.
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="A" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="B" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Saída" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#E74C3C"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#E74C3C"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#E74C3C"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#27AE60" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center"
                                     Margin="0,10,0,0">
                                Notação: A · B  ou  A ∧ B
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Porta OR -->
                    <Border Style="{StaticResource GateBox}">
                        <StackPanel>
                            <TextBlock Text="Porta OR (OU)" 
                                     FontWeight="Bold" 
                                     FontSize="15" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                A saída é <Run FontWeight="Bold">1</Run> quando 
                                <Run FontWeight="Bold">pelo menos uma</Run> entrada é <Run FontWeight="Bold">1</Run>.
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="A" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="B" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Saída" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#E74C3C"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#27AE60" FontWeight="Bold"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#27AE60" FontWeight="Bold"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#27AE60" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center"
                                     Margin="0,10,0,0">
                                Notação: A + B  ou  A ∨ B
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Porta NOT -->
                    <Border Style="{StaticResource GateBox}">
                        <StackPanel>
                            <TextBlock Text="Porta NOT (NÃO / Inversor)" 
                                     FontWeight="Bold" 
                                     FontSize="15" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,8">
                                <Run FontWeight="Bold">Inverte</Run> o valor da entrada. 
                                Se entrada é <Run FontWeight="Bold">1</Run>, saída é <Run FontWeight="Bold">0</Run> e vice-versa.
                            </TextBlock>
                            <Border Background="#F8F9FA" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="A" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Saída" FontWeight="Bold" FontSize="12" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Text="1" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#27AE60" FontWeight="Bold"/>
                                        <TextBlock Text="0" FontFamily="Consolas" TextAlignment="Center" Margin="0,2" Foreground="#E74C3C"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center"
                                     Margin="0,10,0,0">
                                Notação: Ā  ou  ¬A  ou  NOT A
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Portas Compostas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Portas Lógicas Compostas
                    </TextBlock>

                    <!-- Porta NAND -->
                    <Border Style="{StaticResource InfoBox}">
                        <StackPanel>
                            <TextBlock Text="Porta NAND (NOT AND)" 
                                     FontWeight="Bold" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,5"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                Resultado <Run FontWeight="Bold">inverso</Run> da porta AND. 
                                Saída é <Run FontWeight="Bold">0</Run> apenas quando todas as entradas são <Run FontWeight="Bold">1</Run>.
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     FontSize="14" 
                                     Margin="5"
                                     TextAlignment="Center">
                                Saída = NOT(A AND B) = Ā·B̄
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Porta NOR -->
                    <Border Style="{StaticResource InfoBox}">
                        <StackPanel>
                            <TextBlock Text="Porta NOR (NOT OR)" 
                                     FontWeight="Bold" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,5"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                Resultado <Run FontWeight="Bold">inverso</Run> da porta OR. 
                                Saída é <Run FontWeight="Bold">1</Run> apenas quando todas as entradas são <Run FontWeight="Bold">0</Run>.
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     FontSize="14" 
                                     Margin="5"
                                     TextAlignment="Center">
                                Saída = NOT(A OR B) = Ā+B̄
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Porta XOR -->
                    <Border Style="{StaticResource InfoBox}">
                        <StackPanel>
                            <TextBlock Text="Porta XOR (OU Exclusivo)" 
                                     FontWeight="Bold" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,5"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                Saída é <Run FontWeight="Bold">1</Run> quando as entradas são 
                                <Run FontWeight="Bold">diferentes</Run>.
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     FontSize="14" 
                                     Margin="5"
                                     TextAlignment="Center">
                                Saída = A ⊕ B = Ā·B + A·B̄
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Porta XNOR -->
                    <Border Style="{StaticResource InfoBox}">
                        <StackPanel>
                            <TextBlock Text="Porta XNOR (Coincidência)" 
                                     FontWeight="Bold" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,5"/>
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                Saída é <Run FontWeight="Bold">1</Run> quando as entradas são 
                                <Run FontWeight="Bold">iguais</Run>.
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     FontSize="14" 
                                     Margin="5"
                                     TextAlignment="Center">
                                Saída = NOT(A ⊕ B) = A·B + Ā·B̄
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Leis da Álgebra Booleana -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Leis da Álgebra Booleana
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="Leis Fundamentais:" 
                                     FontWeight="Bold" 
                                     Foreground="#3498DB"
                                     Margin="0,0,0,10"/>

                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Identidade:</Run> A + 0 = A  |  A · 1 = A
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Nulo:</Run> A + 1 = 1  |  A · 0 = 0
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Idempotência:</Run> A + A = A  |  A · A = A
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Complemento:</Run> A + Ā = 1  |  A · Ā = 0
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Dupla Negação:</Run> NOT(NOT A) = A
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Comutativa:</Run> A + B = B + A  |  A · B = B · A
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Associativa:</Run> (A + B) + C = A + (B + C)
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• Distributiva:</Run> A · (B + C) = (A · B) + (A · C)
                            </TextBlock>
                            <TextBlock Style="{StaticResource FormulaText}" FontSize="13" Margin="5">
                                <Run FontWeight="Bold">• De Morgan:</Run> NOT(A + B) = Ā · B̄  |  NOT(A · B) = Ā + B̄
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Aplicações Práticas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Aplicações Práticas
                    </TextBlock>
                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Processadores:</Run> Unidades Lógicas Aritméticas (ALU)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Memórias:</Run> Circuitos de armazenamento (Flip-Flops)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Multiplexadores:</Run> Seleção de dados
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Decodificadores:</Run> Conversão de sinais
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                <Run FontWeight="Bold">Somadores:</Run> Operações aritméticas em circuitos
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: INTERPRETADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Interpretador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Interpretador Portugol" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Simule portas lógicas e álgebra booleana!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>

                    <!-- Comandos Disponíveis -->
                    <Expander Header="Comandos Disponíveis" 
                            IsExpanded="False" 
                            Margin="0,15,0,0"
                            Foreground="#2C3E50" 
                            FontWeight="SemiBold"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Background="#F8F9FA">
                        <StackPanel Margin="10">
                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="escreva(&quot;texto&quot;)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Exibe mensagens no console" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="AND(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Retorna 1 se ambos os bits forem 1" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="OR(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Retorna 1 se pelo menos um bit for 1" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="NOT(a)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Inverte o bit (0 vira 1, 1 vira 0)" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="NAND(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="NOT AND - Inverte o resultado do AND" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="NOR(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="NOT OR - Inverte o resultado do OR" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="XOR(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Retorna 1 se os bits forem diferentes" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="XNOR(a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Retorna 1 se os bits forem iguais" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="tabelaVerdade(porta)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Mostra a tabela verdade da porta" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="verificarLei(&quot;nome&quot;, a, b)" 
                                             Foreground="#3498DB" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Verifica leis booleanas (De Morgan, etc)" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Editor de Código -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Editor de Código" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <TextBox x:Name="CodeEditor" 
                                 Grid.Row="1"
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 FontFamily="Cascadia Code, Consolas"
                                 FontSize="13"
                                 Background="White"
                                 Foreground="#2C3E50"
                                 CaretBrush="#3498DB"
                                 VerticalScrollBarVisibility="Auto" 
                                 BorderThickness="0"
                                 Padding="15"
                                 Text="// Bem-vindo ao mundo das Portas Lógicas!&#x0A;escreva(&quot;=== Simulador de Portas Lógicas ===&quot;)&#x0A;&#x0A;// Testando portas básicas:&#x0A;escreva(&quot;AND(1, 1) = &quot; + AND(1, 1))&#x0A;escreva(&quot;OR(0, 1) = &quot; + OR(0, 1))&#x0A;escreva(&quot;NOT(1) = &quot; + NOT(1))&#x0A;&#x0A;// Portas compostas:&#x0A;escreva(&quot;XOR(1, 0) = &quot; + XOR(1, 0))&#x0A;escreva(&quot;NAND(1, 1) = &quot; + NAND(1, 1))&#x0A;&#x0A;// Tabela verdade:&#x0A;tabelaVerdade(&quot;AND&quot;)" />
                    </Grid>
                </Border>

                <!-- Botões de Ação -->
                <Grid Grid.Row="2" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="EXECUTAR" 
                            Height="45" 
                            Style="{StaticResource ButtonStyle}"
                            FontSize="14" 
                            Click="RunCode_Click"/>

                    <Button Grid.Column="2" 
                            Content="LIMPAR" 
                            Height="45"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            Click="ClearCode_Click"/>
                </Grid>

                <!-- Console de Saída -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Console de Saída" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="15">
                            <TextBlock x:Name="ConsoleOutput" 
                                     Foreground="#27AE60" 
                                     FontFamily="Cascadia Code, Consolas"
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     Text="&gt; Simulador de Portas Lógicas iniciado.&#x0A;&gt; Digite seus comandos e clique em EXECUTAR.&#x0A;&gt; Explore o poder da álgebra booleana!&#x0A;"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Botão de Exercícios -->
                <Button Grid.Row="4" 
                        Content="IR PARA EXERCÍCIOS PRÁTICOS"
                        Height="50" 
                        Margin="0,15,0,0"
                        Style="{StaticResource DangerButtonStyle}"
                        FontSize="15"
                        Click="btnExePratica_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>