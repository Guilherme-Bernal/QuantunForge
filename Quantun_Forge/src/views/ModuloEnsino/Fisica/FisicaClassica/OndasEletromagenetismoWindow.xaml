<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Fisica.FisicaClassica.OndasEletromagenetismoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Fisica.FisicaClassica"
        mc:Ignorable="d"
        Title="Ondas e Eletromagnetismo - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#8E44AD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7D3C98"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#F4ECF7"/>
            <Setter Property="BorderBrush" Value="#8E44AD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="EquationBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#8E44AD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Ondas e Eletromagnetismo" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="As Equações de Maxwell e a Propagação da Luz"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        <Run Foreground="#8E44AD" FontWeight="Bold">James Clerk Maxwell</Run> unificou eletricidade, 
                        magnetismo e luz em um conjunto elegante de quatro equações que descrevem todo o eletromagnetismo. 
                        Essas equações revelaram que a luz é uma onda eletromagnética que viaja pelo espaço!
                    </TextBlock>

                    <!-- O que são Ondas EM -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        O que são Ondas Eletromagnéticas?
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#8E44AD"
                                     Margin="0,0,0,10">
                                ⚡ Campos Elétricos e Magnéticos Viajando pelo Espaço
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,10">
                                Uma onda eletromagnética é uma perturbação dos campos elétrico e magnético que se 
                                propaga pelo espaço. O campo elétrico oscila em uma direção, o campo magnético 
                                oscila perpendicular a ele, e ambos viajam juntos à velocidade da luz!
                            </TextBlock>

                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="2" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="🌊 Características das Ondas EM:" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="#8E44AD"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                        • Não precisam de meio material (viajam no vácuo)
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                        • Velocidade constante no vácuo: c = 3 × 10⁸ m/s
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                        • Campos E e B perpendiculares entre si
                                    </TextBlock>
                                    <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,3">
                                        • Ambos perpendiculares à direção de propagação
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Espectro Eletromagnético -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Espectro Eletromagnético
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,10">
                        Todas as ondas eletromagnéticas viajam à mesma velocidade, mas diferem em frequência e comprimento de onda:
                    </TextBlock>

                    <StackPanel Margin="0,5,0,10">
                        <Border Background="#FDEDEC" BorderBrush="#E74C3C" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="📻 Ondas de Rádio" FontWeight="Bold" Foreground="#C0392B" FontSize="12"/>
                                <TextBlock Text="λ > 1 m | Usadas em comunicações, rádio, TV" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FEF5E7" BorderBrush="#F39C12" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="📡 Micro-ondas" FontWeight="Bold" Foreground="#D68910" FontSize="12"/>
                                <TextBlock Text="1 mm - 1 m | Fornos, radar, comunicação satelital" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FADBD8" BorderBrush="#E74C3C" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="🔥 Infravermelho" FontWeight="Bold" Foreground="#E74C3C" FontSize="12"/>
                                <TextBlock Text="700 nm - 1 mm | Calor, sensores térmicos, controle remoto" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FCF3CF" BorderBrush="#F4D03F" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="🌈 Luz Visível" FontWeight="Bold" Foreground="#D4AC0D" FontSize="12"/>
                                <TextBlock Text="400-700 nm | A única faixa que enxergamos (cores do arco-íris)" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E8DAEF" BorderBrush="#8E44AD" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="🔮 Ultravioleta" FontWeight="Bold" Foreground="#7D3C98" FontSize="12"/>
                                <TextBlock Text="10-400 nm | Bronzeamento, esterilização, luz negra" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#D6EAF8" BorderBrush="#3498DB" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="⚕️ Raios X" FontWeight="Bold" Foreground="#2874A6" FontSize="12"/>
                                <TextBlock Text="0.01-10 nm | Radiografias médicas, inspeção de segurança" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#D5F4E6" BorderBrush="#27AE60" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,3">
                            <StackPanel>
                                <TextBlock Text="☢️ Raios Gama" FontWeight="Bold" Foreground="#1E8449" FontSize="12"/>
                                <TextBlock Text="&lt; 0.01 nm | Mais energética, câncer (radioterapia), astrofísica" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Equações de Maxwell -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        As Quatro Equações de Maxwell
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,10">
                        Estas quatro equações elegantes descrevem completamente todo o eletromagnetismo clássico:
                    </TextBlock>

                    <!-- Lei de Gauss (Elétrica) -->
                    <Border Style="{StaticResource EquationBox}" Background="#EBF5FB" BorderBrush="#3498DB">
                        <StackPanel>
                            <TextBlock Text="1️⃣ Lei de Gauss (Elétrica)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2874A6" 
                                     Margin="0,0,0,10"/>

                            <Border Background="#D6EAF8" BorderBrush="#2874A6" BorderThickness="2" CornerRadius="6" Padding="12" Margin="0,5">
                                <TextBlock Text="∇ · E = ρ / ε₀" 
                                         FontSize="20" 
                                         FontWeight="Bold" 
                                         Foreground="#1F618D"
                                         HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,8,0,0">
                                <Bold>Significado:</Bold> Cargas elétricas criam campos elétricos. As linhas de campo 
                                elétrico "divergem" de cargas positivas e "convergem" para cargas negativas.
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,5,0,0">
                                • ∇ · E = divergência do campo elétrico
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • ρ = densidade de carga
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • ε₀ = permissividade do vácuo
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Lei de Gauss (Magnética) -->
                    <Border Style="{StaticResource EquationBox}" Background="#E8F8F5" BorderBrush="#16A085" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="2️⃣ Lei de Gauss (Magnética)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#138D75" 
                                     Margin="0,0,0,10"/>

                            <Border Background="#D1F2EB" BorderBrush="#138D75" BorderThickness="2" CornerRadius="6" Padding="12" Margin="0,5">
                                <TextBlock Text="∇ · B = 0" 
                                         FontSize="20" 
                                         FontWeight="Bold" 
                                         Foreground="#117A65"
                                         HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,8,0,0">
                                <Bold>Significado:</Bold> Não existem monopolos magnéticos! Todo ímã tem polo norte E polo sul. 
                                As linhas de campo magnético sempre formam loops fechados.
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,5,0,0">
                                • ∇ · B = divergência do campo magnético = 0
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • Não há "cargas magnéticas" isoladas
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Lei de Faraday -->
                    <Border Style="{StaticResource EquationBox}" Background="#F4ECF7" BorderBrush="#8E44AD" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="3️⃣ Lei de Faraday-Lenz" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#7D3C98" 
                                     Margin="0,0,0,10"/>

                            <Border Background="#E8DAEF" BorderBrush="#7D3C98" BorderThickness="2" CornerRadius="6" Padding="12" Margin="0,5">
                                <TextBlock Text="∇ × E = -∂B/∂t" 
                                         FontSize="20" 
                                         FontWeight="Bold" 
                                         Foreground="#6C3483"
                                         HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,8,0,0">
                                <Bold>Significado:</Bold> Um campo magnético que varia no tempo cria um campo elétrico. 
                                Este é o princípio dos geradores elétricos e transformadores!
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,5,0,0">
                                • ∇ × E = rotacional do campo elétrico
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • ∂B/∂t = taxa de variação do campo magnético
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Lei de Ampère-Maxwell -->
                    <Border Style="{StaticResource EquationBox}" Background="#FEF5E7" BorderBrush="#F39C12" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="4️⃣ Lei de Ampère-Maxwell" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#D68910" 
                                     Margin="0,0,0,10"/>

                            <Border Background="#FCF3CF" BorderBrush="#D68910" BorderThickness="2" CornerRadius="6" Padding="12" Margin="0,5">
                                <TextBlock Text="∇ × B = μ₀J + μ₀ε₀(∂E/∂t)" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="#B7950B"
                                         HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,8,0,0">
                                <Bold>Significado:</Bold> Correntes elétricas E campos elétricos variáveis criam campos magnéticos. 
                                O segundo termo foi adicionado por Maxwell e possibilitou prever as ondas eletromagnéticas!
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,5,0,0">
                                • ∇ × B = rotacional do campo magnético
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • J = densidade de corrente
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="11" Foreground="#7F8C8D" Margin="0,2,0,0">
                                • ∂E/∂t = corrente de deslocamento (contribuição de Maxwell)
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Propagação de Ondas -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Equação de Propagação de Ondas
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontWeight="Bold" 
                                     Foreground="#8E44AD"
                                     Margin="0,0,0,10">
                                🌊 Das Equações de Maxwell surge a Equação de Onda
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,10">
                                Combinando as equações de Maxwell no vácuo (sem cargas ou correntes), 
                                obtemos a equação de onda para os campos E e B:
                            </TextBlock>

                            <Border Background="White" BorderBrush="#8E44AD" BorderThickness="2" CornerRadius="6" Padding="15" Margin="0,10,0,10">
                                <StackPanel>
                                    <TextBlock Text="∇²E = (1/c²)(∂²E/∂t²)" 
                                             FontSize="18" 
                                             FontWeight="Bold" 
                                             Foreground="#7D3C98"
                                             HorizontalAlignment="Center"
                                             Margin="0,5"/>
                                    <TextBlock Text="∇²B = (1/c²)(∂²B/∂t²)" 
                                             FontSize="18" 
                                             FontWeight="Bold" 
                                             Foreground="#7D3C98"
                                             HorizontalAlignment="Center"
                                             Margin="0,5"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,8,0,0">
                                <Bold>Onde:</Bold> c = 1/√(μ₀ε₀) ≈ 3 × 10⁸ m/s (velocidade da luz!)
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" FontSize="12" Margin="0,5,0,0" FontWeight="SemiBold" Foreground="#27AE60">
                                ✨ Descoberta revolucionária: Maxwell previu que a luz é uma onda eletromagnética antes de qualquer experimento confirmar!
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Relação Fundamental -->
                    <Border Background="#E8F8F5" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="📐 Relações Fundamentais" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#16A085"
                                     Margin="0,0,0,10"/>

                            <Border Background="White" BorderBrush="#16A085" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="c = λf" 
                                             FontSize="16" 
                                             FontWeight="Bold" 
                                             Foreground="#138D75"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="(velocidade = comprimento de onda × frequência)" 
                                             FontSize="10" 
                                             Foreground="#7F8C8D"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" BorderBrush="#16A085" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="E = hf" 
                                             FontSize="16" 
                                             FontWeight="Bold" 
                                             Foreground="#138D75"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="(energia do fóton = constante de Planck × frequência)" 
                                             FontSize="10" 
                                             Foreground="#7F8C8D"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" BorderBrush="#16A085" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="c = 3 × 10⁸ m/s" 
                                             FontSize="16" 
                                             FontWeight="Bold" 
                                             Foreground="#138D75"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="(velocidade da luz no vácuo - constante universal)" 
                                             FontSize="10" 
                                             Foreground="#7F8C8D"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Aplicações -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Aplicações das Ondas Eletromagnéticas
                    </TextBlock>

                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="📡" FontSize="16"/> 
                                <Run FontWeight="Bold">Comunicações:</Run> Rádio, TV, celular, Wi-Fi, GPS, satélites
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="⚕️" FontSize="16"/> 
                                <Run FontWeight="Bold">Medicina:</Run> Raios X, ressonância magnética, radioterapia
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🔬" FontSize="16"/> 
                                <Run FontWeight="Bold">Ciência:</Run> Espectroscopia, telescópios, microscópios
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🏠" FontSize="16"/> 
                                <Run FontWeight="Bold">Casa:</Run> Micro-ondas, controles remotos, lâmpadas LED
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="🌍" FontSize="16"/> 
                                <Run FontWeight="Bold">Astronomia:</Run> Estudo de estrelas, galáxias e radiação cósmica
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Curiosidade -->
                    <Border Background="#FEF5E7" BorderBrush="#F39C12" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="🌟 Curiosidade Histórica" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#D68910"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" FontSize="12">
                                Em 1865, Maxwell unificou eletricidade e magnetismo e previu a existência de ondas 
                                eletromagnéticas viajando à velocidade da luz. Em 1887, Heinrich Hertz confirmou 
                                experimentalmente a existência dessas ondas, abrindo caminho para a era das comunicações 
                                sem fio. Hoje, bilhões de dispositivos usam ondas EM a cada segundo!
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: SIMULADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Simulador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Calculadora de Ondas EM" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Explore o espectro eletromagnético!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>

                    <!-- Comandos Disponíveis -->
                    <Expander Header="Comandos Disponíveis" 
                            IsExpanded="False" 
                            Margin="0,15,0,0"
                            Foreground="#2C3E50" 
                            FontWeight="SemiBold"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Background="#F8F9FA">
                        <StackPanel Margin="10">
                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="calcularFrequencia(comprimentoOnda: 500)" 
                                             Foreground="#7D3C98" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="11"/>
                                    <TextBlock Text="Calcula frequência a partir do comprimento de onda (em nm)" 
                                             Foreground="#7F8C8D" 
                                             FontSize="10" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="calcularComprimentoOnda(frequencia: 5e14)" 
                                             Foreground="#7D3C98" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="11"/>
                                    <TextBlock Text="Calcula comprimento de onda a partir da frequência (em Hz)" 
                                             Foreground="#7F8C8D" 
                                             FontSize="10" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="calcularEnergia(frequencia: 6e14)" 
                                             Foreground="#7D3C98" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="11"/>
                                    <TextBlock Text="Calcula energia do fóton (E = hf) em Joules e eV" 
                                             Foreground="#7F8C8D" 
                                             FontSize="10" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="identificarTipo(comprimentoOnda: 450)" 
                                             Foreground="#7D3C98" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="11"/>
                                    <TextBlock Text="Identifica o tipo de onda no espectro eletromagnético" 
                                             Foreground="#7F8C8D" 
                                             FontSize="10" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#8E44AD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="escreva(&quot;mensagem&quot;)" 
                                             Foreground="#7D3C98" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="11"/>
                                    <TextBlock Text="Exibe mensagens no console" 
                                             Foreground="#7F8C8D" 
                                             FontSize="10" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Editor de Código -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Editor de Código" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <TextBox x:Name="CodeEditor" 
                                 Grid.Row="1"
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 FontFamily="Cascadia Code, Consolas"
                                 FontSize="13"
                                 Background="White"
                                 Foreground="#2C3E50"
                                 CaretBrush="#8E44AD"
                                 VerticalScrollBarVisibility="Auto" 
                                 BorderThickness="0"
                                 Padding="15"
                                 Text="// 🌈 Explorando a Luz Visível&#x0A;escreva(&quot;=== ANÁLISE DO ESPECTRO VISÍVEL ===&quot;)&#x0A;escreva(&quot;&quot;)&#x0A;&#x0A;// Luz azul (λ ≈ 450 nm)&#x0A;escreva(&quot;🔵 Analisando luz azul...&quot;)&#x0A;identificarTipo(comprimentoOnda: 450)&#x0A;calcularFrequencia(comprimentoOnda: 450)&#x0A;escreva(&quot;&quot;)&#x0A;&#x0A;// Luz verde (λ ≈ 550 nm)&#x0A;escreva(&quot;🟢 Analisando luz verde...&quot;)&#x0A;identificarTipo(comprimentoOnda: 550)&#x0A;calcularFrequencia(comprimentoOnda: 550)&#x0A;escreva(&quot;&quot;)&#x0A;&#x0A;// Luz vermelha (λ ≈ 650 nm)&#x0A;escreva(&quot;🔴 Analisando luz vermelha...&quot;)&#x0A;identificarTipo(comprimentoOnda: 650)&#x0A;calcularFrequencia(comprimentoOnda: 650)" />
                    </Grid>
                </Border>

                <!-- Botões de Ação -->
                <Grid Grid.Row="2" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="EXECUTAR" 
                            Height="45" 
                            Style="{StaticResource ButtonStyle}"
                            FontSize="14" 
                            Click="RunCode_Click"/>

                    <Button Grid.Column="2" 
                            Content="LIMPAR" 
                            Height="45"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            Click="ClearCode_Click"/>
                </Grid>

                <!-- Console de Saída -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Console de Saída" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="15">
                            <TextBlock x:Name="ConsoleOutput" 
                                     Foreground="#27AE60" 
                                     FontFamily="Cascadia Code, Consolas"
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     Text="&gt; Calculadora de Ondas EM iniciada.&#x0A;&gt; Digite seu código e clique em EXECUTAR.&#x0A;&gt; Explore o espectro eletromagnético!"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Botões Finais -->
                <StackPanel Grid.Row="4" Margin="0,15,0,0">
                    <Border Background="#F8F9FA" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="🎓 Recursos Adicionais" 
                                     FontWeight="Bold" 
                                     FontSize="13"
                                     Foreground="#8E44AD"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" 
                                        x:Name="ExercisesButton"
                                        Content="📝 Exercícios" 
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"
                                        FontSize="12"
                                        Click="ExercisesButton_Click"/>

                                <Button Grid.Column="2" 
                                        x:Name="QuizButton"
                                        Content="🧪 Quiz" 
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"
                                        FontSize="12"
                                        Click="QuizButton_Click"/>
                            </Grid>

                            <Button x:Name="BackButton"
                                    Content="← Voltar ao Menu" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Height="35"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Click="BackButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>