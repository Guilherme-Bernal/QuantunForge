<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Matematica.Testes.TeoriaProbabilidadeTesteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Matematica.Testes"
        mc:Ignorable="d"
        Title="Teste - Teoria da Probabilidade" Height="700" Width="1100"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="650" MinWidth="1000">

    <Window.Resources>
        <!-- Estilo para botões de opção -->
        <Style x:Key="OptionButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBF5FB"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botão correto -->
        <Style x:Key="CorrectButton" TargetType="Button" BasedOn="{StaticResource OptionButton}">
            <Setter Property="Background" Value="#D5F4E6"/>
            <Setter Property="BorderBrush" Value="#27AE60"/>
            <Setter Property="Foreground" Value="#1E8449"/>
        </Style>

        <!-- Estilo para botão incorreto -->
        <Style x:Key="IncorrectButton" TargetType="Button" BasedOn="{StaticResource OptionButton}">
            <Setter Property="Background" Value="#FADBD8"/>
            <Setter Property="BorderBrush" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="#C0392B"/>
        </Style>

        <!-- Estilo para botão de ação -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Foreground" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABEÇALHO -->
        <Border Grid.Row="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,0,2"
                Padding="30,20">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Teste: Teoria da Probabilidade" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="#2C3E50"/>
                        <TextBlock x:Name="SubtitleText" Text="Questão 1 de 5" 
                                 FontSize="13" Foreground="#7F8C8D" 
                                 Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTEÚDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BARRA DE PROGRESSO -->
                <Border Grid.Row="0" Background="#E8E8E8" 
                        CornerRadius="10" Height="25" Margin="0,0,0,20">
                    <Grid>
                        <Border x:Name="ProgressBar" 
                                Background="#3498DB" 
                                CornerRadius="10" 
                                HorizontalAlignment="Left"
                                Width="0"/>
                        <TextBlock x:Name="ProgressText" Text="0%" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Foreground="#2C3E50" FontWeight="Bold"
                                 FontSize="12"/>
                    </Grid>
                </Border>

                <!-- PONTUAÇÃO E VIDAS -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pontuação -->
                    <Border Grid.Column="0" Background="White" 
                            BorderBrush="#BDC3C7" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Pontuação" 
                                         Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock x:Name="ScoreText" Text="0 pontos" 
                                         Foreground="#3498DB" FontSize="20" 
                                         FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Vidas -->
                    <Border Grid.Column="1" Background="White" 
                            BorderBrush="#BDC3C7" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Vidas" 
                                         Foreground="#7F8C8D" FontSize="11"/>
                                <TextBlock x:Name="LivesText" Text="❤️ ❤️ ❤️" 
                                         Foreground="#E74C3C" FontSize="20" 
                                         FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- ÁREA DA QUESTÃO -->
                <Border Grid.Row="2" Background="White" 
                        BorderBrush="#BDC3C7" BorderThickness="1"
                        CornerRadius="8" Padding="30" Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Pergunta -->
                        <TextBlock x:Name="QuestionText" 
                                 Text="Qual é a probabilidade de obter cara ao lançar uma moeda justa?"
                                 FontSize="20" FontWeight="Bold"
                                 Foreground="#2C3E50" TextWrapping="Wrap"
                                 Margin="0,0,0,30"/>

                        <!-- Opções de resposta -->
                        <Button x:Name="Option1" Content="A) 0.25" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="1"/>

                        <Button x:Name="Option2" Content="B) 0.5" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="2"/>

                        <Button x:Name="Option3" Content="C) 0.75" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="3"/>

                        <Button x:Name="Option4" Content="D) 1.0" 
                                Style="{StaticResource OptionButton}"
                                Click="Option_Click" Tag="4"/>
                    </StackPanel>
                </Border>

                <!-- FEEDBACK -->
                <Border x:Name="FeedbackPanel" Grid.Row="3" 
                        Background="#D5F4E6" 
                        BorderBrush="#27AE60" BorderThickness="2"
                        CornerRadius="8" 
                        Padding="20" Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="FeedbackIcon" Text="✓" 
                                     FontSize="32" FontWeight="Bold"
                                     Foreground="#27AE60" Margin="0,0,15,0"/>
                            <StackPanel>
                                <TextBlock x:Name="FeedbackTitle" 
                                         Text="Correto!" 
                                         FontSize="18" FontWeight="Bold"
                                         Foreground="#1E8449"/>
                                <TextBlock x:Name="FeedbackMessage" 
                                         Text="Muito bem! A probabilidade é 0.5" 
                                         FontSize="14" Foreground="#27AE60"
                                         TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- BOTÕES DE AÇÃO -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="PULAR" 
                            Style="{StaticResource SecondaryButton}"
                            Click="SkipQuestion_Click"/>

                    <Button x:Name="CheckButton" Grid.Column="2" 
                            Content="VERIFICAR RESPOSTA" 
                            Style="{StaticResource ActionButton}"
                            Click="CheckAnswer_Click"
                            IsEnabled="False"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
