<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Matematica.NumerosComplexosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Matematica"
        mc:Ignorable="d"
        Title="Números Complexos - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="FormulaText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cambria Math, Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Foreground" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#EBF5FB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ConceptCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="FormulaBox" TargetType="Border">
            <Setter Property="Background" Value="#FDFEFE"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6"/>
        </Style>

        <Style x:Key="ExampleBox" TargetType="Border">
            <Setter Property="Background" Value="#FEF9E7"/>
            <Setter Property="BorderBrush" Value="#F39C12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Números Complexos" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Expandindo o Sistema Numérico para Novas Dimensões"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução Simplificada -->
                    <Border Background="#E8F8F5" 
                            BorderBrush="#1ABC9C" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🎯 O que são Números Complexos?" 
                                     FontSize="15" 
                                     FontWeight="Bold" 
                                     Foreground="#16A085"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="13" 
                                     Margin="0">
                                Imagine tentar resolver a equação x² = -1. Com números normais (reais), isso é impossível! Os números complexos foram inventados justamente para resolver esse tipo de problema.
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="13" 
                                     Margin="0,8,0,0">
                                Eles expandem nosso sistema numérico adicionando uma nova "dimensão" matemática, representada pela letra <Run FontWeight="Bold" Foreground="#2980B9">i</Run> (unidade imaginária), onde i² = -1.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Fundamentos Básicos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        📐 Fundamentos Básicos
                    </TextBlock>

                    <TextBlock Style="{StaticResource NormalText}" 
                             FontSize="12" 
                             Margin="0,0,0,12">
                        Todo número complexo tem duas partes: uma 
                        <Run Foreground="#2980B9" FontWeight="Bold">parte real</Run> e uma 
                        <Run Foreground="#2980B9" FontWeight="Bold">parte imaginária</Run>.
                    </TextBlock>

                    <!-- Forma Algébrica -->
                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="✏️ Forma Algébrica (a + bi)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="16" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    z = a + bi
                                </TextBlock>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,8,0,0">
                                <Run FontWeight="Bold" Foreground="#34495E">a:</Run> parte real (número normal)
                                <LineBreak/>
                                <Run FontWeight="Bold" Foreground="#34495E">b:</Run> parte imaginária (multiplicada por i)
                                <LineBreak/>
                                <Run FontWeight="Bold" Foreground="#34495E">i:</Run> unidade imaginária (i² = -1)
                            </TextBlock>

                            <Border Style="{StaticResource ExampleBox}">
                                <StackPanel>
                                    <TextBlock Text="Exemplo:" 
                                             FontSize="11" 
                                             FontWeight="Bold" 
                                             Foreground="#D68910"/>
                                    <TextBlock Text="3 + 4i significa: parte real = 3, parte imaginária = 4" 
                                             FontSize="11" 
                                             Foreground="#7F8C8D"
                                             TextWrapping="Wrap"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Plano Complexo -->
                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📊 Plano Complexo (Visualização Geométrica)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Assim como você pode localizar pontos em um mapa usando coordenadas (x, y), pode representar números complexos em um plano especial:
                            </TextBlock>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0">
                                <Run FontWeight="Bold">• Eixo horizontal (x):</Run> parte real
                                <LineBreak/>
                                <Run FontWeight="Bold">• Eixo vertical (y):</Run> parte imaginária
                            </TextBlock>

                            <Border Style="{StaticResource ExampleBox}">
                                <StackPanel>
                                    <TextBlock Text="Exemplo do dia a dia:" 
                                             FontSize="11" 
                                             FontWeight="Bold" 
                                             Foreground="#D68910"/>
                                    <TextBlock Text="O número 3 + 4i fica no ponto (3, 4) do plano, como um endereço no mapa!" 
                                             FontSize="11" 
                                             Foreground="#7F8C8D"
                                             TextWrapping="Wrap"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Forma Polar -->
                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="🎯 Forma Polar (r·e^iθ)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Outra forma de representar: usando distância e ângulo (como um GPS!):
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center">
                                    z = r(cos θ + i sin θ) = r·e^(iθ)
                                </TextBlock>
                            </Border>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,8,0,0">
                                <Run FontWeight="Bold" Foreground="#34495E">r:</Run> módulo (distância da origem) = √(a² + b²)
                                <LineBreak/>
                                <Run FontWeight="Bold" Foreground="#34495E">θ:</Run> argumento (ângulo com o eixo x)
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Operações -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        ➕ Operações Básicas
                    </TextBlock>

                    <Border Style="{StaticResource InfoBox}">
                        <TextBlock Style="{StaticResource NormalText}" Margin="0">
                            <Run FontWeight="Bold">Soma:</Run> Some as partes separadamente
                            <LineBreak/>
                            (3+4i) + (1+2i) = (3+1) + (4+2)i = 4 + 6i
                        </TextBlock>
                    </Border>

                    <Border Style="{StaticResource InfoBox}">
                        <TextBlock Style="{StaticResource NormalText}" Margin="0">
                            <Run FontWeight="Bold">Multiplicação:</Run> Use a regra i² = -1
                            <LineBreak/>
                            (a+bi)(c+di) = (ac-bd) + (ad+bc)i
                        </TextBlock>
                    </Border>

                    <Border Style="{StaticResource InfoBox}">
                        <TextBlock Style="{StaticResource NormalText}" Margin="0">
                            <Run FontWeight="Bold">Conjugado:</Run> Inverta o sinal da parte imaginária
                            <LineBreak/>
                            Se z = 3+4i, então z̄ = 3-4i
                        </TextBlock>
                    </Border>

                    <!-- Aplicações -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        🌍 Aplicações Práticas
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="⚡ Engenharia Elétrica" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Análise de circuitos de corrente alternada"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="📡 Processamento de Sinais" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Áudio, vídeo e comunicações digitais"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="⚛️ Física Quântica" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Mecânica quântica e computação quântica"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="🎨 Gráficos e Fractais" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Conjunto de Mandelbrot e arte digital"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: INTERPRETADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Interpretador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="🧮 Calculadora de Números Complexos" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Experimente criar e operar com números complexos!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>

                    <!-- Comandos Disponíveis -->
                    <Expander Header="📚 Comandos Disponíveis" 
                            IsExpanded="False" 
                            Margin="0,15,0,0"
                            Foreground="#2C3E50" 
                            FontWeight="SemiBold"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Background="#F8F9FA">
                        <StackPanel Margin="10">
                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="complexo(3, 4)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Cria o número complexo 3 + 4i" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="modulo(z)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Calcula a distância da origem" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="conjugado(z)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Retorna o conjugado" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="somar(z1, z2)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Soma dois números complexos" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="multiplicar(z1, z2)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Multiplica dois números complexos" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="escreva(&quot;mensagem&quot;)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code, Consolas"
                                             FontSize="12"/>
                                    <TextBlock Text="Mostra uma mensagem no console" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Editor de Código -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="✏️ Editor de Código" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <TextBox x:Name="CodeEditor" 
                                 Grid.Row="1"
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 FontFamily="Cascadia Code, Consolas"
                                 FontSize="13"
                                 Background="White"
                                 Foreground="#2C3E50"
                                 CaretBrush="#3498DB"
                                 VerticalScrollBarVisibility="Auto" 
                                 BorderThickness="0"
                                 Padding="15"
                                 Text="// Bem-vindo! Vamos criar números complexos&#x0A;escreva(&quot;🎯 Criando número complexo z1 = 3 + 4i&quot;)&#x0A;&#x0A;var z1 = complexo(3, 4)&#x0A;escreva(&quot;✅ z1 criado com sucesso!&quot;)&#x0A;&#x0A;// Vamos calcular o módulo (distância da origem)&#x0A;escreva(&quot;🔢 Calculando módulo de z1...&quot;)&#x0A;modulo(z1)" />
                    </Grid>
                </Border>

                <!-- Botões de Ação -->
                <Grid Grid.Row="2" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="▶️ EXECUTAR" 
                            Height="45" 
                            Style="{StaticResource ButtonStyle}"
                            FontSize="14" 
                            Click="RunCode_Click"/>

                    <Button Grid.Column="2" 
                            Content="🗑️ LIMPAR" 
                            Height="45"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"
                            Click="ClearCode_Click"/>
                </Grid>

                <!-- Console de Saída -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="💻 Console de Saída" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="15">
                            <TextBlock x:Name="ConsoleOutput" 
                                     Foreground="#27AE60" 
                                     FontFamily="Cascadia Code, Consolas"
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     Text="&gt; 🚀 Calculadora de Números Complexos iniciada!&#x0A;&gt; 📝 Digite seu código acima e clique em EXECUTAR.&#x0A;&gt; 💡 Dica: Experimente criar seu primeiro número complexo!"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Botão de Exercícios -->
                <Button Grid.Row="4" 
                        Content="🎓 IR PARA EXERCÍCIOS PRÁTICOS"
                        Height="50" 
                        Margin="0,15,0,0"
                        Style="{StaticResource DangerButtonStyle}"
                        FontSize="15"
                        Click="btnExerciciosClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>