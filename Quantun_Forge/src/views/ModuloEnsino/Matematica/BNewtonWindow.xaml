<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Matematica.BNewtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Matematica"
        mc:Ignorable="d"
        Title="Binômio de Newton - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="FormulaText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Cambria Math, Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="Foreground" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CodeExample" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Courier New"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5,3"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#EBF5FB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Binômio de Newton" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Expansão de Potências"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <TextBlock Style="{StaticResource NormalText}">
                        O <Run Foreground="#2980B9" FontWeight="Bold">Binômio de Newton</Run> é um teorema fundamental da álgebra que permite expandir 
                        potências de binômios da forma (x + a)ⁿ de maneira sistemática e elegante, sem a necessidade 
                        de multiplicações repetitivas.
                    </TextBlock>

                    <!-- Fórmula Geral -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Fórmula Geral
                    </TextBlock>
                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource FormulaText}" 
                                     TextAlignment="Center"
                                     FontSize="18">
                                (x + a)ⁿ = Σ(k=0 até n) [C(n,k) · x<Run BaselineAlignment="Superscript" FontSize="12">n⁻ᵏ</Run> · a<Run BaselineAlignment="Superscript" FontSize="12">ᵏ</Run>]
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     TextAlignment="Center" 
                                     FontSize="12" 
                                     Foreground="#7F8C8D" 
                                     Margin="0,8,0,0">
                                onde C(n,k) é o coeficiente binomial "n sobre k"
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Coeficiente Binomial -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Coeficiente Binomial
                    </TextBlock>
                    <TextBlock Style="{StaticResource NormalText}">
                        O coeficiente binomial, também chamado de "combinação", é calculado por:
                    </TextBlock>
                    <Border Background="#F8F9FA" 
                            BorderBrush="#3498DB" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="10,5,10,15">
                        <TextBlock Style="{StaticResource FormulaText}" 
                                 TextAlignment="Center">
                            C(n,k) = n! / (k! · (n-k)!)
                        </TextBlock>
                    </Border>

                    <!-- Triângulo de Pascal -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Triângulo de Pascal
                    </TextBlock>
                    <TextBlock Style="{StaticResource NormalText}" Margin="0,0,0,10">
                        Os coeficientes formam o <Run Foreground="#2980B9" FontWeight="Bold">Triângulo de Pascal</Run>:
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- n=0 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=0:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>

                            <!-- n=1 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=1:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1   1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>

                            <!-- n=2 -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=2:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1   2   1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>

                            <!-- n=3 -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=3:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1   3   3   1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>

                            <!-- n=4 -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=4:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1   4   6   4   1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>

                            <!-- n=5 -->
                            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="n=5:" Width="50" Foreground="#2980B9" FontWeight="Bold"/>
                                <TextBlock Text="1   5   10   10   5   1" Foreground="#2C3E50" FontFamily="Cascadia Code"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Propriedades -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        Propriedades Importantes
                    </TextBlock>
                    <StackPanel Margin="0,5,0,10">
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                O número de termos na expansão é sempre n + 1
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                A soma dos expoentes em cada termo é sempre igual a n
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                Os coeficientes são simétricos: C(n,k) = C(n,n-k)
                            </TextBlock>
                        </Border>
                        <Border Style="{StaticResource InfoBox}">
                            <TextBlock Style="{StaticResource NormalText}" Margin="0">
                                <Run Text="•" Foreground="#3498DB" FontSize="16" FontWeight="Bold"/> 
                                A soma de todos os coeficientes é 2ⁿ
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: INTERPRETADOR -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título do Interpretador -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Interpretador Portugol" 
                             Style="{StaticResource TitleStyle}"/>
                    <TextBlock Text="Teste seus conhecimentos!" 
                             FontSize="13" 
                             Foreground="#7F8C8D" 
                             Margin="0,2,0,0"/>

                    <!-- Comandos Disponíveis -->
                    <Expander Header="Comandos Disponíveis" 
                            IsExpanded="False" 
                            Margin="0,15,0,0"
                            Foreground="#2C3E50" 
                            FontWeight="SemiBold"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Background="#F8F9FA">
                        <StackPanel Margin="10">
                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="escreva(&quot;texto&quot;)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Exibe mensagens" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="C(n, k)  ou  fatorial(n)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Cálculos matemáticos" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="binomio(x, a, n)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Expande (x+a)ⁿ" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White" 
                                    BorderBrush="#3498DB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="pascal(n)" 
                                             Foreground="#2980B9" 
                                             FontFamily="Cascadia Code"
                                             FontSize="12"/>
                                    <TextBlock Text="Mostra linha do triângulo" 
                                             Foreground="#7F8C8D" 
                                             FontSize="11" 
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Editor de Código -->
                <Border Grid.Row="1" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Editor de Código" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <TextBox x:Name="CodeEditor" 
                                 Grid.Row="1"
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 FontFamily="Cascadia Code, Consolas"
                                 FontSize="13"
                                 Background="White"
                                 Foreground="#2C3E50"
                                 CaretBrush="#3498DB"
                                 VerticalScrollBarVisibility="Auto" 
                                 BorderThickness="0"
                                 Padding="15"
                                 Text="// Experimente os comandos!&#x0A;escreva(&quot;Bem-vindo ao Binômio de Newton!&quot;)&#x0A;&#x0A;// Calcule C(5, 2):&#x0A;C(5, 2)" />
                    </Grid>
                </Border>

                <!-- Botões de Ação -->
                <Grid Grid.Row="2" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="EXECUTAR" 
                            Height="45" 
                            Style="{StaticResource ButtonStyle}"
                            FontSize="14" 
                            Click="RunCode_Click"/>

                    <Button Grid.Column="2" 
                            Content="LIMPAR" 
                            Height="45"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="14"/>
                </Grid>

                <!-- Console de Saída -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#ECF0F1" 
                                CornerRadius="8,8,0,0" 
                                Padding="10,8">
                            <TextBlock Text="Console de Saída" 
                                     Foreground="#2C3E50" 
                                     FontWeight="SemiBold"
                                     FontSize="13"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="15">
                            <TextBlock x:Name="ConsoleOutput" 
                                     Foreground="#27AE60" 
                                     FontFamily="Cascadia Code, Consolas"
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     Text="&gt; Interpretador Portugol iniciado.&#x0A;&gt; Digite seu código e clique em EXECUTAR.&#x0A;"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Botão de Exercícios -->
                <Button Grid.Row="4" 
                        Content="IR PARA EXERCÍCIOS PRÁTICOS"
                        Height="50" 
                        Margin="0,15,0,0"
                        Style="{StaticResource DangerButtonStyle}"
                        FontSize="15"
                        Click="btnExepratica_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>