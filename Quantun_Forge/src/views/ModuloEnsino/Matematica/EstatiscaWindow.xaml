<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Matematica.Testes.EstatiscaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Matematica.Testes"
        mc:Ignorable="d"
        Title="Estatística - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D68910"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#EBF5FB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ConceptCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="FormulaBox" TargetType="Border">
            <Setter Property="Background" Value="#FDFEFE"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="CaretBrush" Value="#3498DB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="8,0,8,0"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Estatística Descritiva" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Análise e Interpretação de Dados"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <Border Background="#E8F8F5" 
                            BorderBrush="#1ABC9C" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🎯 O que é Estatística?" 
                                     FontSize="15" 
                                     FontWeight="Bold" 
                                     Foreground="#16A085"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="13" 
                                     Margin="0">
                                Estatística é a ciência de coletar, organizar, analisar e interpretar dados. Ela nos ajuda a transformar números brutos em informações úteis para tomar decisões.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Medidas de Tendência Central -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        📊 Medidas de Tendência Central
                    </TextBlock>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📐 Média (x̄)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Soma de todos os valores dividida pelo número de elementos. Representa o "centro" dos dados.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    x̄ = (Σx) / n
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📊 Mediana" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0">
                                Valor central quando os dados estão ordenados. Divide o conjunto ao meio: 50% acima, 50% abaixo.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="🎯 Moda" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0">
                                Valor que aparece com maior frequência no conjunto de dados. Pode haver mais de uma moda.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Medidas de Dispersão -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        📈 Medidas de Dispersão
                    </TextBlock>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📏 Amplitude" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Diferença entre o maior e o menor valor. Indica o "alcance" dos dados.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    A = máx - mín
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📈 Variância (σ²)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Média dos quadrados dos desvios em relação à média. Mede o quão espalhados os dados estão.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="13" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    σ² = Σ(x - x̄)² / n
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📉 Desvio Padrão (σ)" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Raiz quadrada da variância. Mesma unidade dos dados originais, mais fácil de interpretar.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    σ = √(σ²)
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Aplicações -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        🌍 Aplicações Práticas
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="📊 Análise de Negócios" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Análise de vendas, satisfação do cliente, desempenho de produtos"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="🏥 Pesquisa Científica" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Estudos clínicos, análise de experimentos, validação de hipóteses"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="📈 Controle de Qualidade" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Monitoramento de processos industriais, análise de defeitos"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="💰 Finanças e Investimentos" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Análise de risco, retorno esperado, volatilidade de ativos"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: CALCULADORA -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="📊 Calculadora Estatística" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="18"/>
                        <TextBlock Text="Analise seus dados!" 
                                 FontSize="12" 
                                 Foreground="#7F8C8D" 
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Entrada de Dados -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="📝 Entrada de Dados" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <TextBlock Text="Insira os valores separados por vírgula:" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,0,0,5"/>

                            <TextBox x:Name="txtDadosInput" 
                                     Style="{StaticResource ModernTextBox}"
                                     Height="50"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="False"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="10, 15, 20, 25, 30, 35, 40"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="✓ Carregar" 
                                        Style="{StaticResource ButtonStyle}"
                                        x:Name="btnCarregarDados"
                                        Width="100"
                                        FontSize="11"/>
                                <Button Content="🗑️ Limpar" 
                                        Style="{StaticResource DangerButtonStyle}"
                                        x:Name="btnLimpar"
                                        Width="90"
                                        FontSize="11"/>
                            </StackPanel>

                            <TextBlock x:Name="txtDadosCarregados" 
                                     Text="Dados carregados: 0 valores"
                                     FontSize="10"
                                     Foreground="#27AE60"
                                     Margin="0,6,0,0"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Botões de Cálculo -->
                    <Border Grid.Row="2" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="🧮 Cálculos Estatísticos" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Content="📐 Média" x:Name="btnMedia" 
                                        Grid.Row="0" Grid.Column="0"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>
                                <Button Content="📊 Mediana" x:Name="btnMediana"
                                        Grid.Row="0" Grid.Column="1"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>

                                <Button Content="🎯 Moda" x:Name="btnModa"
                                        Grid.Row="1" Grid.Column="0"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>
                                <Button Content="📏 Amplitude" x:Name="btnAmplitude"
                                        Grid.Row="1" Grid.Column="1"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>

                                <Button Content="📈 Variância" x:Name="btnVariancia"
                                        Grid.Row="2" Grid.Column="0"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>
                                <Button Content="📉 Desvio Padrão" x:Name="btnDesvioPadrao"
                                        Grid.Row="2" Grid.Column="1"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>

                                <Button Content="Σ Soma" x:Name="btnSoma"
                                        Grid.Row="3" Grid.Column="0"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>
                                <Button Content="🔢 Contagem" x:Name="btnContagem"
                                        Grid.Row="3" Grid.Column="1"
                                        Style="{StaticResource ButtonStyle}"
                                        Height="35"/>

                                <Button Content="📋 Análise Completa" x:Name="btnAnaliseCompleta"
                                        Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Height="40"
                                        Margin="3,5,3,3"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Ordenação -->
                    <Border Grid.Row="3" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="↕️ Ordenação" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="⬆️ Crescente" x:Name="btnOrdenarCrescente"
                                        Grid.Column="0"
                                        Style="{StaticResource WarningButtonStyle}"
                                        Height="35"/>
                                <Button Content="⬇️ Decrescente" x:Name="btnOrdenarDecrescente"
                                        Grid.Column="1"
                                        Style="{StaticResource WarningButtonStyle}"
                                        Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Resultados -->
                    <Border Grid.Row="4" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="#ECF0F1" 
                                    CornerRadius="8,8,0,0" 
                                    Padding="10,8">
                                <TextBlock Text="💻 Resultados" 
                                         Foreground="#2C3E50" 
                                         FontWeight="SemiBold"
                                         FontSize="13"/>
                            </Border>

                            <ScrollViewer Grid.Row="1" 
                                        VerticalScrollBarVisibility="Auto" 
                                        Padding="12">
                                <TextBlock x:Name="txtResultados" 
                                         Text="Aguardando cálculos..."
                                         FontSize="11"
                                         FontFamily="Consolas"
                                         TextWrapping="Wrap"
                                         Foreground="#27AE60"
                                         LineHeight="18"/>
                            </ScrollViewer>

                            <Button Grid.Row="2"
                                    Content="💾 Exportar Resultados" 
                                    x:Name="btnExportar"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Height="40"
                                    Margin="12,0,12,12"/>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>