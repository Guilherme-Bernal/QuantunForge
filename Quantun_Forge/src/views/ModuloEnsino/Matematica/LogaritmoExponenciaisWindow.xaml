<Window x:Class="Quantun_Forge.src.views.ModuloEnsino.Matematica.LogaritmoExponenciaisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino.Matematica"
        mc:Ignorable="d"
        Title="Logaritmos e Exponenciais - Quantum Forge" Height="800" Width="1200"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000">

    <Window.Resources>
        <!-- Estilos -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D68910"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HighlightBox" TargetType="Border">
            <Setter Property="Background" Value="#EBF5FB"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="InfoBox" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ConceptCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style x:Key="FormulaBox" TargetType="Border">
            <Setter Property="Background" Value="#FDFEFE"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,6"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="CaretBrush" Value="#3498DB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        Focusable="False"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" MinWidth="400"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- PAINEL ESQUERDO: TEORIA -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25">
                    <!-- Cabeçalho -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Logaritmos e Exponenciais" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="24"/>
                        <TextBlock Text="Operações, Propriedades e Aplicações"
                                 FontSize="14" 
                                 Foreground="#7F8C8D" 
                                 FontStyle="Italic"
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Introdução -->
                    <Border Background="#E8F8F5" 
                            BorderBrush="#1ABC9C" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="🎯 O que são Logaritmos?" 
                                     FontSize="15" 
                                     FontWeight="Bold" 
                                     Foreground="#16A085"
                                     Margin="0,0,0,8"/>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="13" 
                                     Margin="0">
                                Logaritmo é a operação inversa da exponenciação. Se b^x = y, então log_b(y) = x. É fundamental em ciências, engenharia e finanças para modelar crescimento, decaimento e escalas não lineares.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Logaritmos -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        📐 Logaritmos
                    </TextBlock>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📊 Definição" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                O logaritmo de um número y na base b é o expoente x ao qual a base deve ser elevada para obter y.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    log_b(y) = x  ⟺  b^x = y
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="🔢 Propriedades dos Logaritmos" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Produto: log_b(x·y) = log_b(x) + log_b(y)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Quociente: log_b(x/y) = log_b(x) - log_b(y)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Potência: log_b(x^n) = n·log_b(x)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Mudança de base: log_b(x) = log_c(x)/log_c(b)
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="📈 Logaritmos Especiais" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,4">
                                <Run FontWeight="Bold">Logaritmo Natural (ln):</Run> Base e ≈ 2,71828
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,4">
                                <Run FontWeight="Bold">Logaritmo Decimal:</Run> Base 10 (log₁₀)
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Exponenciais -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        📈 Funções Exponenciais
                    </TextBlock>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="🚀 Definição" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="12" 
                                     Margin="0,0,0,8">
                                Função exponencial é aquela em que a variável aparece no expoente. Tem a forma f(x) = a·b^x.
                            </TextBlock>

                            <Border Style="{StaticResource FormulaBox}">
                                <TextBlock FontFamily="Cambria Math" 
                                         FontSize="14" 
                                         Foreground="#2980B9" 
                                         TextAlignment="Center"
                                         FontWeight="Bold">
                                    f(x) = a·b^x
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ConceptCard}">
                        <StackPanel>
                            <TextBlock Text="⚙️ Propriedades das Exponenciais" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9" 
                                     Margin="0,0,0,8"/>

                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Produto: a^m · a^n = a^(m+n)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Quociente: a^m / a^n = a^(m-n)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Potência: (a^m)^n = a^(m·n)
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Expoente zero: a^0 = 1
                            </TextBlock>
                            <TextBlock Style="{StaticResource NormalText}" 
                                     FontSize="11" 
                                     FontFamily="Consolas"
                                     Margin="0,4">
                                • Expoente negativo: a^(-n) = 1/a^n
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Aplicações -->
                    <TextBlock Style="{StaticResource SubtitleStyle}">
                        🌍 Aplicações Práticas
                    </TextBlock>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="💰 Juros Compostos" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Crescimento de investimentos ao longo do tempo"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="🧬 Crescimento Populacional" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Modelagem de populações de organismos e bactérias"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="⚛️ Decaimento Radioativo" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Meia-vida de elementos químicos e carbono-14"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HighlightBox}">
                        <StackPanel>
                            <TextBlock Text="🔊 Escala Logarítmica" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2980B9"/>
                            <TextBlock Text="Decibéis (som), pH (acidez), Escala Richter (terremotos)"
                                     FontSize="11" 
                                     Foreground="#7F8C8D" 
                                     TextWrapping="Wrap" 
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="10" 
                    Background="Transparent" 
                    ResizeBehavior="PreviousAndNext" 
                    Cursor="SizeWE"/>

        <!-- PAINEL DIREITO: CALCULADORA -->
        <Border Grid.Column="2" Background="White" Margin="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="🧮 Calculadora" 
                                 Style="{StaticResource TitleStyle}"
                                 FontSize="18"/>
                        <TextBlock Text="Logaritmos e Exponenciais" 
                                 FontSize="12" 
                                 Foreground="#7F8C8D" 
                                 Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Cálculo de Logaritmo -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="📐 Calcular Logaritmo" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <TextBlock Text="log_base(valor)" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,0,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Base:" 
                                         Grid.Column="0"
                                         VerticalAlignment="Center"
                                         FontSize="11"
                                         Margin="0,0,5,0"/>
                                <TextBox x:Name="txtBaseLog" 
                                       Grid.Column="1"
                                       Style="{StaticResource ModernTextBox}"
                                       Height="35"
                                       Text="10"/>

                                <TextBlock Text="Valor:" 
                                         Grid.Column="3"
                                         VerticalAlignment="Center"
                                         FontSize="11"
                                         Margin="0,0,5,0"/>
                                <TextBox x:Name="txtValorLog" 
                                       Grid.Column="4"
                                       Style="{StaticResource ModernTextBox}"
                                       Height="35"
                                       Text="100"/>
                            </Grid>

                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="🔢 Calcular" 
                                      x:Name="btnCalcularLog"
                                      Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="📊 ln" 
                                      x:Name="btnLogNatural"
                                      Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="🔟 log₁₀" 
                                      x:Name="btnLog10"
                                      Grid.Column="2"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Cálculo Exponencial -->
                    <Border Grid.Row="2" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="📈 Calcular Exponencial" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <TextBlock Text="base^expoente" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,0,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Base:" 
                                         Grid.Column="0"
                                         VerticalAlignment="Center"
                                         FontSize="11"
                                         Margin="0,0,5,0"/>
                                <TextBox x:Name="txtBaseExp" 
                                       Grid.Column="1"
                                       Style="{StaticResource ModernTextBox}"
                                       Height="35"
                                       Text="2"/>

                                <TextBlock Text="Exp:" 
                                         Grid.Column="3"
                                         VerticalAlignment="Center"
                                         FontSize="11"
                                         Margin="0,0,5,0"/>
                                <TextBox x:Name="txtExpoente" 
                                       Grid.Column="4"
                                       Style="{StaticResource ModernTextBox}"
                                       Height="35"
                                       Text="10"/>
                            </Grid>

                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="🔢 Calcular" 
                                      x:Name="btnCalcularExp"
                                      Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="e^x Euler" 
                                      x:Name="btnEuler"
                                      Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="🔟 10^x" 
                                      x:Name="btnDezPotencia"
                                      Grid.Column="2"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Propriedades e Equações -->
                    <Border Grid.Row="3" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="🔧 Propriedades e Equações" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Content="📐 Produto Log" 
                                      x:Name="btnLogProduto"
                                      Grid.Row="0" Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="➗ Quociente Log" 
                                      x:Name="btnLogQuociente"
                                      Grid.Row="0" Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>

                                <Button Content="📈 Potência Log" 
                                      x:Name="btnLogPotencia"
                                      Grid.Row="1" Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="🔄 Mudança Base" 
                                      x:Name="btnMudancaBase"
                                      Grid.Row="1" Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>

                                <Button Content="✖️ Produto Exp" 
                                      x:Name="btnExpProduto"
                                      Grid.Row="2" Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="➗ Quociente Exp" 
                                      x:Name="btnExpQuociente"
                                      Grid.Row="2" Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>

                                <Button Content="📊 Potência Exp" 
                                      x:Name="btnExpPotencia"
                                      Grid.Row="3" Grid.Column="0"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>
                                <Button Content="🔄 Raiz Exp" 
                                      x:Name="btnExpRaiz"
                                      Grid.Row="3" Grid.Column="1"
                                      Style="{StaticResource ButtonStyle}"
                                      Height="35"/>

                                <Button Content="⚡ Resolver Eq. Log" 
                                      x:Name="btnResolverEqLog"
                                      Grid.Row="4" Grid.Column="0"
                                      Style="{StaticResource SuccessButtonStyle}"
                                      Height="35"/>
                                <Button Content="⚡ Resolver Eq. Exp" 
                                      x:Name="btnResolverEqExp"
                                      Grid.Row="4" Grid.Column="1"
                                      Style="{StaticResource SuccessButtonStyle}"
                                      Height="35"/>

                                <Button Content="📋 Todas Prop. Log" 
                                      x:Name="btnTodasPropriedades"
                                      Grid.Row="5" Grid.Column="0"
                                      Style="{StaticResource WarningButtonStyle}"
                                      Height="35"/>
                                <Button Content="📋 Todas Prop. Exp" 
                                      x:Name="btnTodasPropExp"
                                      Grid.Row="5" Grid.Column="1"
                                      Style="{StaticResource WarningButtonStyle}"
                                      Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Equações específicas -->
                    <Border Grid.Row="4" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="📊 Ferramentas Adicionais" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <!-- Equações Logarítmicas -->
                            <TextBlock Text="log_base(x) = resultado" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,0,0,5"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Base:" Grid.Column="0" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtBaseEqLog" Grid.Column="1" Style="{StaticResource ModernTextBox}" Height="30" Text="2"/>

                                <TextBlock Text="= " Grid.Column="3" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtResultadoEqLog" Grid.Column="4" Style="{StaticResource ModernTextBox}" Height="30" Text="3"/>
                            </Grid>

                            <!-- Equações Exponenciais -->
                            <TextBlock Text="base^x = resultado" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,8,0,5"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Base:" Grid.Column="0" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtBaseEqExp" Grid.Column="1" Style="{StaticResource ModernTextBox}" Height="30" Text="2"/>

                                <TextBlock Text="= " Grid.Column="3" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtResultadoEqExp" Grid.Column="4" Style="{StaticResource ModernTextBox}" Height="30" Text="8"/>
                            </Grid>

                            <!-- Crescimento/Decaimento -->
                            <TextBlock Text="P(t) = P₀ · e^(k·t)" 
                                     FontSize="10" 
                                     Foreground="#7F8C8D"
                                     Margin="0,8,0,5"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="P₀:" Grid.Column="0" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtP0" Grid.Column="1" Style="{StaticResource ModernTextBox}" Height="30" Text="1000"/>

                                <TextBlock Text="k:" Grid.Column="3" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtK" Grid.Column="4" Style="{StaticResource ModernTextBox}" Height="30" Text="0.05"/>

                                <TextBlock Text="t:" Grid.Column="6" VerticalAlignment="Center" FontSize="10" Margin="0,0,3,0"/>
                                <TextBox x:Name="txtT" Grid.Column="7" Style="{StaticResource ModernTextBox}" Height="30" Text="10"/>
                            </Grid>

                            <Button Content="📉 Calcular P(t)" 
                                  x:Name="btnCrescimento"
                                  Style="{StaticResource WarningButtonStyle}"
                                  Height="35"/>
                        </StackPanel>
                    </Border>

                    <!-- Tabelas e Conversores -->
                    <Border Grid.Row="5" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="📚 Tabelas e Conversores" 
                                     FontSize="13" 
                                     FontWeight="Bold" 
                                     Foreground="#2C3E50"
                                     Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Content="📊 Tabela 2^x" 
                                      x:Name="btnTabelaPot2"
                                      Grid.Row="0" Grid.Column="0"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>
                                <Button Content="🔟 Tabela 10^x" 
                                      x:Name="btnTabelaPot10"
                                      Grid.Row="0" Grid.Column="1"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>

                                <Button Content="📐 Tabela ln(x)" 
                                      x:Name="btnTabelaLn"
                                      Grid.Row="1" Grid.Column="0"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>
                                <Button Content="📈 Número e" 
                                      x:Name="btnNumeroE"
                                      Grid.Row="1" Grid.Column="1"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>

                                <Button Content="📐 Log → Exp" 
                                      x:Name="btnLogParaExp"
                                      Grid.Row="2" Grid.Column="0"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>
                                <Button Content="📈 Exp → Log" 
                                      x:Name="btnExpParaLog"
                                      Grid.Row="2" Grid.Column="1"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Height="35"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Resultados -->
                    <Border Grid.Row="6" 
                            Background="White" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    Background="#ECF0F1" 
                                    CornerRadius="8,8,0,0" 
                                    Padding="10,8">
                                <TextBlock Text="💻 Resultados" 
                                         Foreground="#2C3E50" 
                                         FontWeight="SemiBold"
                                         FontSize="13"/>
                            </Border>

                            <ScrollViewer Grid.Row="1" 
                                        VerticalScrollBarVisibility="Auto" 
                                        Padding="12">
                                <StackPanel>
                                    <!-- Resultados Logaritmos -->
                                    <TextBlock x:Name="txtResultadosLog" 
                                             Text=""
                                             FontSize="11"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"
                                             Foreground="#27AE60"
                                             LineHeight="18"
                                             Visibility="Collapsed"/>

                                    <!-- Resultados Exponenciais -->
                                    <TextBlock x:Name="txtResultadosExp" 
                                             Text=""
                                             FontSize="11"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"
                                             Foreground="#27AE60"
                                             LineHeight="18"
                                             Visibility="Collapsed"/>

                                    <!-- Resultados Conversor -->
                                    <TextBlock x:Name="txtResultadosConversor" 
                                             Text=""
                                             FontSize="11"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"
                                             Foreground="#27AE60"
                                             LineHeight="18"
                                             Visibility="Collapsed"/>

                                    <!-- Texto padrão quando não há resultados -->
                                    <TextBlock x:Name="txtResultadosPadrao"
                                             Text="Aguardando cálculos..."
                                             FontSize="11"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"
                                             Foreground="#27AE60"
                                             LineHeight="18"/>
                                </StackPanel>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="12,0,12,12">
                                <Button Content="🗑️ Limpar Log" 
                                      x:Name="btnLimparLog"
                                      Style="{StaticResource DangerButtonStyle}"
                                      Height="40"
                                      Width="110"/>
                                <Button Content="🗑️ Limpar Exp" 
                                      x:Name="btnLimparExp"
                                      Style="{StaticResource DangerButtonStyle}"
                                      Height="40"
                                      Width="110"
                                      Margin="5,0,0,0"/>
                                <Button Content="🗑️ Limpar Conversor" 
                                      x:Name="btnLimparConversor"
                                      Style="{StaticResource DangerButtonStyle}"
                                      Height="40"
                                      Margin="5,0,0,0"
                                      HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>