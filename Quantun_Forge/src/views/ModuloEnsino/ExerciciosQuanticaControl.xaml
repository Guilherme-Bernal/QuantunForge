<Page x:Class="Quantun_Forge.src.views.ModuloEnsino.ExerciciosQuanticaControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quantun_Forge.src.views.ModuloEnsino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExerciciosQuanticaControl">

    <Page.Resources>
        <!-- Estilo para os Cards de Tópicos Quânticos -->
        <Style x:Key="QuantumCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#9D4EDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9F5FC"/>
                    <Setter Property="BorderBrush" Value="#C77DFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuantumTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="QuantumSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#5A5A6B"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="QuantumHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Margin="30,20,30,0">
            <TextBlock Text="Computação Quântica" Style="{StaticResource QuantumHeaderStyle}"/>
            <TextBlock Text="Explore os fundamentos da computação do futuro" 
                       FontSize="14" 
                       Foreground="#5A5A6B" 
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- ScrollViewer para o conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <StackPanel>
                <!-- Tópico 1: Qubit -->
                <Border Style="{StaticResource QuantumCardStyle}" 
                        x:Name="QubitCard"
                        MouseLeftButtonDown="QubitCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚛️" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Qubit: A Unidade Fundamental" Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="A base da informação quântica e superposição de estados" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 2: Emaranhamento -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="EmaranhamentoCard"
                        MouseLeftButtonDown="EmaranhamentoCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Emaranhamento: A Conexão 'Fantasmagórica'" Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="A correlação quântica que desafia a física clássica" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 3: Portas Lógicas Quânticas -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="PortasQuanticasCard"
                        MouseLeftButtonDown="PortasQuanticasCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌀" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Portas Lógicas Quânticas: A Manipulação de Qubits" 
                                       Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Operações unitárias que transformam estados quânticos" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 4: Algoritmos Quânticos -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="AlgoritmosQuanticosCard"
                        MouseLeftButtonDown="AlgoritmosQuanticosCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧬" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Algoritmos Quânticos: As Novas 'Receitas'" 
                                       Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Shor, Grover e outros algoritmos revolucionários" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 5: Medição -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="MedicaoCard"
                        MouseLeftButtonDown="MedicaoCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Medição: Extraindo a Resposta Clássica" 
                                       Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="O colapso da função de onda e extração de resultados" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 6: Decoerência -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="DecoerenciaCard"
                        MouseLeftButtonDown="DecoerenciaCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Decoerência: O Inimigo da Computação Quântica" 
                                       Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="O desafio da perda de informação quântica" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Tópico 7: Criptografia Quântica -->
                <Border Style="{StaticResource QuantumCardStyle}"
                        x:Name="CriptografiaQuanticaCard"
                        MouseLeftButtonDown="CriptografiaQuanticaCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔐" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Criptografia Quântica" 
                                       Style="{StaticResource QuantumTitleStyle}"/>
                        </StackPanel>
                        <TextBlock Text="Segurança fundamentada nas leis da física quântica" 
                                   Style="{StaticResource QuantumSubtitleStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>