<UserControl x:Class="Quantun_Forge.src.views.bitquibit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Cores -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="ClassicalColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="QuantumColor" Color="#9B59B6"/>

        <!-- Animações -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <!-- Estilos -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SimulationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#FAFAFA">
        <StackPanel MaxWidth="1200" Margin="40,30">

            <!-- Header -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Viewbox Width="50" Height="50" Margin="0,0,15,0">
                            <Canvas Width="100" Height="100">
                                <!-- Bit: Linha binária -->
                                <Line X1="20" Y1="50" X2="40" Y2="50" Stroke="#3498DB" StrokeThickness="4"/>
                                <Ellipse Canvas.Left="17" Canvas.Top="47" Width="6" Height="6" Fill="#3498DB"/>
                                <Ellipse Canvas.Left="37" Canvas.Top="47" Width="6" Height="6" Fill="#3498DB"/>
                                <TextBlock Text="0" Canvas.Left="15" Canvas.Top="55" FontSize="8" FontWeight="Bold"/>
                                <TextBlock Text="1" Canvas.Left="38" Canvas.Top="55" FontSize="8" FontWeight="Bold"/>

                                <!-- Qubit: Esfera -->
                                <Ellipse Canvas.Left="55" Canvas.Top="25" Width="40" Height="40"
                                         Stroke="#9B59B6" StrokeThickness="3" Fill="Transparent"/>
                                <Ellipse Canvas.Left="65" Canvas.Top="35" Width="20" Height="20"
                                         Stroke="#9B59B6" StrokeThickness="2" Fill="Transparent" Opacity="0.5"/>
                                <Ellipse Canvas.Left="72" Canvas.Top="35" Width="6" Height="6" Fill="#E74C3C"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="🔢 Bit vs Qubit" 
                                     Style="{StaticResource SectionTitleStyle}" Margin="0"/>
                            <TextBlock Text="Da Lógica Binária à Superposição Quântica" 
                                     FontSize="16" Foreground="{StaticResource DarkGray}" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Style="{StaticResource BadgeStyle}" Background="#E3F2FD">
                            <TextBlock Text="💾 Bit Clássico" Foreground="#1976D2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#F3E5F5">
                            <TextBlock Text="⚛️ Qubit" Foreground="#7B1FA2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#E8F5E9">
                            <TextBlock Text="🌐 Esfera de Bloch" Foreground="#2E7D32" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Separator Background="{StaticResource LightGray}" Margin="0,15,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" FontSize="15">
                        <Run FontWeight="Bold" FontSize="16">🎯 A Diferença Fundamental:</Run>
                        <LineBreak/><LineBreak/>
                        
                        <Run FontWeight="SemiBold" Foreground="#3498DB">→ BIT CLÁSSICO:</Run> É como um interruptor de luz.
                        <LineBreak/>
                        • Está SEMPRE em um estado definido: 0 (desligado) OU 1 (ligado)
                        <LineBreak/>
                        • Se você não sabe qual é, sua incerteza é 
                        <Run FontStyle="Italic">subjetiva</Run> (você não sabe, mas ele já está em algum estado)
                        <LineBreak/>
                        • Probabilidade = sua falta de informação, não uma propriedade do bit
                        <LineBreak/><LineBreak/>
                        
                        <Run FontWeight="SemiBold" Foreground="#9B59B6">→ QUBIT (Quantum Bit):</Run> É fundamentalmente diferente!
                        <LineBreak/>
                        • Existe em <Run FontWeight="Bold">SUPERPOSIÇÃO</Run>: 0 E 1 simultaneamente
                        <LineBreak/>
                        • A incerteza é <Run FontStyle="Italic">objetiva</Run> (faz parte da natureza do qubit)
                        <LineBreak/>
                        • <Run FontWeight="Bold" Foreground="#E74C3C">Probabilidades são intrínsecas ao sistema</Run>
                        <LineBreak/>
                        • Só "escolhe" um valor quando você mede (colapso quântico)
                        <LineBreak/><LineBreak/>
                        
                        É dessa diferença que nasce o poder da Computação Quântica!
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Nova Seção: Entendendo Probabilidades -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="📊 Entendendo as Probabilidades" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Probabilidade no Bit -->
                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="💾 Probabilidade no BIT" 
                                         FontSize="18" FontWeight="Bold"
                                         Foreground="#1976D2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <Border Background="White" BorderBrush="#1976D2" BorderThickness="2"
                                        CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="13">
                                        <Run FontWeight="Bold">Sua incerteza ≠ Estado do bit</Run>
                                        <LineBreak/><LineBreak/>
                                        
                                        Se você tem um bit desconhecido:
                                        <LineBreak/>
                                        • Pode dizer "50% chance de ser 0"
                                        <LineBreak/>
                                        • Mas ele JÁ É 0 ou 1 definitivamente
                                        <LineBreak/>
                                        • A probabilidade está na sua cabeça
                                        <LineBreak/><LineBreak/>
                                        
                                        <Run FontWeight="SemiBold" Foreground="#E74C3C">🔍 Ao medir:</Run>
                                        <LineBreak/>
                                        Você REVELA o que já existia.
                                        <LineBreak/>
                                        Não muda o estado do bit.
                                    </TextBlock>
                                </Border>

                                <TextBlock Text="Exemplo prático:" FontWeight="Bold" FontSize="14" Margin="0,15,0,10"/>
                                <Border Background="White" CornerRadius="6" Padding="12">
                                    <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="20">
                                        Uma moeda no bolso (sem olhar):
                                        <LineBreak/>
                                        • Você: "50% cara, 50% coroa"
                                        <LineBreak/>
                                        • Realidade: já é uma das duas
                                        <LineBreak/>
                                        • Ao olhar: descobre, não muda
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Probabilidade no Qubit -->
                        <Border Grid.Column="1" Background="#F3E5F5" CornerRadius="10" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="⚛️ Probabilidade no QUBIT" 
                                         FontSize="18" FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <Border Background="White" BorderBrush="#7B1FA2" BorderThickness="2"
                                        CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="13">
                                        <Run FontWeight="Bold">Probabilidade = Natureza do qubit</Run>
                                        <LineBreak/><LineBreak/>
                                        
                                        Estado: |ψ⟩ = α|0⟩ + β|1⟩
                                        <LineBreak/><LineBreak/>
                                        
                                        • <Run FontWeight="SemiBold">α</Run> = "amplitude" do estado |0⟩
                                        <LineBreak/>
                                        • <Run FontWeight="SemiBold">β</Run> = "amplitude" do estado |1⟩
                                        <LineBreak/>
                                        • <Run FontWeight="Bold" Foreground="#E74C3C">|α|² = probabilidade de medir 0</Run>
                                        <LineBreak/>
                                        • <Run FontWeight="Bold" Foreground="#E74C3C">|β|² = probabilidade de medir 1</Run>
                                        <LineBreak/>
                                        • Regra: |α|² + |β|² = 100%
                                        <LineBreak/><LineBreak/>
                                        
                                        <Run FontWeight="SemiBold" Foreground="#E74C3C">🔍 Ao medir:</Run>
                                        <LineBreak/>
                                        O qubit COLAPSA para 0 ou 1.
                                        <LineBreak/>
                                        Você CRIA o resultado definitivo.
                                    </TextBlock>
                                </Border>

                                <TextBlock Text="Exemplo quântico:" FontWeight="Bold" FontSize="14" Margin="0,15,0,10"/>
                                <Border Background="White" CornerRadius="6" Padding="12">
                                    <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="20">
                                        Estado |+⟩ = (|0⟩ + |1⟩)/√2:
                                        <LineBreak/>
                                        • Antes: literalmente 0 E 1 juntos
                                        <LineBreak/>
                                        • P(0) = 50%, P(1) = 50%
                                        <LineBreak/>
                                        • Ao medir: colapsa para um lado
                                        <LineBreak/>
                                        • Impossível prever qual será!
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Fórmula da Probabilidade -->
                    <Border Background="#FFF3E0" BorderBrush="#F39C12" BorderThickness="3"
                            CornerRadius="10" Padding="20" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📐 A Matemática das Probabilidades" 
                                     FontSize="18" FontWeight="Bold"
                                     Foreground="#E65100"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" LineHeight="26">
                                        <Run FontSize="16" FontWeight="Bold">Estado do Qubit:</Run>
                                        <LineBreak/>
                                        <Run FontSize="20" FontWeight="Bold" Foreground="#7B1FA2">|ψ⟩ = α|0⟩ + β|1⟩</Run>
                                        <LineBreak/><LineBreak/>
                                        <Run FontSize="13">α e β são números complexos</Run>
                                    </TextBlock>
                                </Border>

                                <TextBlock Grid.Column="1" Text="→" FontSize="24" FontWeight="Bold" 
                                         Foreground="#F39C12" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" LineHeight="26">
                                        <Run FontSize="16" FontWeight="Bold">Probabilidades:</Run>
                                        <LineBreak/>
                                        <Run FontSize="18" FontWeight="Bold" Foreground="#E74C3C">P(0) = |α|²</Run>
                                        <LineBreak/>
                                        <Run FontSize="18" FontWeight="Bold" Foreground="#E74C3C">P(1) = |β|²</Run>
                                        <LineBreak/><LineBreak/>
                                        <Run FontSize="13">Sempre somam 100%</Run>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <Border Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                <TextBlock TextWrapping="Wrap" TextAlignment="Center" LineHeight="24" FontSize="13">
                                    <Run FontWeight="Bold">💡 Exemplo numérico:</Run>
                                    <LineBreak/><LineBreak/>
                                    Se |ψ⟩ = 0,6|0⟩ + 0,8|1⟩
                                    <LineBreak/>
                                    Então: P(0) = (0,6)² = <Run FontWeight="Bold" Foreground="#27AE60">36%</Run>  
                                    e  P(1) = (0,8)² = <Run FontWeight="Bold" Foreground="#27AE60">64%</Run>
                                    <LineBreak/>
                                    Verificação: 36% + 64% = 100% ✓
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Simulador 1: Comparação Visual Bit vs Qubit -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="🎮 Simulador 1: Comparação Visual" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- BIT CLÁSSICO -->
                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Padding="25" Margin="5">
                            <StackPanel>
                                <TextBlock Text="💾 Bit Clássico" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#1976D2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Representação Visual do Bit -->
                                <Canvas Height="200" Margin="20">
                                    <!-- Linha binária -->
                                    <Line X1="50" Y1="100" X2="350" Y2="100" 
                                          Stroke="#1976D2" StrokeThickness="4"/>

                                    <!-- Posição 0 -->
                                    <Ellipse Canvas.Left="47" Canvas.Top="97" Width="30" Height="30"
                                             Stroke="#1976D2" StrokeThickness="3" Fill="White"/>
                                    <TextBlock Text="0" Canvas.Left="57" Canvas.Top="102" 
                                             FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                                    <TextBlock Text="Desligado" Canvas.Left="30" Canvas.Top="135" 
                                             FontSize="10" Foreground="{StaticResource DarkGray}"/>
                                    <TextBlock Text="0%" Canvas.Left="45" Canvas.Top="150" 
                                             FontSize="9" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>

                                    <!-- Posição 1 -->
                                    <Ellipse Canvas.Left="317" Canvas.Top="97" Width="30" Height="30"
                                             Stroke="#1976D2" StrokeThickness="3" Fill="White"/>
                                    <TextBlock Text="1" Canvas.Left="327" Canvas.Top="102" 
                                             FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                                    <TextBlock Text="Ligado" Canvas.Left="310" Canvas.Top="135" 
                                             FontSize="10" Foreground="{StaticResource DarkGray}"/>
                                    <TextBlock Text="100%" Canvas.Left="318" Canvas.Top="150" 
                                             FontSize="9" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>

                                    <!-- Bit atual (animado) -->
                                    <Ellipse x:Name="BitAtual" 
                                             Width="24" Height="24"
                                             Fill="#E74C3C"
                                             Canvas.Left="333" Canvas.Top="103">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#E74C3C" BlurRadius="15" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                </Canvas>

                                <!-- Controles do Bit -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button Content="Bit = 0" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Click="BtnBit0_Click"/>
                                    <Button Content="Bit = 1" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Click="BtnBit1_Click"/>
                                </StackPanel>

                                <TextBlock x:Name="TxtEstadoBit" 
                                         Text="Estado: Bit = 1 (100%)"
                                         FontSize="14" FontWeight="Bold"
                                         Foreground="#1976D2"
                                         HorizontalAlignment="Center"
                                         Margin="0,15,0,0"/>

                                <!-- Características -->
                                <Border Background="White" BorderBrush="#1976D2" BorderThickness="2"
                                        CornerRadius="8" Padding="15" Margin="0,20,0,0">
                                    <TextBlock FontSize="12" TextWrapping="Wrap" LineHeight="20">
                                        <Run FontWeight="Bold">Características:</Run>
                                        <LineBreak/><LineBreak/>
                                        • Dois estados EXCLUSIVOS
                                        <LineBreak/>
                                        • Sempre 0 OU 1 (nunca ambos)
                                        <LineBreak/>
                                        • Determinístico (100% em um lado)
                                        <LineBreak/>
                                        • Representação: linha binária
                                        <LineBreak/>
                                        • <Run FontWeight="SemiBold" Foreground="#E74C3C">Probabilidade = 0% ou 100%</Run>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- QUBIT -->
                        <Border Grid.Column="1" Background="#F3E5F5" CornerRadius="10" Padding="25" Margin="5">
                            <StackPanel>
                                <TextBlock Text="⚛️ Qubit" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Representação Visual do Qubit -->
                                <Canvas Height="200" Margin="20">
                                    <!-- Esfera de fundo -->
                                    <Ellipse Canvas.Left="100" Canvas.Top="50" Width="200" Height="200"
                                             Stroke="#CE93D8" StrokeThickness="2" 
                                             Fill="Transparent" Opacity="0.3" StrokeDashArray="4,2"/>

                                    <!-- Círculo médio -->
                                    <Ellipse Canvas.Left="150" Canvas.Top="100" Width="100" Height="100"
                                             Stroke="#9B59B6" StrokeThickness="2" 
                                             Fill="Transparent" Opacity="0.5"/>

                                    <!-- Estados base -->
                                    <TextBlock Text="|0⟩" Canvas.Left="190" Canvas.Top="35" 
                                             FontSize="14" FontWeight="Bold" Foreground="#7B1FA2"/>
                                    <TextBlock Text="(P=100%)" Canvas.Left="175" Canvas.Top="15" 
                                             FontSize="9" Foreground="{StaticResource AccentColor}"/>

                                    <TextBlock Text="|1⟩" Canvas.Left="190" Canvas.Top="255" 
                                             FontSize="14" FontWeight="Bold" Foreground="#7B1FA2"/>
                                    <TextBlock Text="(P=100%)" Canvas.Left="175" Canvas.Top="275" 
                                             FontSize="9" Foreground="{StaticResource AccentColor}"/>

                                    <TextBlock Text="|+⟩" Canvas.Left="265" Canvas.Top="140" 
                                             FontSize="12" FontWeight="Bold" Foreground="#F39C12"/>
                                    <TextBlock Text="(50%/50%)" Canvas.Left="253" Canvas.Top="155" 
                                             FontSize="8" Foreground="{StaticResource AccentColor}"/>

                                    <!-- Qubit em superposição (animado) -->
                                    <Ellipse x:Name="QubitAtual" 
                                             Width="20" Height="20"
                                             Fill="#FFD700"
                                             Canvas.Left="190" Canvas.Top="140">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="20" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>

                                    <!-- Vetor de estado -->
                                    <Line x:Name="VetorEstado"
                                          X1="200" Y1="150" X2="200" Y2="100"
                                          Stroke="#E74C3C" StrokeThickness="3">
                                        <Line.Effect>
                                            <DropShadowEffect Color="#E74C3C" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                        </Line.Effect>
                                    </Line>
                                </Canvas>

                                <!-- Controles do Qubit -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <Button Content="|0⟩" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnQubit0_Click"/>
                                    <Button Content="|+⟩" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource WarningColor}"
                                            Click="BtnQubitPlus_Click"/>
                                    <Button Content="|1⟩" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnQubit1_Click"/>
                                </StackPanel>

                                <TextBlock x:Name="TxtEstadoQubit" 
                                         Text="Estado: |ψ⟩ = |+⟩ (50%/50%)"
                                         FontSize="14" FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"
                                         Margin="0,15,0,0"/>

                                <!-- Características -->
                                <Border Background="White" BorderBrush="#7B1FA2" BorderThickness="2"
                                        CornerRadius="8" Padding="15" Margin="0,20,0,0">
                                    <TextBlock FontSize="12" TextWrapping="Wrap" LineHeight="20">
                                        <Run FontWeight="Bold">Características:</Run>
                                        <LineBreak/><LineBreak/>
                                        • Infinitos estados possíveis
                                        <LineBreak/>
                                        • Superposição: 0 E 1 simultaneamente
                                        <LineBreak/>
                                        • Probabilístico (varia de 0% a 100%)
                                        <LineBreak/>
                                        • Representação: esfera de Bloch
                                        <LineBreak/>
                                        • <Run FontWeight="SemiBold" Foreground="#E74C3C">Pode ter QUALQUER % entre 0 e 100</Run>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Simulador 2: Esfera de Bloch Interativa -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="🌐 Simulador 2: Esfera de Bloch Interativa" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0,0,0,20">
                        A <Run FontWeight="Bold" Foreground="#27AE60">Esfera de Bloch</Run> é a "bússola" do qubit — 
                        cada ponto na superfície representa um estado quântico único com suas probabilidades.
                        <LineBreak/><LineBreak/>
                        <Run FontWeight="SemiBold">→ Bit clássico:</Run> só alcança os 2 polos (0% ou 100%)
                        <LineBreak/>
                        <Run FontWeight="SemiBold">→ Qubit:</Run> alcança TODA a superfície (todas as porcentagens entre 0% e 100%)
                    </TextBlock>

                    <!-- Controles da Esfera -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Controle Theta (θ) -->
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
                                <Run Text="Ângulo θ (theta) - "/>
                                <Run Foreground="#E74C3C" FontWeight="Bold">CONTROLA AS PROBABILIDADES:</Run>
                            </TextBlock>
                            <Slider x:Name="SliderTheta"
                                    Minimum="0" Maximum="180" Value="0"
                                    TickFrequency="15"
                                    ValueChanged="SliderTheta_ValueChanged"/>
                            <TextBlock x:Name="TxtTheta"
                                     Text="θ = 0° → P(0)=100%, P(1)=0%"
                                     FontSize="12" Foreground="{StaticResource DarkGray}"
                                     HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Controle Phi (φ) -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
                                <Run Text="Ângulo φ (phi) - "/>
                                <Run Foreground="#27AE60">Fase (interferência):</Run>
                            </TextBlock>
                            <Slider x:Name="SliderPhi"
                                    Minimum="0" Maximum="360" Value="0"
                                    TickFrequency="45"
                                    ValueChanged="SliderPhi_ValueChanged"/>
                            <TextBlock x:Name="TxtPhi"
                                     Text="φ = 0° (não muda probabilidades sozinho)"
                                     FontSize="12" Foreground="{StaticResource DarkGray}"
                                     HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Visualização da Esfera -->
                    <Border Background="#F8F9FA" CornerRadius="10" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Canvas da Esfera -->
                            <Canvas Grid.Column="0" Height="350" Width="350" HorizontalAlignment="Center">
                                <!-- Esfera base -->
                                <Ellipse Canvas.Left="25" Canvas.Top="25" Width="300" Height="300"
                                         Stroke="#9B59B6" StrokeThickness="3" 
                                         Fill="Transparent"/>

                                <!-- Círculo equador -->
                                <Ellipse Canvas.Left="75" Canvas.Top="162" Width="200" Height="30"
                                         Stroke="#CE93D8" StrokeThickness="2" 
                                         Fill="Transparent" Opacity="0.4" StrokeDashArray="3,2"/>

                                <!-- Eixos -->
                                <Line X1="175" Y1="25" X2="175" Y2="325" 
                                      Stroke="#BDC3C7" StrokeThickness="2" StrokeDashArray="4,2"/>
                                <Line X1="25" Y1="175" X2="325" Y2="175" 
                                      Stroke="#BDC3C7" StrokeThickness="2" StrokeDashArray="4,2"/>

                                <!-- Labels dos Estados -->
                                <TextBlock Text="|0⟩" Canvas.Left="165" Canvas.Top="5" 
                                         FontSize="18" FontWeight="Bold" Foreground="#7B1FA2"/>
                                <TextBlock Text="P(0)=100%" Canvas.Left="145" Canvas.Top="340" 
                                         FontSize="10" FontWeight="Bold" Foreground="#E74C3C"/>

                                <TextBlock Text="|1⟩" Canvas.Left="165" Canvas.Top="330" 
                                         FontSize="18" FontWeight="Bold" Foreground="#7B1FA2"/>
                                <TextBlock Text="P(1)=100%" Canvas.Left="145" Canvas.Top="-15" 
                                         FontSize="10" FontWeight="Bold" Foreground="#E74C3C"/>

                                <TextBlock Text="|+⟩" Canvas.Left="330" Canvas.Top="165" 
                                         FontSize="16" FontWeight="Bold" Foreground="#F39C12"/>
                                <TextBlock Text="50/50" Canvas.Left="333" Canvas.Top="145" 
                                         FontSize="9" FontWeight="Bold" Foreground="#E74C3C"/>

                                <TextBlock Text="|−⟩" Canvas.Left="5" Canvas.Top="165" 
                                         FontSize="16" FontWeight="Bold" Foreground="#F39C12"/>
                                <TextBlock Text="50/50" Canvas.Left="8" Canvas.Top="145" 
                                         FontSize="9" FontWeight="Bold" Foreground="#E74C3C"/>

                                <!-- Vetor de Estado na Esfera -->
                                <Line x:Name="VetorBloch"
                                      X1="175" Y1="175" X2="175" Y2="25"
                                      Stroke="#E74C3C" StrokeThickness="4">
                                    <Line.Effect>
                                        <DropShadowEffect Color="#E74C3C" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                    </Line.Effect>
                                </Line>

                                <!-- Ponto no estado -->
                                <Ellipse x:Name="PontoBloch" 
                                         Width="20" Height="20"
                                         Fill="#FFD700"
                                         Canvas.Left="165" Canvas.Top="15">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="25" ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                </Ellipse>

                                <!-- Projeção no plano XY (fase) -->
                                <Line x:Name="ProjecaoFase"
                                      X1="175" Y1="175" X2="275" Y2="175"
                                      Stroke="#27AE60" StrokeThickness="2" 
                                      StrokeDashArray="4,2" Opacity="0.6"/>
                            </Canvas>

                            <!-- Info do Estado -->
                            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                <TextBlock Text="Estado do Qubit:" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="{StaticResource SecondaryColor}"
                                         Margin="0,0,0,15"/>

                                <!-- Fórmula -->
                                <Border Background="White" BorderBrush="#9B59B6" BorderThickness="2"
                                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                    <TextBlock x:Name="TxtFormula" 
                                             FontSize="13" TextWrapping="Wrap"
                                             LineHeight="22">
                                        <Run FontWeight="Bold">|ψ⟩ = α|0⟩ + β|1⟩</Run>
                                        <LineBreak/><LineBreak/>
                                        <Run Text="α = 1.00"/>
                                        <LineBreak/>
                                        <Run Text="β = 0.00"/>
                                    </TextBlock>
                                </Border>

                                <!-- Probabilidades -->
                                <Border Background="White" BorderBrush="#E74C3C" BorderThickness="3"
                                        CornerRadius="8" Padding="15">
                                    <TextBlock x:Name="TxtProbabilidades" 
                                             FontSize="13" TextWrapping="Wrap"
                                             LineHeight="22">
                                        <Run FontWeight="Bold" FontSize="14" Foreground="#E74C3C">📊 PROBABILIDADES:</Run>
                                        <LineBreak/><LineBreak/>
                                        <Run FontWeight="Bold" Text="P(0) = 100%"/>
                                        <LineBreak/>
                                        <Run FontWeight="Bold" Text="P(1) = 0%"/>
                                        <LineBreak/><LineBreak/>
                                        <Run FontSize="11" Foreground="{StaticResource DarkGray}" Text="(Ao medir, o qubit colapsa)"/>
                                    </TextBlock>
                                </Border>

                                <!-- Estados Especiais -->
                                <TextBlock Text="Estados Especiais:" 
                                         FontSize="14" FontWeight="Bold"
                                         Margin="0,20,0,10"/>
                                <StackPanel>
                                    <Button Content="|0⟩ (100%/0%)" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnEstado0_Click"
                                            Margin="0,2"/>
                                    <Button Content="|1⟩ (0%/100%)" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnEstado1_Click"
                                            Margin="0,2"/>
                                    <Button Content="|+⟩ (50%/50%)" 
                                            Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource WarningColor}"
                                            Click="BtnEstadoPlus_Click"
                                            Margin="0,2"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Explicação -->
                    <Border Background="#E8F5E9" BorderBrush="#27AE60" BorderThickness="2"
                            CornerRadius="8" Padding="15" Margin="0,20,0,0">
                        <TextBlock Style="{StaticResource ContentTextStyle}">
                            <Run FontWeight="Bold" FontSize="15" Foreground="#1B5E20">💡 Entendendo a Esfera:</Run>
                            <LineBreak/><LineBreak/>
                            • <Run FontWeight="SemiBold">θ (theta):</Run> Define o equilíbrio entre |0⟩ e |1⟩
                            <LineBreak/>
                            <Run Text="  "/>→ <Run FontWeight="Bold" Foreground="#E74C3C">CONTROLA DIRETAMENTE AS PROBABILIDADES P(0) e P(1)</Run>
                            <LineBreak/>
                            <Run Text="  "/>→ θ=0° → 100% de chance de medir 0
                            <LineBreak/>
                            <Run Text="  "/>→ θ=90° → 50% para 0 e 50% para 1
                            <LineBreak/>
                            <Run Text="  "/>→ θ=180° → 100% de chance de medir 1
                            <LineBreak/><LineBreak/>
                            • <Run FontWeight="SemiBold">φ (phi):</Run> Define a fase quântica
                            <LineBreak/>
                            <Run Text="  "/>→ Não muda probabilidades sozinho
                            <LineBreak/>
                            <Run Text="  "/>→ Mas permite INTERFERÊNCIA quando combina com portas
                            <LineBreak/>
                            <Run Text="  "/>→ É o "truque" que faz algoritmos quânticos funcionarem
                            <LineBreak/><LineBreak/>
                            • Cada ponto da esfera = um estado único = um par de probabilidades único
                            <LineBreak/>
                            • O bit clássico só alcança os polos; o qubit alcança TODA a superfície!
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Tabela Comparativa -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="⚖️ Comparação Detalhada" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <!-- Header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource LightGray}" 
                                Padding="12" CornerRadius="8,0,0,0">
                            <TextBlock Text="Conceito" FontWeight="Bold" FontSize="14"/>
                        </Border>
                        <Border Grid.Column="1" Background="#E3F2FD" Padding="12">
                            <TextBlock Text="💾 Bit Clássico" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                        </Border>
                        <Border Grid.Column="2" Background="#F3E5F5" 
                                Padding="12" CornerRadius="0,8,0,0">
                            <TextBlock Text="⚛️ Qubit" FontWeight="Bold" FontSize="14" Foreground="#7B1FA2"/>
                        </Border>
                    </Grid>

                    <!-- Linha: Estados -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Estados Possíveis" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="0 ou 1 (exclusivo)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Superposição: 0 e 1 simultaneamente" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Linha: Probabilidades -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="⭐ Probabilidades" FontWeight="Bold" Foreground="#E74C3C"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold">Sempre 0% ou 100%</Run>
                                <LineBreak/>
                                (está em um estado definido)
                            </TextBlock>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold">Qualquer % entre 0 e 100</Run>
                                <LineBreak/>
                                Ex: P(0)=36%, P(1)=64%
                            </TextBlock>
                        </Border>
                    </Grid>

                    <!-- Linha: Medição -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Ao Medir" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Revela o que já existe (não muda nada)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="COLAPSA para 0 ou 1 (cria o resultado)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Linha: Representação -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Representação" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Linha (2 pontos)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Esfera de Bloch (infinitos pontos)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Linha: Matemática -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Matemática" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Álgebra booleana" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run Text="Vetores no espaço de Hilbert"/>
                                <LineBreak/>
                                <Run FontWeight="Bold" Text="P(0)=|α|², P(1)=|β|²"/>
                            </TextBlock>
                        </Border>
                    </Grid>

                    <!-- Linha: Capacidade -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="0,0,0,8">
                            <TextBlock Text="Capacidade" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="1 valor fixo por vez" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1" CornerRadius="0,0,8,0">
                            <TextBlock Text="Superposição de infinitos estados" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Conclusão -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E3F2FD" Offset="0"/>
                        <GradientStop Color="#F3E5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="💭 Reflexão Final" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <Border Background="White" CornerRadius="10" Padding="25"
                            BorderBrush="{StaticResource QuantumColor}" BorderThickness="2">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"
                                 LineHeight="28" FontSize="16"
                                 Foreground="{StaticResource SecondaryColor}">
                            <Run FontSize="20" Text="✨" />
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#3498DB">
                                O bit é um ponto fixo (0% ou 100%).
                            </Run>
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#9B59B6">
                                O qubit é um continuum de probabilidades (0% a 100%).
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontWeight="Bold" FontSize="17" Foreground="#E74C3C">
                                A diferença está na NATUREZA das probabilidades:
                            </Run>
                            <LineBreak/>
                            <Run FontSize="15">
                                No bit, são epistêmicas (sua ignorância).
                            </Run>
                            <LineBreak/>
                            <Run FontSize="15">
                                No qubit, são ontológicas (parte da realidade).
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontStyle="Italic" Foreground="{StaticResource DarkGray}" FontSize="14">
                                "O bit é a lógica do 'ou'. O qubit é a lógica do 'e'. 
                                E na Esfera de Bloch, esse 'e' ganha todos os tons de cinza — 
                                todas as probabilidades intermediárias."
                            </Run>
                            <LineBreak/>
                            <Run FontSize="20" Text="✨" />
                        </TextBlock>
                    </Border>

                    <!-- Box adicional sobre porcentagens -->
                    <Border Background="#FFF3E0" BorderBrush="#F39C12" BorderThickness="2"
                            CornerRadius="10" Padding="20" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🎯 Resumo: Como Funcionam as Porcentagens" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="#E65100"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>

                            <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="14">
                                <Run FontWeight="Bold" Foreground="#3498DB">BIT:</Run> 
                                Probabilidades são sobre SEU conhecimento. 
                                Se você não sabe se uma moeda no bolso é cara ou coroa, 
                                você diz "50%/50%", mas a moeda JÁ É uma das duas. 
                                Ao olhar, você apenas descobre.
                                <LineBreak/><LineBreak/>
                                
                                <Run FontWeight="Bold" Foreground="#9B59B6">QUBIT:</Run> 
                                Probabilidades são PARTE DO ESTADO. 
                                Um qubit em |ψ⟩ = 0,6|0⟩ + 0,8|1⟩ literalmente 
                                <Run FontWeight="Bold" Foreground="#E74C3C">É 36% zero E 64% um ao mesmo tempo</Run>. 
                                Ao medir, você FORÇA ele a escolher, colapsando para 0 ou 1.
                                <LineBreak/><LineBreak/>
                                
                                <Run FontWeight="Bold">É essa diferença sutil mas profunda 
                                que permite aos computadores quânticos explorar 
                                TODOS os caminhos simultaneamente!</Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
