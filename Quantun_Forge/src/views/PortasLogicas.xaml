<UserControl x:Class="Quantun_Forge.src.views.PortasLogicas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <!-- Cores -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="ClassicalColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="QuantumColor" Color="#9B59B6"/>

        <!-- Animações -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.3" To="1" Duration="0:0:1"/>
        </Storyboard>

        <!-- Estilos -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SimulationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ContentTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#FAFAFA">
        <StackPanel MaxWidth="1200" Margin="40,30">

            <!-- Header -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Viewbox Width="50" Height="50" Margin="0,0,15,0">
                            <Canvas Width="100" Height="100">
                                <!-- Porta Clássica: Caixa simples -->
                                <Rectangle Canvas.Left="10" Canvas.Top="35" Width="25" Height="30"
                                          Stroke="#3498DB" StrokeThickness="3" Fill="Transparent"/>
                                <TextBlock Text="AND" Canvas.Left="13" Canvas.Top="43" 
                                          FontSize="7" FontWeight="Bold" Foreground="#3498DB"/>
                                <Line X1="10" Y1="45" X2="5" Y2="45" Stroke="#3498DB" StrokeThickness="2"/>
                                <Line X1="10" Y1="55" X2="5" Y2="55" Stroke="#3498DB" StrokeThickness="2"/>
                                <Line X1="35" Y1="50" X2="40" Y2="50" Stroke="#3498DB" StrokeThickness="2"/>

                                <!-- Porta Quântica: Círculo com matriz -->
                                <Ellipse Canvas.Left="60" Canvas.Top="35" Width="35" Height="35"
                                        Stroke="#9B59B6" StrokeThickness="3" Fill="Transparent"/>
                                <TextBlock Text="U" Canvas.Left="72" Canvas.Top="44" 
                                          FontSize="12" FontWeight="Bold" Foreground="#9B59B6"/>
                                <Line X1="60" Y1="52.5" X2="55" Y2="52.5" Stroke="#9B59B6" StrokeThickness="2"/>
                                <Line X1="95" Y1="52.5" X2="100" Y2="52.5" Stroke="#9B59B6" StrokeThickness="2"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="⚡ Portas Lógicas" 
                                     Style="{StaticResource SectionTitleStyle}" Margin="0"/>
                            <TextBlock Text="Clássicas vs Quânticas: Reversibilidade e Unitariedade" 
                                     FontSize="16" Foreground="{StaticResource DarkGray}" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,15">
                        <Border Style="{StaticResource BadgeStyle}" Background="#E3F2FD">
                            <TextBlock Text="🔲 Portas Clássicas" Foreground="#1976D2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#F3E5F5">
                            <TextBlock Text="⚛️ Portas Quânticas" Foreground="#7B1FA2" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#FFEBEE">
                            <TextBlock Text="🔄 Reversibilidade" Foreground="#C62828" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                        <Border Style="{StaticResource BadgeStyle}" Background="#E8F5E9">
                            <TextBlock Text="📐 Unitariedade" Foreground="#2E7D32" FontWeight="SemiBold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Separator Background="{StaticResource LightGray}" Margin="0,15,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" FontSize="15">
                        <Run FontWeight="Bold" FontSize="16">🎯 A Diferença Fundamental:</Run>
                        <LineBreak/><LineBreak/>
                        
                        <Run FontWeight="SemiBold" Foreground="#3498DB">→ PORTAS CLÁSSICAS:</Run> Implementam funções booleanas sobre bits.
                        <LineBreak/>
                        • A maioria é <Run FontWeight="Bold" Foreground="#E74C3C">IRREVERSÍVEL</Run> (AND, OR, NAND, XOR)
                        <LineBreak/>
                        • Múltiplas entradas → mesma saída = <Run FontStyle="Italic">perda de informação</Run>
                        <LineBreak/>
                        • Exemplo: AND(0,0)=0, AND(0,1)=0, AND(1,0)=0 → não dá pra saber qual foi a entrada
                        <LineBreak/>
                        • Apenas algumas são reversíveis (NOT, Toffoli, Fredkin)
                        <LineBreak/><LineBreak/>
                        
                        <Run FontWeight="SemiBold" Foreground="#9B59B6">→ PORTAS QUÂNTICAS:</Run> Implementam transformações unitárias sobre qubits.
                        <LineBreak/>
                        • <Run FontWeight="Bold" Foreground="#27AE60">SEMPRE REVERSÍVEIS</Run> por definição matemática
                        <LineBreak/>
                        • Representadas por matrizes unitárias: U†U = I
                        <LineBreak/>
                        • <Run FontWeight="Bold">Toda operação tem inversa</Run>: U⁻¹ = U†
                        <LineBreak/>
                        • Conservam probabilidades: |α|² + |β|² = 1
                        <LineBreak/><LineBreak/>
                        
                        <Run FontWeight="Bold" Foreground="#E74C3C">⚠️ EXCEÇÃO:</Run> A medição quântica <Run FontStyle="Italic">não é unitária</Run> e é irreversível!
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Seção: Conceito de Reversibilidade -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="🔄 Entendendo Reversibilidade" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Irreversível -->
                        <Border Grid.Column="0" Background="#FFEBEE" CornerRadius="10" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="❌ IRREVERSÍVEL" 
                                         FontSize="18" FontWeight="Bold"
                                         Foreground="#C62828"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <Border Background="White" BorderBrush="#E74C3C" BorderThickness="2"
                                        CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="13">
                                        <Run FontWeight="Bold">Muitos-para-um:</Run>
                                        <LineBreak/><LineBreak/>
                                        
                                        Várias entradas diferentes geram a mesma saída.
                                        <LineBreak/><LineBreak/>
                                        
                                        <Run FontWeight="SemiBold" Foreground="#E74C3C">Consequência:</Run>
                                        <LineBreak/>
                                        • Impossível recuperar entrada original
                                        <LineBreak/>
                                        • Perda de informação
                                        <LineBreak/>
                                        • Dissipação de energia (Landauer)
                                        <LineBreak/>
                                        • Não tem função inversa
                                    </TextBlock>
                                </Border>

                                <TextBlock Text="Exemplo: Porta AND" FontWeight="Bold" FontSize="14" Margin="0,15,0,10"/>
                                <Border Background="White" CornerRadius="6" Padding="12">
                                    <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="20">
                                        (0,0) → 0
                                        <LineBreak/>
                                        (0,1) → 0
                                        <LineBreak/>
                                        (1,0) → 0
                                        <LineBreak/>
                                        (1,1) → 1
                                        <LineBreak/><LineBreak/>
                                        <Run FontWeight="Bold" Foreground="#E74C3C">
                                            Se vejo "0", não sei qual foi a entrada!
                                        </Run>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Reversível -->
                        <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="10" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="✅ REVERSÍVEL" 
                                         FontSize="18" FontWeight="Bold"
                                         Foreground="#2E7D32"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <Border Background="White" BorderBrush="#27AE60" BorderThickness="2"
                                        CornerRadius="8" Padding="15">
                                    <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="13">
                                        <Run FontWeight="Bold">Um-para-um (bijeção):</Run>
                                        <LineBreak/><LineBreak/>
                                        
                                        Cada entrada gera uma saída única e vice-versa.
                                        <LineBreak/><LineBreak/>
                                        
                                        <Run FontWeight="SemiBold" Foreground="#27AE60">Consequência:</Run>
                                        <LineBreak/>
                                        • Possível recuperar entrada original
                                        <LineBreak/>
                                        • Sem perda de informação
                                        <LineBreak/>
                                        • Função inversa existe
                                        <LineBreak/>
                                        • Operação pode ser desfeita
                                    </TextBlock>
                                </Border>

                                <TextBlock Text="Exemplo: Porta NOT" FontWeight="Bold" FontSize="14" Margin="0,15,0,10"/>
                                <Border Background="White" CornerRadius="6" Padding="12">
                                    <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="20">
                                        0 → 1
                                        <LineBreak/>
                                        1 → 0
                                        <LineBreak/><LineBreak/>
                                        <Run FontWeight="Bold" Foreground="#27AE60">
                                            Cada saída corresponde a exatamente uma entrada!
                                        </Run>
                                        <LineBreak/><LineBreak/>
                                        Aplicar NOT duas vezes = volta ao original
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Simulador 1: Comparação Direta de Portas -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="🎮 Simulador 1: Portas em Ação" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- PORTA CLÁSSICA: AND -->
                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Padding="25" Margin="5">
                            <StackPanel>
                                <TextBlock Text="🔲 Porta Clássica: AND" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#1976D2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Visualização da Porta AND -->
                                <Canvas Height="250" Margin="10">
                                    <!-- Porta AND -->
                                    <Border Canvas.Left="130" Canvas.Top="70" Width="80" Height="100"
                                            Background="White" BorderBrush="#1976D2" BorderThickness="3"
                                            CornerRadius="5">
                                        <TextBlock Text="AND" FontSize="24" FontWeight="Bold"
                                                 Foreground="#1976D2" HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Entrada A -->
                                    <Line X1="50" Y1="100" X2="130" Y2="100" 
                                          Stroke="#1976D2" StrokeThickness="3"/>
                                    <TextBlock Text="A" Canvas.Left="30" Canvas.Top="92" 
                                             FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                    <Ellipse x:Name="InputA_Classical" Canvas.Left="40" Canvas.Top="95" 
                                            Width="10" Height="10" Fill="#E74C3C"/>

                                    <!-- Entrada B -->
                                    <Line X1="50" Y1="140" X2="130" Y2="140" 
                                          Stroke="#1976D2" StrokeThickness="3"/>
                                    <TextBlock Text="B" Canvas.Left="30" Canvas.Top="132" 
                                             FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                    <Ellipse x:Name="InputB_Classical" Canvas.Left="40" Canvas.Top="135" 
                                            Width="10" Height="10" Fill="#E74C3C"/>

                                    <!-- Saída -->
                                    <Line X1="210" Y1="120" X2="290" Y2="120" 
                                          Stroke="#1976D2" StrokeThickness="3"/>
                                    <TextBlock Text="OUT" Canvas.Left="295" Canvas.Top="112" 
                                             FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                    <Ellipse x:Name="Output_Classical" Canvas.Left="280" Canvas.Top="115" 
                                            Width="10" Height="10" Fill="#27AE60"/>

                                    <!-- Valores -->
                                    <TextBlock x:Name="TxtInputA" Text="0" Canvas.Left="80" Canvas.Top="85"
                                             FontSize="16" FontWeight="Bold" Foreground="#E74C3C"/>
                                    <TextBlock x:Name="TxtInputB" Text="0" Canvas.Left="80" Canvas.Top="125"
                                             FontSize="16" FontWeight="Bold" Foreground="#E74C3C"/>
                                    <TextBlock x:Name="TxtOutputClassical" Text="0" Canvas.Left="230" Canvas.Top="105"
                                             FontSize="20" FontWeight="Bold" Foreground="#27AE60"/>

                                    <!-- Animação de fluxo -->
                                    <Ellipse x:Name="FlowParticle" Width="8" Height="8" Fill="#FFD700"
                                            Canvas.Left="50" Canvas.Top="116" Opacity="0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                </Canvas>

                                <!-- Controles -->
                                <TextBlock Text="Escolha as entradas:" FontWeight="Bold" FontSize="14" 
                                         HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="A:" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                            <Button Content="0" Style="{StaticResource SimulationButtonStyle}"
                                                    Click="BtnAND_A0_Click" Width="50"/>
                                            <Button Content="1" Style="{StaticResource SimulationButtonStyle}"
                                                    Click="BtnAND_A1_Click" Width="50"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="B:" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                            <Button Content="0" Style="{StaticResource SimulationButtonStyle}"
                                                    Click="BtnAND_B0_Click" Width="50"/>
                                            <Button Content="1" Style="{StaticResource SimulationButtonStyle}"
                                                    Click="BtnAND_B1_Click" Width="50"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Button Content="⚡ Executar AND" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="#1976D2"
                                        Click="BtnExecuteAND_Click"
                                        Margin="0,10,0,0"/>

                                <!-- Status de Reversibilidade -->
                                <Border Background="White" BorderBrush="#E74C3C" BorderThickness="2"
                                        CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                    <StackPanel>
                                        <TextBlock Text="❌ IRREVERSÍVEL" 
                                                 FontWeight="Bold" FontSize="14" Foreground="#E74C3C"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtAND_Status" 
                                                 Text="3 entradas diferentes → OUT = 0"
                                                 FontSize="12" TextWrapping="Wrap" TextAlignment="Center"
                                                 Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Tentativa de Reverter -->
                                <Button x:Name="BtnRevertAND" Content="🔙 Tentar Reverter" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource DarkGray}"
                                        Click="BtnRevertAND_Click"
                                        Margin="0,10,0,0"
                                        IsEnabled="False"/>

                                <TextBlock x:Name="TxtAND_RevertMsg" 
                                         Text=""
                                         FontSize="11" FontWeight="SemiBold" Foreground="#E74C3C"
                                         TextAlignment="Center" TextWrapping="Wrap"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- PORTA QUÂNTICA: X (NOT) -->
                        <Border Grid.Column="1" Background="#F3E5F5" CornerRadius="10" Padding="25" Margin="5">
                            <StackPanel>
                                <TextBlock Text="⚛️ Porta Quântica: X" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                                <!-- Visualização da Porta X -->
                                <Canvas Height="250" Margin="10">
                                    <!-- Porta X -->
                                    <Ellipse Canvas.Left="130" Canvas.Top="70" Width="80" Height="80"
                                            Stroke="#9B59B6" StrokeThickness="3" Fill="Transparent"/>
                                    <TextBlock Text="X" Canvas.Left="158" Canvas.Top="97"
                                             FontSize="28" FontWeight="Bold" Foreground="#9B59B6"/>

                                    <!-- Linha quântica -->
                                    <Line X1="50" Y1="110" X2="290" Y2="110" 
                                          Stroke="#9B59B6" StrokeThickness="3"/>

                                    <!-- Estado inicial -->
                                    <Rectangle Canvas.Left="30" Canvas.Top="95" Width="30" Height="30"
                                              Fill="#E3F2FD" Stroke="#1976D2" StrokeThickness="2"/>
                                    <TextBlock x:Name="TxtQuantumInput" Text="|0⟩" Canvas.Left="38" Canvas.Top="100"
                                             FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>

                                    <!-- Estado final -->
                                    <Rectangle Canvas.Left="280" Canvas.Top="95" Width="30" Height="30"
                                              Fill="#F3E5F5" Stroke="#9B59B6" StrokeThickness="2"/>
                                    <TextBlock x:Name="TxtQuantumOutput" Text="|0⟩" Canvas.Left="288" Canvas.Top="100"
                                             FontSize="14" FontWeight="Bold" Foreground="#9B59B6"/>

                                    <!-- Partícula quântica animada -->
                                    <Ellipse x:Name="QuantumParticle" Width="12" Height="12" Fill="#FFD700"
                                            Canvas.Left="44" Canvas.Top="104" Opacity="0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>

                                    <!-- Matriz unitária -->
                                    <Border Canvas.Left="90" Canvas.Top="160" Background="White" 
                                            BorderBrush="#9B59B6" BorderThickness="2" CornerRadius="5" Padding="8">
                                        <TextBlock FontSize="11" Foreground="#9B59B6">
                                            <Run Text="X = [0 1]"/>
                                            <LineBreak/>
                                            <Run Text="    [1 0]"/>
                                        </TextBlock>
                                    </Border>
                                </Canvas>

                                <!-- Controles -->
                                <TextBlock Text="Escolha o estado inicial:" FontWeight="Bold" FontSize="14" 
                                         HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="|0⟩" Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnX_State0_Click"/>
                                    <Button Content="|1⟩" Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource QuantumColor}"
                                            Click="BtnX_State1_Click"/>
                                    <Button Content="|+⟩" Style="{StaticResource SimulationButtonStyle}"
                                            Background="{StaticResource WarningColor}"
                                            Click="BtnX_StatePlus_Click"/>
                                </StackPanel>

                                <Button Content="⚡ Aplicar Porta X" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource QuantumColor}"
                                        Click="BtnExecuteX_Click"
                                        Margin="0,10,0,0"/>

                                <!-- Status de Reversibilidade -->
                                <Border Background="White" BorderBrush="#27AE60" BorderThickness="2"
                                        CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                    <StackPanel>
                                        <TextBlock Text="✅ UNITÁRIA E REVERSÍVEL" 
                                                 FontWeight="Bold" FontSize="14" Foreground="#27AE60"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtX_Status" 
                                                 Text="X†X = I (inversa existe)"
                                                 FontSize="12" TextWrapping="Wrap" TextAlignment="Center"
                                                 Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Reverter com sucesso -->
                                <Button x:Name="BtnRevertX" Content="🔙 Aplicar X† (Reverter)" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource SuccessColor}"
                                        Click="BtnRevertX_Click"
                                        Margin="0,10,0,0"
                                        IsEnabled="False"/>

                                <TextBlock x:Name="TxtX_RevertMsg" 
                                         Text=""
                                         FontSize="11" FontWeight="SemiBold" Foreground="#27AE60"
                                         TextAlignment="Center" TextWrapping="Wrap"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Simulador 2: Demonstração de Irreversibilidade -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="🧪 Simulador 2: Perda de Informação" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,20"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0,0,0,20">
                        Veja como múltiplas entradas geram a mesma saída na porta AND, 
                        tornando impossível recuperar a entrada original:
                    </TextBlock>

                    <Border Background="#FFF3E0" CornerRadius="10" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Entradas possíveis -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ENTRADAS POSSÍVEIS" FontWeight="Bold" FontSize="16"
                                         Foreground="#E65100" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                <Button x:Name="BtnTest00" Content="(0, 0)" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource ClassicalColor}"
                                        Click="BtnTestInput_Click" Tag="00"
                                        Margin="5"/>
                                <Button x:Name="BtnTest01" Content="(0, 1)" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource ClassicalColor}"
                                        Click="BtnTestInput_Click" Tag="01"
                                        Margin="5"/>
                                <Button x:Name="BtnTest10" Content="(1, 0)" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource ClassicalColor}"
                                        Click="BtnTestInput_Click" Tag="10"
                                        Margin="5"/>
                                <Button x:Name="BtnTest11" Content="(1, 1)" 
                                        Style="{StaticResource SimulationButtonStyle}"
                                        Background="{StaticResource ClassicalColor}"
                                        Click="BtnTestInput_Click" Tag="11"
                                        Margin="5"/>
                            </StackPanel>

                            <!-- Porta AND no meio -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                <Border Width="80" Height="100" Background="White" 
                                        BorderBrush="#1976D2" BorderThickness="3" CornerRadius="5">
                                    <TextBlock Text="AND" FontSize="24" FontWeight="Bold"
                                             Foreground="#1976D2" HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="→" FontSize="30" Foreground="#F39C12"
                                         HorizontalAlignment="Center" Margin="0,10"/>
                            </StackPanel>

                            <!-- Saídas -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="SAÍDA" FontWeight="Bold" FontSize="16"
                                         Foreground="#E65100" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                <Border x:Name="Output0Box" Height="60" Background="#FFCDD2" 
                                        BorderBrush="#E74C3C" BorderThickness="3" CornerRadius="8" Margin="5">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="0" FontSize="28" FontWeight="Bold" 
                                                 Foreground="#E74C3C" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtCount0" Text="0 entradas →" FontSize="11"
                                                 HorizontalAlignment="Center" Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>
                                </Border>

                                <Border x:Name="Output1Box" Height="60" Background="#C8E6C9" 
                                        BorderBrush="#27AE60" BorderThickness="3" CornerRadius="8" Margin="5">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="1" FontSize="28" FontWeight="Bold" 
                                                 Foreground="#27AE60" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtCount1" Text="0 entradas →" FontSize="11"
                                                 HorizontalAlignment="Center" Foreground="{StaticResource DarkGray}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Análise -->
                    <Border Background="#FFEBEE" BorderBrush="#E74C3C" BorderThickness="2"
                            CornerRadius="8" Padding="15" Margin="0,20,0,0">
                        <TextBlock x:Name="TxtLossAnalysis" Style="{StaticResource ContentTextStyle}" Margin="0">
                            <Run FontWeight="Bold" FontSize="15">📊 Análise de Perda:</Run>
                            <LineBreak/><LineBreak/>
                            Clique nas entradas acima para ver como múltiplas combinações levam ao mesmo resultado.
                            <LineBreak/><LineBreak/>
                            <Run FontWeight="SemiBold" Foreground="#E74C3C">
                                Quando você vê "0" na saída, não consegue saber qual foi a entrada original!
                            </Run>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Seção: Unitariedade Matemática -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📐 Unitariedade: A Garantia Matemática" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <Border Background="#F3E5F5" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Uma matriz U é unitária se:" 
                                     FontSize="16" FontWeight="SemiBold"
                                     Foreground="#7B1FA2" HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>

                            <Border Background="White" BorderBrush="#9B59B6" BorderThickness="3"
                                    CornerRadius="8" Padding="20">
                                <TextBlock TextWrapping="Wrap" TextAlignment="Center" LineHeight="30">
                                    <Run FontSize="24" FontWeight="Bold" Foreground="#9B59B6">U† U = I</Run>
                                    <LineBreak/><LineBreak/>
                                    <Run FontSize="14">onde U† é a transposta conjugada de U</Run>
                                    <LineBreak/>
                                    <Run FontSize="14">e I é a matriz identidade</Run>
                                </TextBlock>
                            </Border>

                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="✅ Consequências:" FontWeight="Bold" FontSize="14"
                                                 Foreground="#27AE60" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap" LineHeight="22" FontSize="13">
                                            • <Run FontWeight="SemiBold">U⁻¹ = U†</Run>
                                            <LineBreak/>
                                            (inversa sempre existe)
                                            <LineBreak/><LineBreak/>
                                            • <Run FontWeight="SemiBold">||Uψ|| = ||ψ||</Run>
                                            <LineBreak/>
                                            (preserva norma/probabilidades)
                                            <LineBreak/><LineBreak/>
                                            • <Run FontWeight="SemiBold">Reversível</Run>
                                            <LineBreak/>
                                            (sempre pode desfazer)
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="Exemplo: Porta X" FontWeight="Bold" FontSize="14"
                                                 Foreground="#9B59B6" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap" LineHeight="22" FontSize="13">
                                            X = [0  1]
                                            <LineBreak/>
                                            <Run Text="    "/>  [1  0]
                                            <LineBreak/><LineBreak/>
                                            X† = [0  1]
                                            <LineBreak/>
                                            <Run Text="     "/>[1  0]
                                            <LineBreak/><LineBreak/>
                                            X†X = [1  0] = I ✓
                                            <LineBreak/>
                                            <Run Text="      "/>[0  1]
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Tabela Comparativa Final -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="⚖️ Comparação Completa" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             Margin="0,0,0,15"/>

                    <Separator Background="{StaticResource LightGray}" Margin="0,0,0,20"/>

                    <!-- Header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource LightGray}" 
                                Padding="12" CornerRadius="8,0,0,0">
                            <TextBlock Text="Propriedade" FontWeight="Bold" FontSize="14"/>
                        </Border>
                        <Border Grid.Column="1" Background="#E3F2FD" Padding="12">
                            <TextBlock Text="🔲 Portas Clássicas" FontWeight="Bold" FontSize="14" Foreground="#1976D2"/>
                        </Border>
                        <Border Grid.Column="2" Background="#F3E5F5" 
                                Padding="12" CornerRadius="0,8,0,0">
                            <TextBlock Text="⚛️ Portas Quânticas" FontWeight="Bold" FontSize="14" Foreground="#7B1FA2"/>
                        </Border>
                    </Grid>

                    <!-- Reversibilidade -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="⭐ Reversibilidade" FontWeight="Bold" Foreground="#E74C3C"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold" Foreground="#E74C3C">Maioria IRREVERSÍVEL</Run>
                                <LineBreak/>
                                (AND, OR, NAND, XOR)
                                <LineBreak/>
                                Exceções: NOT, Toffoli, Fredkin
                            </TextBlock>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold" Foreground="#27AE60">SEMPRE REVERSÍVEL</Run>
                                <LineBreak/>
                                Toda porta tem inversa U⁻¹ = U†
                                <LineBreak/>
                                É uma lei física, não escolha
                            </TextBlock>
                        </Border>
                    </Grid>

                    <!-- Unitariedade -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="⭐ Unitariedade" FontWeight="Bold" Foreground="#27AE60"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold">Não se aplica</Run>
                                <LineBreak/>
                                Sem conceito de norma ou amplitude
                                <LineBreak/>
                                Apenas funções booleanas
                            </TextBlock>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="Bold">SEMPRE UNITÁRIA</Run>
                                <LineBreak/>
                                U†U = I (definição obrigatória)
                                <LineBreak/>
                                Conserva probabilidades
                            </TextBlock>
                        </Border>
                    </Grid>

                    <!-- Perda de Informação -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Perda de Info" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Sim, na maioria dos casos" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Não, informação sempre preservada" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Função Inversa -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Função Inversa" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Geralmente não existe" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Sempre existe (U†)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Representação -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1">
                            <TextBlock Text="Representação" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Tabela verdade (função booleana)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Text="Matriz unitária (operador linear)" Style="{StaticResource ContentTextStyle}" Margin="0"/>
                        </Border>
                    </Grid>

                    <!-- Exemplos -->
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FAFAFA" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="1" CornerRadius="0,0,0,8">
                            <TextBlock Text="Exemplos" FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Column="1" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="SemiBold">Irreversíveis:</Run> AND, OR, NAND
                                <LineBreak/>
                                <Run FontWeight="SemiBold">Reversíveis:</Run> NOT, Toffoli
                            </TextBlock>
                        </Border>
                        <Border Grid.Column="2" Background="White" Padding="12" BorderBrush="{StaticResource LightGray}" BorderThickness="0,1,1,1" CornerRadius="0,0,8,0">
                            <TextBlock Style="{StaticResource ContentTextStyle}" Margin="0">
                                <Run FontWeight="SemiBold">Todas reversíveis:</Run>
                                <LineBreak/>
                                X, Y, Z, H, CNOT, Toffoli, RX, RY, RZ
                            </TextBlock>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Conclusão -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E3F2FD" Offset="0"/>
                        <GradientStop Color="#F3E5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock Text="💭 Síntese Final" 
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource SecondaryColor}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>

                    <Border Background="White" CornerRadius="10" Padding="25"
                            BorderBrush="{StaticResource QuantumColor}" BorderThickness="2">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"
                                 LineHeight="28" FontSize="16"
                                 Foreground="{StaticResource SecondaryColor}">
                            <Run FontSize="20" Text="✨" />
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#3498DB">
                                Portas clássicas podem perder informação.
                            </Run>
                            <LineBreak/>
                            <Run FontWeight="Bold" FontSize="18" Foreground="#9B59B6">
                                Portas quânticas nunca perdem informação.
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontWeight="Bold" FontSize="17" Foreground="#E74C3C">
                                A diferença está na física subjacente:
                            </Run>
                            <LineBreak/>
                            <Run FontSize="15">
                                Computadores clássicos operam com dissipação.
                            </Run>
                            <LineBreak/>
                            <Run FontSize="15">
                                Computadores quânticos seguem evolução unitária.
                            </Run>
                            <LineBreak/><LineBreak/>
                            <Run FontStyle="Italic" Foreground="{StaticResource DarkGray}" FontSize="14">
                                "A reversibilidade não é uma escolha de design na computação quântica — 
                                é uma consequência inevitável das leis da mecânica quântica.
                                A unitariedade garante que toda transformação pode ser desfeita,
                                preservando a informação no sistema."
                            </Run>
                            <LineBreak/>
                            <Run FontSize="20" Text="✨" />
                        </TextBlock>
                    </Border>

                    <!-- Box extra sobre medição -->
                    <Border Background="#FFF3E0" BorderBrush="#F39C12" BorderThickness="2"
                            CornerRadius="10" Padding="20" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="⚠️ Importante: A Medição Quântica" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="#E65100"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"/>

                            <TextBlock TextWrapping="Wrap" LineHeight="24" FontSize="14">
                                Embora <Run FontWeight="Bold">todas as portas quânticas sejam reversíveis</Run>, 
                                o processo de <Run FontWeight="Bold" Foreground="#E74C3C">MEDIÇÃO</Run> 
                                não é uma operação unitária.
                                <LineBreak/><LineBreak/>
                                
                                Quando você mede um qubit:
                                <LineBreak/>
                                • O estado colapsa para |0⟩ ou |1⟩
                                <LineBreak/>
                                • A superposição é destruída
                                <LineBreak/>
                                • <Run FontWeight="Bold" Foreground="#E74C3C">Este processo é IRREVERSÍVEL</Run>
                                <LineBreak/>
                                • Não existe "inversa da medição"
                                <LineBreak/><LineBreak/>
                                
                                <Run FontWeight="Bold">Portanto:</Run> A computação quântica mantém 
                                reversibilidade apenas durante a manipulação dos qubits com portas. 
                                A medição final é o único ponto irreversível do processo.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>