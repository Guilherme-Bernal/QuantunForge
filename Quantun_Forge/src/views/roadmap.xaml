                            <LineBreak/><LineBreak/>
                            <Run Text="2. " FontWeight="Bold"/>
                            <Run Text="Use os simuladores interativos: visualização ajuda na compreensão"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="3. " FontWeight="Bold"/>
