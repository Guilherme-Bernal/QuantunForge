                     ====================================== -->
                <Border Style="{StaticResource RoadmapCard}">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="{StaticResource AccentColor}"
                                    CornerRadius="25"
                                    Width="50" Height="50"
                                    Margin="0,0,20,0">
