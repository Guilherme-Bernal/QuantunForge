<UserControl x:Class="Quantun_Forge.src.views.FisicaQuantica.CorpoNegro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantun_Forge.src.views.FisicaQuantica"
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#F72585"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#F72585"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="⚫ Corpo Negro e Radiação de Planck" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="A solução do 'problema da catástrofe ultravioleta' que deu origem à física quântica" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Simulador de Corpo Negro Visual -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔥 Corpo Negro Aquecido" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas do Corpo Negro -->
                        <Border Background="#1A1A2E" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="300"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Corpo Negro (Esquerda) -->
                                <Canvas Grid.Column="0">
                                    <!-- Plataforma -->
                                    <Rectangle Canvas.Left="50" Canvas.Top="200"
                                              Width="200" Height="80"
                                              Fill="#34495E"
                                              Stroke="#2C3E50"
                                              StrokeThickness="2"/>

                                    <!-- Corpo Negro (Cubo) -->
                                    <Rectangle x:Name="BlackBodyObject" 
                                              Canvas.Left="100" Canvas.Top="100"
                                              Width="100" Height="100"
                                              Fill="Black"
                                              Stroke="#7F8C8D"
                                              StrokeThickness="3"
                                              RadiusX="5" RadiusY="5">
                                        <Rectangle.Effect>
                                            <DropShadowEffect x:Name="GlowEffect"
                                                             Color="Orange" 
                                                             BlurRadius="40" 
                                                             ShadowDepth="0"
                                                             Opacity="0.8"/>
                                        </Rectangle.Effect>
                                    </Rectangle>

                                    <!-- Abertura (buraco negro) -->
                                    <Ellipse Canvas.Left="130" Canvas.Top="130"
                                            Width="40" Height="40"
                                            Fill="Black"
                                            Stroke="White"
                                            StrokeThickness="2"/>

                                    <!-- Ondas de Calor -->
                                    <Canvas x:Name="HeatWavesCanvas"/>

                                    <!-- Temperatura Display -->
                                    <Border Canvas.Left="90" Canvas.Top="210"
                                           Background="#2C3E50"
                                           BorderBrush="#E67E22"
                                           BorderThickness="2"
                                           CornerRadius="5"
                                           Padding="8">
                                        <TextBlock x:Name="TxtTemperaturaObjeto" 
                                                  Text="3000 K"
                                                  Foreground="#E67E22"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Chamas embaixo -->
                                    <Canvas x:Name="FlamesCanvas" Canvas.Top="200"/>
                                </Canvas>

                                <!-- Espectro Emitido (Direita) -->
                                <Canvas Grid.Column="1" x:Name="EmissionCanvas">
                                    <!-- Label -->
                                    <TextBlock Text="Radiação Emitida" 
                                              Canvas.Left="20" 
                                              Canvas.Top="10"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"/>

                                    <!-- Ondas eletromagnéticas -->
                                    <Canvas x:Name="RadiationWavesCanvas" Canvas.Top="40"/>
                                </Canvas>
                            </Grid>
                        </Border>

                        <!-- Cor Aparente do Corpo Negro -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#2C3E50" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="🎨 Cor Aparente" 
                                              FontSize="12" 
                                              FontWeight="Bold" 
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <Rectangle x:Name="ColorDisplay"
                                             Height="60"
                                             Fill="Orange"
                                             Stroke="White"
                                             StrokeThickness="2"
                                             RadiusX="5" RadiusY="5">
                                        <Rectangle.Effect>
                                            <DropShadowEffect Color="Orange" 
                                                             BlurRadius="20" 
                                                             ShadowDepth="0"/>
                                        </Rectangle.Effect>
                                    </Rectangle>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#ECF0F1" 
                                   BorderBrush="#95A5A6" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="🌡️ T" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtTempDisplay" 
                                                  Text="3000 K"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="#E67E22"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="📏 λmax" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtLambdaMax" 
                                                  Text="966 nm"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="#F39C12"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="⚡ Intensidade" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtIntensidadeTotal" 
                                                  Text="459 W/m²"
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  Foreground="#E74C3C"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Curva de Planck -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📈 Curva de Radiação de Planck" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="350"
                                Margin="0,0,0,15">
                            <Canvas x:Name="PlanckCurveCanvas" ClipToBounds="True">
                                <!-- Curva será desenhada aqui -->
                            </Canvas>
                        </Border>

                        <!-- Comparação com Teorias Clássicas -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="10"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="✅ Lei de Planck" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="Curva correta!" 
                                              FontSize="9" 
                                              Foreground="#2ECC71"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="10"
                                   Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="⚠️ Lei de Wien" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="Certa para λ curtos" 
                                              FontSize="9" 
                                              Foreground="#F39C12"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                   Background="#FADBD8" 
                                   BorderBrush="#E74C3C" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="10"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="❌ Rayleigh-Jeans" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="Catástrofe UV!" 
                                              FontSize="9" 
                                              Foreground="#E74C3C"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Lei de Stefan-Boltzmann -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔥 Lei de Stefan-Boltzmann" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#F8F9FA" 
                               BorderBrush="#DEE2E6" 
                               BorderThickness="2" 
                               CornerRadius="8" 
                               Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Potência Total Emitida:" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,10"/>
                                    <TextBlock Text="P = σ · A · T⁴" 
                                              FontSize="22" 
                                              FontFamily="Consolas"
                                              FontWeight="Bold" 
                                              Foreground="#E74C3C"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                       Background="White" 
                                       BorderBrush="#BDC3C7" 
                                       BorderThickness="1" 
                                       CornerRadius="5" 
                                       Padding="15"
                                       Margin="10,0,0,0">
                                    <StackPanel>
                                        <TextBlock FontSize="11" Foreground="#495057" Margin="0,0,0,8">
                                            <Run Text="σ = 5.67×10⁻⁸ W/(m²·K⁴)" FontFamily="Consolas"/>
                                            <LineBreak/>
                                            <Run Text="(Constante de Stefan-Boltzmann)"/>
                                        </TextBlock>

                                        <TextBlock FontSize="11" Foreground="#495057" Margin="0,8,0,8">
                                            <Run Text="Para T = " FontWeight="Bold"/>
                                            <Run x:Name="TxtTempStefan" Text="3000 K" Foreground="#E67E22" FontWeight="Bold"/>
                                            <Run Text=":"/>
                                        </TextBlock>

                                        <TextBlock FontSize="11" Foreground="#495057">
                                            <Run Text="P/A = " FontWeight="Bold"/>
                                            <Run x:Name="TxtPotenciaStefan" Text="4.59×10⁶ W/m²" Foreground="#E74C3C" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Conceitos Fundamentais -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Conceitos Fundamentais" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Corpo Negro Ideal:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Absorve toda radiação incidente e emite radiação térmica característica."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Catástrofe Ultravioleta:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  A teoria clássica previa intensidade infinita para UV. Planck resolveu propondo energia quantizada!"/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Lei de Wien:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  λmax · T = 2.898×10⁻³ m·K - Objetos mais quentes emitem luz mais azul."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" LineHeight="20">
                            <Run Text="• Quantização de Planck:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  E = n·h·f (n = 0, 1, 2, ...) - Energia vem em 'pacotes' discretos."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controle de Temperatura -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🌡️ Temperatura do Corpo Negro" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Slider x:Name="SliderTemperatura"
                               Minimum="1000"
                               Maximum="10000"
                               Value="3000"
                               TickFrequency="500"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SliderTemperatura_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTemperaturaSlider" 
                                  Text="3000 K" 
                                  FontSize="12" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  FontWeight="Bold"
                                  Margin="0,0,0,15"/>

                        <!-- Escala de temperatura visual -->
                        <Border Background="#2C3E50" 
                               BorderBrush="#34495E" 
                               BorderThickness="1" 
                               CornerRadius="5" 
                               Padding="10"
                               Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Escala de Temperatura:" 
                                          FontSize="10" 
                                          Foreground="White"
                                          Margin="0,0,0,8"/>

                                <Rectangle Height="30">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#8B0000" Offset="0"/>
                                            <GradientStop Color="#FF4500" Offset="0.2"/>
                                            <GradientStop Color="#FFA500" Offset="0.4"/>
                                            <GradientStop Color="#FFFF00" Offset="0.6"/>
                                            <GradientStop Color="#FFFFFF" Offset="0.8"/>
                                            <GradientStop Color="#ADD8E6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Grid Margin="0,5,0,0">
                                    <TextBlock Text="1000K" FontSize="8" Foreground="White" HorizontalAlignment="Left"/>
                                    <TextBlock Text="10000K" FontSize="8" Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="🔄 Animar Mudança" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="AnimarTemperatura_Click"/>
                    </StackPanel>
                </Border>

                <!-- Temperaturas de Referência -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Temperaturas de Referência" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Button Content="🕯️ Chama de Vela (1800K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#8B4513"
                               Click="TempVela_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="💡 Lâmpada (2700K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#CD853F"
                               Click="TempLampada_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🔥 Lava (1500K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#FF4500"
                               Click="TempLava_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="☀️ Sol (5778K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#FFD700"
                               Click="TempSol_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="⭐ Sirius (9940K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#87CEEB"
                               Click="TempSirius_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🌟 Estrela Azul (10000K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#4169E1"
                               Click="TempEstrelaAzul_Click"
                               FontSize="10"
                               Padding="8,6"/>
                    </StackPanel>
                </Border>

                <!-- Visualização das Curvas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Mostrar Curvas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <CheckBox x:Name="ChkMostrarPlanck" 
                                 Content="Lei de Planck" 
                                 IsChecked="True"
                                 Foreground="#3498DB"
                                 FontSize="11"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"
                                 Checked="ChkCurvas_Changed"
                                 Unchecked="ChkCurvas_Changed"/>

                        <CheckBox x:Name="ChkMostrarWien" 
                                 Content="Lei de Wien (aprox.)" 
                                 IsChecked="False"
                                 Foreground="#F39C12"
                                 FontSize="11"
                                 Margin="0,0,0,8"
                                 Checked="ChkCurvas_Changed"
                                 Unchecked="ChkCurvas_Changed"/>

                        <CheckBox x:Name="ChkMostrarRayleigh" 
                                 Content="Rayleigh-Jeans (clássica)" 
                                 IsChecked="False"
                                 Foreground="#E74C3C"
                                 FontSize="11"
                                 Margin="0,0,0,8"
                                 Checked="ChkCurvas_Changed"
                                 Unchecked="ChkCurvas_Changed"/>

                        <CheckBox x:Name="ChkMostrarLambdaMax" 
                                 Content="Marcar λmax (Wien)" 
                                 IsChecked="True"
                                 Foreground="#9B59B6"
                                 FontSize="11"
                                 Checked="ChkCurvas_Changed"
                                 Unchecked="ChkCurvas_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Fórmulas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 Fórmulas Principais" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FA" 
                               BorderBrush="#DEE2E6" 
                               BorderThickness="1" 
                               CornerRadius="5" 
                               Padding="10">
                            <StackPanel>
                                <TextBlock FontSize="9" Foreground="#495057" TextWrapping="Wrap" Margin="0,0,0,8">
                                    <Run Text="Lei de Planck:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="I(λ,T) = (2hc²/λ⁵)" FontFamily="Consolas"/>
                                    <LineBreak/>
                                    <Run Text="         /(e^(hc/λkT) - 1)" FontFamily="Consolas"/>
                                </TextBlock>

                                <TextBlock FontSize="9" Foreground="#495057" TextWrapping="Wrap" Margin="0,0,0,8">
                                    <Run Text="Lei de Wien:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="λmax·T = 2.898×10⁻³ m·K" FontFamily="Consolas"/>
                                </TextBlock>

                                <TextBlock FontSize="9" Foreground="#495057" TextWrapping="Wrap" Margin="0,0,0,8">
                                    <Run Text="Stefan-Boltzmann:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="P = σ·A·T⁴" FontFamily="Consolas"/>
                                </TextBlock>

                                <TextBlock FontSize="9" Foreground="#495057" TextWrapping="Wrap">
                                    <Run Text="Rayleigh-Jeans:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="I(λ,T) = 2ckT/λ⁴" FontFamily="Consolas"/>
                                    <LineBreak/>
                                    <Run Text="(Falha no UV!)" Foreground="#E74C3C"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Info -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Marco Histórico" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Em 1900, Max Planck resolveu o 'problema da catástrofe ultravioleta' propondo que a energia é quantizada. Isso marcou o nascimento da física quântica!" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
