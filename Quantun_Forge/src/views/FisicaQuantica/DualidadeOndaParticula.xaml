<UserControl x:Class="Quantun_Forge.src.views.FisicaQuantica.DualidadeOndaParticula"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#F72585"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#F72585"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#2ECC71"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="〰️ Dualidade Onda-Partícula" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="A luz e a matéria exibem propriedades tanto de onda quanto de partícula" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Simulação Principal: Experimento da Dupla Fenda -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🚪 Experimento da Dupla Fenda" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas Principal da Simulação -->
                        <Border Background="#1A1A2E" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="400"
                                Margin="0,0,0,15">
                            <Canvas x:Name="SimulationCanvas" ClipToBounds="True">

                                <!-- Fonte de Luz/Partículas (Esquerda) -->
                                <Border Canvas.Left="30" Canvas.Top="180" 
                                       Background="#FFD700" 
                                       Width="40" 
                                       Height="40" 
                                       CornerRadius="20">
                                    <TextBlock Text="🔦" 
                                              FontSize="24" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Raio de Luz até a Barreira -->
                                <Line x:Name="LightBeam" 
                                     X1="70" Y1="200" X2="280" Y2="200" 
                                     Stroke="#FFD700" 
                                     StrokeThickness="4" 
                                     Opacity="0.6"/>

                                <!-- Barreira com Fendas (Centro) -->
                                <Rectangle Canvas.Left="280" Canvas.Top="50" 
                                          Width="20" 
                                          Height="120" 
                                          Fill="#2C3E50"/>

                                <Rectangle Canvas.Left="280" Canvas.Top="230" 
                                          Width="20" 
                                          Height="120" 
                                          Fill="#2C3E50"/>

                                <!-- Fenda Superior -->
                                <Rectangle x:Name="SlitTop" 
                                          Canvas.Left="280" 
                                          Canvas.Top="170" 
                                          Width="20" 
                                          Height="25" 
                                          Fill="#00FFFF" 
                                          Opacity="0.5"/>

                                <!-- Fenda Inferior -->
                                <Rectangle x:Name="SlitBottom" 
                                          Canvas.Left="280" 
                                          Canvas.Top="205" 
                                          Width="20" 
                                          Height="25" 
                                          Fill="#00FFFF" 
                                          Opacity="0.5"/>

                                <!-- Canvas para Partículas/Ondas -->
                                <Canvas x:Name="ParticlesCanvas" />

                                <!-- Tela de Detecção (Direita) -->
                                <Rectangle Canvas.Left="730" Canvas.Top="50" 
                                          Width="30" 
                                          Height="300" 
                                          Fill="#ECF0F1" 
                                          Stroke="#BDC3C7" 
                                          StrokeThickness="2"/>

                                <!-- Canvas do Padrão de Interferência -->
                                <Canvas x:Name="InterferenceCanvas" 
                                       Canvas.Left="730" 
                                       Canvas.Top="50"/>

                                <!-- Labels -->
                                <TextBlock Text="Fonte" 
                                          Canvas.Left="20" 
                                          Canvas.Top="150" 
                                          Foreground="White" 
                                          FontSize="11" 
                                          FontWeight="Bold"/>

                                <TextBlock Text="Fendas" 
                                          Canvas.Left="270" 
                                          Canvas.Top="20" 
                                          Foreground="White" 
                                          FontSize="11" 
                                          FontWeight="Bold"/>

                                <TextBlock Text="Tela de Detecção" 
                                          Canvas.Left="650" 
                                          Canvas.Top="20" 
                                          Foreground="White" 
                                          FontSize="11" 
                                          FontWeight="Bold"/>

                            </Canvas>
                        </Border>

                        <!-- Informações da Simulação -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="📊 Modo Atual" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtModoAtual" 
                                              Text="Onda"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="#3498DB"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="🎯 Detecções" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtDeteccoes" 
                                              Text="0"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="#F39C12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                   Background="#EBFAF5" 
                                   BorderBrush="#2ECC71" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚡ Status" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtStatus" 
                                              Text="Parado"
                                              FontSize="16"
                                              FontWeight="Bold"
                                              Foreground="#95A5A6"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Visualização Comparativa -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔍 Comportamento Dual" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Comportamento de Onda -->
                            <Border Background="#E3F2FD" 
                                   BorderBrush="#2196F3" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15">
                                <StackPanel>
                                    <TextBlock Text="🌊 Comportamento de Onda" 
                                              FontSize="14" 
                                              FontWeight="Bold" 
                                              Foreground="#1976D2" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <!-- Canvas de Onda -->
                                    <Border Background="White" 
                                           BorderBrush="#BDC3C7" 
                                           BorderThickness="1" 
                                           Height="150" 
                                           Margin="0,0,0,10">
                                        <Canvas x:Name="WaveCanvas" ClipToBounds="True">
                                            <!-- Ondas senoidais serão desenhadas aqui -->
                                        </Canvas>
                                    </Border>

                                    <TextBlock FontSize="11" 
                                              Foreground="#546E7A" 
                                              TextWrapping="Wrap"
                                              LineHeight="16">
                                        <Run Text="• Interferência construtiva/destrutiva" FontWeight="Bold"/>
                                        <LineBreak/>
                                        <Run Text="• Padrão de franjas"/>
                                        <LineBreak/>
                                        <Run Text="• Difração nas fendas"/>
                                        <LineBreak/>
                                        <Run Text="• Comprimento de onda λ"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Comportamento de Partícula -->
                            <Border Grid.Column="2" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#FF9800" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15">
                                <StackPanel>
                                    <TextBlock Text="⚫ Comportamento de Partícula" 
                                              FontSize="14" 
                                              FontWeight="Bold" 
                                              Foreground="#F57C00" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <!-- Canvas de Partículas -->
                                    <Border Background="White" 
                                           BorderBrush="#BDC3C7" 
                                           BorderThickness="1" 
                                           Height="150" 
                                           Margin="0,0,0,10">
                                        <Canvas x:Name="ParticleCanvas" ClipToBounds="True">
                                            <!-- Partículas serão desenhadas aqui -->
                                        </Canvas>
                                    </Border>

                                    <TextBlock FontSize="11" 
                                              Foreground="#546E7A" 
                                              TextWrapping="Wrap"
                                              LineHeight="16">
                                        <Run Text="• Detecções individuais" FontWeight="Bold"/>
                                        <LineBreak/>
                                        <Run Text="• Posições discretas"/>
                                        <LineBreak/>
                                        <Run Text="• Energia quantizada E = hf"/>
                                        <LineBreak/>
                                        <Run Text="• Momento p = h/λ"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Relação de De Broglie -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 Relação de De Broglie" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#F3E5F5" 
                               BorderBrush="#9C27B0" 
                               BorderThickness="2" 
                               CornerRadius="8" 
                               Padding="20">
                            <StackPanel>
                                <TextBlock Text="λ = h / p = h / (m·v)" 
                                          FontSize="20" 
                                          FontWeight="Bold" 
                                          FontFamily="Consolas"
                                          Foreground="#6A1B9A" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="0,0,10,0">
                                        <TextBlock Text="Massa (m):" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtMassa" 
                                                  Text="9.11×10⁻³¹ kg"
                                                  FontSize="12"
                                                  Foreground="#34495E"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0">
                                        <TextBlock Text="Velocidade (v):" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtVelocidade" 
                                                  Text="1.0×10⁶ m/s"
                                                  FontSize="12"
                                                  Foreground="#34495E"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                        <TextBlock Text="λ de Broglie:" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtLambdaBroglie" 
                                                  Text="0.727 nm"
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  Foreground="#9C27B0"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Conceitos Importantes -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Conceitos Fundamentais" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Princípio da Complementaridade:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Onda e partícula são aspectos complementares da mesma realidade."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Colapso da Função de Onda:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  A observação força o sistema a 'escolher' entre comportamento de onda ou partícula."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Interferência Quântica:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Mesmo partículas individuais criam padrões de interferência ao longo do tempo."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" LineHeight="20">
                            <Run Text="• Dualidade Universal:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  TODA matéria e radiação possui dualidade onda-partícula (não apenas luz)."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles de Simulação -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Controles" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Modo de Visualização:" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <ToggleButton x:Name="ToggleModoOnda" 
                                     Content="🌊 Modo Onda" 
                                     Style="{StaticResource ToggleButtonStyle}"
                                     IsChecked="True"
                                     Checked="ToggleModoOnda_Checked"
                                     Unchecked="ToggleModoOnda_Unchecked"/>

                        <ToggleButton x:Name="ToggleModoParticula" 
                                     Content="⚫ Modo Partícula" 
                                     Style="{StaticResource ToggleButtonStyle}"
                                     Checked="ToggleModoParticula_Checked"
                                     Unchecked="ToggleModoParticula_Unchecked"/>

                        <ToggleButton x:Name="ToggleModoDual" 
                                     Content="〰️ Modo Dual" 
                                     Style="{StaticResource ToggleButtonStyle}"
                                     Background="#9C27B0"
                                     Checked="ToggleModoDual_Checked"
                                     Unchecked="ToggleModoDual_Unchecked"/>

                        <Separator Background="#E0E0E0" Margin="0,15"/>

                        <!-- Controle de Velocidade -->
                        <TextBlock Text="Velocidade da Partícula:" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <Slider x:Name="SliderVelocidade"
                               Minimum="1"
                               Maximum="10"
                               Value="5"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SliderVelocidade_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtVelocidadeSlider" 
                                  Text="5.0×10⁵ m/s" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <!-- Controle de Intensidade -->
                        <TextBlock Text="Taxa de Emissão:" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <Slider x:Name="SliderIntensidade"
                               Minimum="1"
                               Maximum="10"
                               Value="5"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtIntensidadeSlider" 
                                  Text="Média (5)" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <!-- Botões de Ação -->
                        <Button Content="▶️ Iniciar Simulação" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="Iniciar_Click"/>

                        <Button Content="⏸️ Pausar" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#F39C12"
                               Click="Pausar_Click"/>

                        <Button Content="🔄 Limpar Tela" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Click="Limpar_Click"/>
                    </StackPanel>
                </Border>

                <!-- Configuração das Fendas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🚪 Configuração das Fendas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Distância entre Fendas:" 
                                  FontSize="11" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,5"/>

                        <Slider x:Name="SliderDistanciaFendas"
                               Minimum="20"
                               Maximum="80"
                               Value="35"
                               TickFrequency="5"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SliderDistanciaFendas_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtDistanciaFendas" 
                                  Text="35 unidades" 
                                  FontSize="10" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <CheckBox x:Name="ChkFendaSuperior" 
                                 Content="Fenda Superior Aberta" 
                                 IsChecked="True"
                                 Foreground="#2C3E50"
                                 FontSize="11"
                                 Margin="0,0,0,8"
                                 Checked="ChkFenda_Changed"
                                 Unchecked="ChkFenda_Changed"/>

                        <CheckBox x:Name="ChkFendaInferior" 
                                 Content="Fenda Inferior Aberta" 
                                 IsChecked="True"
                                 Foreground="#2C3E50"
                                 FontSize="11"
                                 Checked="ChkFenda_Changed"
                                 Unchecked="ChkFenda_Changed"/>
                    </StackPanel>
                </Border>

                <!-- Cenários Pré-definidos -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Cenários" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Button Content="💡 Fótons (Luz)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#F1C40F"
                               Click="CenarioFotons_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="⚡ Elétrons" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#3498DB"
                               Click="CenarioEletrons_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="⚛️ Átomos" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9B59B6"
                               Click="CenarioAtomos_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="🎾 Bola de Tênis" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#95A5A6"
                               Click="CenarioBola_Click"
                               FontSize="11"
                               Padding="10,8"/>
                    </StackPanel>
                </Border>

                <!-- Informações -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Curiosidade" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Em 1927, Davisson e Germer confirmaram experimentalmente que elétrons apresentam difração, provando que têm comportamento de onda!" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
