<UserControl x:Class="Quantun_Forge.src.views.FisicaQuantica.Heisenberg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantun_Forge.src.views.FisicaQuantica"
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#F72585"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#F72585"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="🔬 Princípio da Incerteza de Heisenberg" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Quanto mais precisamente conhecemos a posição, menos sabemos sobre o momento - e vice-versa" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Visualização Interativa da Incerteza -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚛️ Medição de Posição vs Momento" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas de Visualização -->
                        <Border Background="#1A1A2E" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="350"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Espaço de Posição -->
                                <Canvas Grid.Column="0" x:Name="PositionSpaceCanvas">
                                    <TextBlock Text="Espaço de Posição (x)" 
                                              Canvas.Left="10" 
                                              Canvas.Top="10"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"/>

                                    <!-- Eixo -->
                                    <Line X1="50" Y1="175" X2="340" Y2="175" 
                                         Stroke="White" 
                                         StrokeThickness="2"/>

                                    <!-- Marcações -->
                                    <TextBlock Text="x" 
                                              Canvas.Left="350" 
                                              Canvas.Top="165"
                                              Foreground="White"
                                              FontSize="11"
                                              FontWeight="Bold"/>

                                    <!-- Função de onda de posição -->
                                    <Canvas x:Name="PositionWaveCanvas"/>

                                    <!-- Partícula -->
                                    <Ellipse x:Name="ParticlePosition"
                                            Width="12"
                                            Height="12"
                                            Fill="#00D9FF"
                                            Canvas.Left="190"
                                            Canvas.Top="169">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#00D9FF" 
                                                             BlurRadius="15" 
                                                             ShadowDepth="0"/>
                                        </Ellipse.Effect>
                                    </Ellipse>

                                    <!-- Indicador de incerteza Δx -->
                                    <Rectangle x:Name="DeltaXIndicator"
                                              Canvas.Left="150"
                                              Canvas.Top="165"
                                              Width="100"
                                              Height="20"
                                              Fill="#FF6B6B"
                                              Opacity="0.3"/>

                                    <!-- Label Δx -->
                                    <Border Canvas.Left="150" Canvas.Top="200"
                                           Background="#E74C3C"
                                           BorderBrush="White"
                                           BorderThickness="1"
                                           CornerRadius="3"
                                           Padding="5">
                                        <TextBlock x:Name="TxtDeltaX" 
                                                  Text="Δx"
                                                  Foreground="White"
                                                  FontSize="10"
                                                  FontWeight="Bold"/>
                                    </Border>

                                    <!-- Info -->
                                    <TextBlock Text="Incerteza na posição" 
                                              Canvas.Left="80" 
                                              Canvas.Top="320"
                                              Foreground="White"
                                              FontSize="9"/>
                                </Canvas>

                                <!-- Espaço de Momento -->
                                <Canvas Grid.Column="1" x:Name="MomentumSpaceCanvas">
                                    <TextBlock Text="Espaço de Momento (p)" 
                                              Canvas.Left="10" 
                                              Canvas.Top="10"
                                              Foreground="White"
                                              FontSize="12"
                                              FontWeight="Bold"/>

                                    <!-- Eixo -->
                                    <Line X1="50" Y1="175" X2="340" Y2="175" 
                                         Stroke="White" 
                                         StrokeThickness="2"/>

                                    <!-- Marcações -->
                                    <TextBlock Text="p" 
                                              Canvas.Left="350" 
                                              Canvas.Top="165"
                                              Foreground="White"
                                              FontSize="11"
                                              FontWeight="Bold"/>

                                    <!-- Função de onda de momento -->
                                    <Canvas x:Name="MomentumWaveCanvas"/>

                                    <!-- Indicador de incerteza Δp -->
                                    <Rectangle x:Name="DeltaPIndicator"
                                              Canvas.Left="100"
                                              Canvas.Top="165"
                                              Width="200"
                                              Height="20"
                                              Fill="#4ECDC4"
                                              Opacity="0.3"/>

                                    <!-- Label Δp -->
                                    <Border Canvas.Left="170" Canvas.Top="200"
                                           Background="#3498DB"
                                           BorderBrush="White"
                                           BorderThickness="1"
                                           CornerRadius="3"
                                           Padding="5">
                                        <TextBlock x:Name="TxtDeltaP" 
                                                  Text="Δp"
                                                  Foreground="White"
                                                  FontSize="10"
                                                  FontWeight="Bold"/>
                                    </Border>

                                    <!-- Info -->
                                    <TextBlock Text="Incerteza no momento" 
                                              Canvas.Left="80" 
                                              Canvas.Top="320"
                                              Foreground="White"
                                              FontSize="9"/>
                                </Canvas>

                                <!-- Seta de relação inversa -->
                                <Canvas Grid.ColumnSpan="2">
                                    <Path Data="M 200,40 L 600,40" 
                                         Stroke="#FFD700" 
                                         StrokeThickness="2"
                                         StrokeDashArray="5,3"/>
                                    <TextBlock Text="↔ Relação Inversa ↔" 
                                              Canvas.Left="340" 
                                              Canvas.Top="30"
                                              Foreground="#FFD700"
                                              FontSize="11"
                                              FontWeight="Bold"/>
                                </Canvas>
                            </Grid>
                        </Border>

                        <!-- Valores Atuais -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#FADBD8" 
                                   BorderBrush="#E74C3C" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="📍 Δx (Posição)" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtDeltaXValue" 
                                              Text="1.0×10⁻¹⁰ m"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#E74C3C"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   BorderBrush="#3498DB" 
                                   Background="#E8F4F8"
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="🎯 Δp (Momento)" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtDeltaPValue" 
                                              Text="5.3×10⁻²⁵ kg·m/s"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#3498DB"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚡ Δx·Δp" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtProducto" 
                                              Text="5.3×10⁻³⁵ J·s"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#F39C12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Fórmula de Heisenberg -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 Princípio da Incerteza" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#F3E5F5" 
                               BorderBrush="#9C27B0" 
                               BorderThickness="3" 
                               CornerRadius="10" 
                               Padding="25">
                            <StackPanel>
                                <TextBlock Text="Δx · Δp ≥ ℏ/2" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          FontFamily="Cambria Math"
                                          Foreground="#6A1B9A" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="0,0,10,0">
                                        <TextBlock Text="Δx:" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="Incerteza na posição"
                                                  FontSize="10"
                                                  Foreground="#34495E"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0">
                                        <TextBlock Text="Δp:" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="Incerteza no momento"
                                                  FontSize="10"
                                                  Foreground="#34495E"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                        <TextBlock Text="ℏ:" 
                                                  FontSize="11" 
                                                  FontWeight="Bold" 
                                                  Foreground="#2C3E50" 
                                                  Margin="0,0,0,5"/>
                                        <TextBlock FontSize="10" Foreground="#34495E" TextWrapping="Wrap">
                                            <Run Text="Constante de Planck reduzida"/>
                                            <LineBreak/>
                                            <Run Text="ℏ = h/2π = 1.055×10⁻³⁴ J·s" FontFamily="Consolas"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Demonstração Visual: Pacotes de Onda -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🌊 Pacotes de Onda e Localização" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Onda Bem Localizada (Δx pequeno) -->
                            <Border Background="White" 
                                   BorderBrush="#E74C3C" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="10">
                                <StackPanel>
                                    <TextBlock Text="📍 Bem Localizada" 
                                              FontSize="12" 
                                              FontWeight="Bold" 
                                              Foreground="#E74C3C" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <Border Background="#F8F9FA" 
                                           BorderBrush="#BDC3C7" 
                                           BorderThickness="1" 
                                           Height="120" 
                                           Margin="0,0,0,10">
                                        <Canvas x:Name="LocalizedWaveCanvas" ClipToBounds="True"/>
                                    </Border>

                                    <TextBlock FontSize="10" Foreground="#495057" TextWrapping="Wrap" HorizontalAlignment="Center">
                                        <Run Text="Δx pequeno" FontWeight="Bold" Foreground="#E74C3C"/>
                                        <LineBreak/>
                                        <Run Text="Δp GRANDE" FontWeight="Bold" Foreground="#3498DB"/>
                                        <LineBreak/>
                                        <Run Text="Muitas frequências!"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Onda Espalhada (Δx grande) -->
                            <Border Grid.Column="2" 
                                   Background="White" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="10">
                                <StackPanel>
                                    <TextBlock Text="🌊 Espalhada" 
                                              FontSize="12" 
                                              FontWeight="Bold" 
                                              Foreground="#3498DB" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <Border Background="#F8F9FA" 
                                           BorderBrush="#BDC3C7" 
                                           BorderThickness="1" 
                                           Height="120" 
                                           Margin="0,0,0,10">
                                        <Canvas x:Name="SpreadWaveCanvas" ClipToBounds="True"/>
                                    </Border>

                                    <TextBlock FontSize="10" Foreground="#495057" TextWrapping="Wrap" HorizontalAlignment="Center">
                                        <Run Text="Δx GRANDE" FontWeight="Bold" Foreground="#E74C3C"/>
                                        <LineBreak/>
                                        <Run Text="Δp pequeno" FontWeight="Bold" Foreground="#3498DB"/>
                                        <LineBreak/>
                                        <Run Text="Frequência bem definida!"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Outras Formas do Princípio -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🔄 Outras Formas do Princípio" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Energia-Tempo -->
                            <Border Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="⏱️ Energia-Tempo" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <TextBlock Text="ΔE · Δt ≥ ℏ/2" 
                                              FontSize="20" 
                                              FontWeight="Bold" 
                                              FontFamily="Cambria Math"
                                              Foreground="#F39C12" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <TextBlock FontSize="10" Foreground="#495057" TextWrapping="Wrap">
                                        <Run Text="• Estados de curta duração têm energia indefinida"/>
                                        <LineBreak/>
                                        <Run Text="• Explica largura de linhas espectrais"/>
                                        <LineBreak/>
                                        <Run Text="• Partículas virtuais!"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Momento Angular -->
                            <Border Grid.Column="1" 
                                   Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="🔄 Ângulo-Momento Angular" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <TextBlock Text="Δθ · ΔL ≥ ℏ/2" 
                                              FontSize="20" 
                                              FontWeight="Bold" 
                                              FontFamily="Cambria Math"
                                              Foreground="#3498DB" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>

                                    <TextBlock FontSize="10" Foreground="#495057" TextWrapping="Wrap">
                                        <Run Text="• Rotação e momento angular"/>
                                        <LineBreak/>
                                        <Run Text="• Similar a posição-momento"/>
                                        <LineBreak/>
                                        <Run Text="• Importante em spin quântico"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Conceitos Fundamentais -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Conceitos Fundamentais" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• NÃO é Limitação de Medição:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  A incerteza é fundamental da natureza, não um problema de instrumentos!"/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Consequência da Dualidade Onda-Partícula:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Partículas têm propriedades de onda. Ondas localizadas requerem muitas frequências."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Transformada de Fourier:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  A relação matemática entre espaço de posição e momento é uma transformada de Fourier."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" LineHeight="20">
                            <Run Text="• Limite Fundamental:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  ℏ/2 é o LIMITE MÍNIMO. Nunca podemos ter Δx·Δp menor que isso!"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles de Incerteza -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Ajustar Incertezas" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Incerteza em Posição (Δx):" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <Slider x:Name="SliderDeltaX"
                               Minimum="1"
                               Maximum="10"
                               Value="5"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SliderDeltaX_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtSliderDeltaX" 
                                  Text="Médio (5)" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <Border Background="#FADBD8" 
                               BorderBrush="#E74C3C" 
                               BorderThickness="2" 
                               CornerRadius="5" 
                               Padding="10"
                               Margin="0,0,0,15">
                            <TextBlock FontSize="10" Foreground="#C0392B" TextWrapping="Wrap" TextAlignment="Center">
                                <Run Text="⚠️ Atenção!" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="Ao diminuir Δx,"/>
                                <LineBreak/>
                                <Run Text="Δp aumentará automaticamente!"/>
                            </TextBlock>
                        </Border>

                        <Button Content="🔄 Resetar Valores" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="Resetar_Click"/>

                        <Button Content="🎲 Valores Aleatórios" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9B59B6"
                               Click="Aleatorio_Click"/>
                    </StackPanel>
                </Border>

                <!-- Verificação do Princípio -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="✅ Verificação" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Border x:Name="BorderVerificacao"
                               Background="#D5F4E6" 
                               BorderBrush="#27AE60" 
                               BorderThickness="2" 
                               CornerRadius="5" 
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="Δx · Δp ≥ ℏ/2 ?" 
                                          FontSize="12" 
                                          FontWeight="Bold" 
                                          Foreground="#2C3E50"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"/>

                                <TextBlock x:Name="TxtVerificacao" 
                                          Text="✓ SATISFEITO"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Foreground="#27AE60"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>

                                <TextBlock x:Name="TxtComparacao" 
                                          Text="5.3×10⁻³⁵ ≥ 5.3×10⁻³⁵"
                                          FontSize="9"
                                          FontFamily="Consolas"
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Exemplos Práticos -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Exemplos Práticos" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Button Content="⚛️ Elétron em Átomo" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#3498DB"
                               Click="ExemploEletron_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🎾 Bola de Tênis" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#95A5A6"
                               Click="ExemploBola_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🔬 Microscópio Eletrônico" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9B59B6"
                               Click="ExemploMicroscopio_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="📡 Experimento de Fenda" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#E67E22"
                               Click="ExemploFenda_Click"
