<UserControl x:Class="Quantun_Forge.src.views.FisicaQuantica.EspectroAto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quantun_Forge.src.views.FisicaQuantica"
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#F72585"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#F72585"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="🌈 Espectros Atômicos e Transições Eletrônicas" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Cada elemento químico possui uma 'impressão digital' espectral única" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Diagrama de Níveis de Energia -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚛️ Diagrama de Níveis de Energia" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas Principal -->
                        <Border Background="#1A1A2E" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="450"
                                Margin="0,0,0,15">
                            <Canvas x:Name="EnergyDiagramCanvas" ClipToBounds="True">

                                <!-- Eixo de Energia -->
                                <Line X1="50" Y1="30" X2="50" Y2="420" 
                                     Stroke="White" 
                                     StrokeThickness="3"/>

                                <Polygon Points="50,30 45,40 55,40" 
                                        Fill="White"/>

                                <TextBlock Text="E (eV)" 
                                          Canvas.Left="55" 
                                          Canvas.Top="25"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Foreground="White"/>

                                <!-- Níveis de Energia do Hidrogênio -->
                                <!-- n=1 (Estado Fundamental) -->
                                <Line x:Name="Level1Line" 
                                     X1="80" Y1="380" X2="320" Y2="380" 
                                     Stroke="#E74C3C" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=1" 
                                          Canvas.Left="330" 
                                          Canvas.Top="375"
                                          Foreground="#E74C3C"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-13.6 eV" 
                                          Canvas.Left="10" 
                                          Canvas.Top="375"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=2 -->
                                <Line x:Name="Level2Line" 
                                     X1="80" Y1="310" X2="320" Y2="310" 
                                     Stroke="#E67E22" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=2" 
                                          Canvas.Left="330" 
                                          Canvas.Top="305"
                                          Foreground="#E67E22"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-3.4 eV" 
                                          Canvas.Left="15" 
                                          Canvas.Top="305"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=3 -->
                                <Line x:Name="Level3Line" 
                                     X1="80" Y1="260" X2="320" Y2="260" 
                                     Stroke="#F39C12" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=3" 
                                          Canvas.Left="330" 
                                          Canvas.Top="255"
                                          Foreground="#F39C12"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-1.51 eV" 
                                          Canvas.Left="15" 
                                          Canvas.Top="255"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=4 -->
                                <Line x:Name="Level4Line" 
                                     X1="80" Y1="225" X2="320" Y2="225" 
                                     Stroke="#F1C40F" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=4" 
                                          Canvas.Left="330" 
                                          Canvas.Top="220"
                                          Foreground="#F1C40F"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-0.85 eV" 
                                          Canvas.Left="15" 
                                          Canvas.Top="220"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=5 -->
                                <Line x:Name="Level5Line" 
                                     X1="80" Y1="200" X2="320" Y2="200" 
                                     Stroke="#2ECC71" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=5" 
                                          Canvas.Left="330" 
                                          Canvas.Top="195"
                                          Foreground="#2ECC71"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-0.54 eV" 
                                          Canvas.Left="15" 
                                          Canvas.Top="195"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=6 -->
                                <Line x:Name="Level6Line" 
                                     X1="80" Y1="180" X2="320" Y2="180" 
                                     Stroke="#3498DB" 
                                     StrokeThickness="4"/>
                                <TextBlock Text="n=6" 
                                          Canvas.Left="330" 
                                          Canvas.Top="175"
                                          Foreground="#3498DB"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="-0.38 eV" 
                                          Canvas.Left="15" 
                                          Canvas.Top="175"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- n=∞ (Ionização) -->
                                <Line X1="80" Y1="50" X2="320" Y2="50" 
                                     Stroke="#9B59B6" 
                                     StrokeThickness="3"
                                     StrokeDashArray="5,3"/>
                                <TextBlock Text="n=∞ (ionização)" 
                                          Canvas.Left="330" 
                                          Canvas.Top="45"
                                          Foreground="#9B59B6"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <TextBlock Text="0 eV" 
                                          Canvas.Left="20" 
                                          Canvas.Top="45"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- Elétron animado -->
                                <Ellipse x:Name="Electron"
                                        Width="16"
                                        Height="16"
                                        Fill="#00D9FF"
                                        Stroke="#0099CC"
                                        StrokeThickness="2"
                                        Canvas.Left="192"
                                        Canvas.Top="372">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#00D9FF" 
                                                         BlurRadius="10" 
                                                         ShadowDepth="0"/>
                                    </Ellipse.Effect>
                                </Ellipse>

                                <!-- Canvas para setas de transição -->
                                <Canvas x:Name="TransitionArrowsCanvas"/>

                                <!-- Canvas para fótons emitidos -->
                                <Canvas x:Name="PhotonsCanvas"/>

                                <!-- Séries Espectrais (Lado Direito) -->
                                <Rectangle Canvas.Left="400" Canvas.Top="50"
                                          Width="350" Height="370"
                                          Fill="#16213E"
                                          Stroke="#4A5568"
                                          StrokeThickness="2"
                                          RadiusX="8" RadiusY="8"/>

                                <TextBlock Text="Séries Espectrais" 
                                          Canvas.Left="490" 
                                          Canvas.Top="60"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="14"/>

                                <!-- Série de Lyman (UV) -->
                                <TextBlock Text="Lyman (UV)" 
                                          Canvas.Left="415" 
                                          Canvas.Top="95"
                                          Foreground="#9B59B6"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <Rectangle Canvas.Left="415" Canvas.Top="115"
                                          Width="320" Height="35"
                                          Fill="#4A148C"
                                          Stroke="#9B59B6"
                                          StrokeThickness="1"
                                          RadiusX="3" RadiusY="3"/>
                                <TextBlock Text="n → 1" 
                                          Canvas.Left="660" 
                                          Canvas.Top="122"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- Série de Balmer (Visível) -->
                                <TextBlock Text="Balmer (Visível)" 
                                          Canvas.Left="415" 
                                          Canvas.Top="160"
                                          Foreground="#E67E22"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <Canvas x:Name="BalmerSeriesCanvas" 
                                       Canvas.Left="415" 
                                       Canvas.Top="180"/>
                                <Rectangle Canvas.Left="415" Canvas.Top="180"
                                          Width="320" Height="35"
                                          Stroke="#E67E22"
                                          StrokeThickness="2"
                                          RadiusX="3" RadiusY="3"
                                          Fill="Transparent"/>
                                <TextBlock Text="n → 2" 
                                          Canvas.Left="660" 
                                          Canvas.Top="187"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- Série de Paschen (IR) -->
                                <TextBlock Text="Paschen (IR)" 
                                          Canvas.Left="415" 
                                          Canvas.Top="225"
                                          Foreground="#E74C3C"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <Rectangle Canvas.Left="415" Canvas.Top="245"
                                          Width="320" Height="35"
                                          Fill="#7F2020"
                                          Stroke="#E74C3C"
                                          StrokeThickness="1"
                                          RadiusX="3" RadiusY="3"/>
                                <TextBlock Text="n → 3" 
                                          Canvas.Left="660" 
                                          Canvas.Top="252"
                                          Foreground="White"
                                          FontSize="10"/>

                                <!-- Série de Brackett (IR) -->
                                <TextBlock Text="Brackett (IR)" 
                                          Canvas.Left="415" 
                                          Canvas.Top="290"
                                          Foreground="#C0392B"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <Rectangle Canvas.Left="415" Canvas.Top="310"
                                          Width="320" Height="25"
                                          Fill="#5A1515"
                                          Stroke="#C0392B"
                                          StrokeThickness="1"
                                          RadiusX="3" RadiusY="3"/>
                                <TextBlock Text="n → 4" 
                                          Canvas.Left="660" 
                                          Canvas.Top="315"
                                          Foreground="White"
                                          FontSize="9"/>

                                <!-- Série de Pfund (IR) -->
                                <TextBlock Text="Pfund (IR)" 
                                          Canvas.Left="415" 
                                          Canvas.Top="345"
                                          Foreground="#922B21"
                                          FontWeight="Bold"
                                          FontSize="11"/>
                                <Rectangle Canvas.Left="415" Canvas.Top="365"
                                          Width="320" Height="20"
                                          Fill="#3D1010"
                                          Stroke="#922B21"
                                          StrokeThickness="1"
                                          RadiusX="3" RadiusY="3"/>
                                <TextBlock Text="n → 5" 
                                          Canvas.Left="660" 
                                          Canvas.Top="368"
                                          Foreground="White"
                                          FontSize="9"/>

                            </Canvas>
                        </Border>

                        <!-- Informações da Transição Atual -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="🔄 Transição" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtTransicao" 
                                              Text="n=1 → n=1"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#3498DB"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="⚡ ΔE" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtDeltaE" 
                                              Text="0.00 eV"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#F39C12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                   Background="#EBFAF5" 
                                   BorderBrush="#2ECC71" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="12"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="📏 λ" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtLambda" 
                                              Text="--- nm"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#2ECC71"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Espectro Completo do Hidrogênio -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🌈 Espectro Completo do Hidrogênio" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="Black" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="100"
                                Margin="0,0,0,15">
                            <Canvas x:Name="SpectrumCanvas" ClipToBounds="True">
                                <!-- Gradiente do espectro visível (fundo) -->
                                <Rectangle Width="800" Height="100">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#380036" Offset="0"/>
                                            <GradientStop Color="#4B0082" Offset="0.15"/>
                                            <GradientStop Color="#0000FF" Offset="0.30"/>
                                            <GradientStop Color="#00FFFF" Offset="0.45"/>
                                            <GradientStop Color="#00FF00" Offset="0.55"/>
                                            <GradientStop Color="#FFFF00" Offset="0.65"/>
                                            <GradientStop Color="#FF7F00" Offset="0.80"/>
                                            <GradientStop Color="#FF0000" Offset="0.95"/>
                                            <GradientStop Color="#4A0000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Linhas espectrais serão desenhadas aqui -->
                                <Canvas x:Name="SpectralLinesCanvas"/>

                                <!-- Labels das séries -->
                                <TextBlock Text="UV" 
                                          Canvas.Left="10" 
                                          Canvas.Top="5"
                                          Foreground="White"
                                          FontSize="10"
                                          FontWeight="Bold"/>
                                <TextBlock Text="Visível" 
                                          Canvas.Left="350" 
                                          Canvas.Top="5"
                                          Foreground="White"
                                          FontSize="10"
                                          FontWeight="Bold"/>
                                <TextBlock Text="IR" 
                                          Canvas.Left="750" 
                                          Canvas.Top="5"
                                          Foreground="White"
                                          FontSize="10"
                                          FontWeight="Bold"/>
                            </Canvas>
                        </Border>

                        <!-- Legenda -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Width="20" Height="20" Fill="#4A148C" Margin="0,0,5,0"/>
                                <TextBlock Text="Lyman (UV)" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Width="20" Height="20" Stroke="#E67E22" StrokeThickness="2" Margin="0,0,5,0"/>
                                <TextBlock Text="Balmer (Visível)" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Rectangle Width="20" Height="20" Fill="#7F2020" Margin="0,0,5,0"/>
                                <TextBlock Text="Paschen (IR)" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Conceitos e Fórmulas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Conceitos Fundamentais" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Fórmula de Rydberg:" 
                                          FontSize="12" 
                                          FontWeight="Bold" 
                                          Foreground="#2C3E50"
                                          Margin="0,0,0,8"/>
                                <Border Background="#F8F9FA" 
                                       BorderBrush="#DEE2E6" 
                                       BorderThickness="1" 
                                       CornerRadius="5" 
                                       Padding="10">
                                    <TextBlock FontSize="11" 
                                              Foreground="#495057" 
                                              TextWrapping="Wrap">
                                        <Run Text="1/λ = R∞ (1/n₁² - 1/n₂²)" FontFamily="Consolas" FontWeight="Bold"/>
                                        <LineBreak/><LineBreak/>
                                        <Run Text="R∞ = 1.097×10⁷ m⁻¹"/>
                                        <LineBreak/>
                                        <Run Text="(Constante de Rydberg)"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Energia do Fóton:" 
                                          FontSize="12" 
                                          FontWeight="Bold" 
                                          Foreground="#2C3E50"
                                          Margin="0,0,0,8"/>
                                <Border Background="#F8F9FA" 
                                       BorderBrush="#DEE2E6" 
                                       BorderThickness="1" 
                                       CornerRadius="5" 
                                       Padding="10">
                                    <TextBlock FontSize="11" 
                                              Foreground="#495057" 
                                              TextWrapping="Wrap">
                                        <Run Text="E = hc/λ = hf" FontFamily="Consolas" FontWeight="Bold"/>
                                        <LineBreak/><LineBreak/>
                                        <Run Text="ΔE = E₂ - E₁"/>
                                        <LineBreak/>
                                        <Run Text="= 13.6(1/n₁² - 1/n₂²) eV"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles de Transição -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🎯 Selecionar Transição" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Estado Inicial (nᵢ):" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <ComboBox x:Name="CboNivelInicial"
                                 FontSize="12"
                                 Margin="0,0,0,15"
                                 SelectionChanged="CboNivelInicial_SelectionChanged">
                            <ComboBoxItem Content="n = 1" Tag="1"/>
                            <ComboBoxItem Content="n = 2" Tag="2" IsSelected="True"/>
                            <ComboBoxItem Content="n = 3" Tag="3"/>
                            <ComboBoxItem Content="n = 4" Tag="4"/>
                            <ComboBoxItem Content="n = 5" Tag="5"/>
                            <ComboBoxItem Content="n = 6" Tag="6"/>
                        </ComboBox>

                        <TextBlock Text="Estado Final (nf):" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <ComboBox x:Name="CboNivelFinal"
                                 FontSize="12"
                                 Margin="0,0,0,20"
                                 SelectionChanged="CboNivelFinal_SelectionChanged">
                            <ComboBoxItem Content="n = 1" Tag="1" IsSelected="True"/>
                            <ComboBoxItem Content="n = 2" Tag="2"/>
                            <ComboBoxItem Content="n = 3" Tag="3"/>
                            <ComboBoxItem Content="n = 4" Tag="4"/>
                            <ComboBoxItem Content="n = 5" Tag="5"/>
                            <ComboBoxItem Content="n = 6" Tag="6"/>
                        </ComboBox>

                        <Button Content="⚡ Realizar Transição" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="RealizarTransicao_Click"/>

                        <Button Content="🔄 Resetar" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Click="Resetar_Click"/>
                    </StackPanel>
                </Border>

                <!-- Séries Espectrais -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📋 Séries Espectrais" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Button Content="🟣 Série de Lyman (n→1)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9B59B6"
                               Click="SerieLyman_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="🔴 Série de Balmer (n→2)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#E67E22"
                               Click="SerieBalmer_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="🟤 Série de Paschen (n→3)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#E74C3C"
                               Click="SeriePaschen_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="⚫ Série de Brackett (n→4)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#C0392B"
                               Click="SerieBrackett_Click"
                               FontSize="11"
                               Padding="10,8"/>
                    </StackPanel>
                </Border>

                <!-- Transições Famosas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⭐ Transições Famosas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Button Content="🔴 Hα (656nm - Vermelho)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#DC143C"
                               Click="TransicaoHAlpha_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🔵 Hβ (486nm - Azul)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#4169E1"
                               Click="TransicaoHBeta_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🟣 Hγ (434nm - Violeta)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#8A2BE2"
                               Click="TransicaoHGamma_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🟣 Hδ (410nm - Violeta)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9370DB"
                               Click="TransicaoHDelta_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="🔥 Lyman-α (122nm - UV)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#663399"
                               Click="TransicaoLymanAlpha_Click"
                               FontSize="10"
                               Padding="8,6"/>
                    </StackPanel>
                </Border>

                <!-- Tabela de Dados -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Dados da Transição" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FA" 
                               BorderBrush="#DEE2E6" 
                               BorderThickness="1" 
                               CornerRadius="5" 
                               Padding="10">
                            <StackPanel>
                                <TextBlock FontSize="10" Foreground="#495057" Margin="0,0,0,5">
                                    <Run Text="Energia Inicial:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run x:Name="TxtEnergiaInicial" Text="0.00 eV"/>
                                </TextBlock>

                                <TextBlock FontSize="10" Foreground="#495057" Margin="0,5,0,5">
                                    <Run Text="Energia Final:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run x:Name="TxtEnergiaFinal" Text="0.00 eV"/>
                                </TextBlock>

                                <TextBlock FontSize="10" Foreground="#495057" Margin="0,5,0,5">
                                    <Run Text="Frequência:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run x:Name="TxtFrequencia" Text="0.00 Hz"/>
                                </TextBlock>

                                <TextBlock FontSize="10" Foreground="#495057" Margin="0,5,0,0">
                                    <Run Text="Região do Espectro:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run x:Name="TxtRegiaoEspectro" Text="---"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Info -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Sabia?" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="As linhas de Balmer do hidrogênio foram as primeiras linhas espectrais observadas em estrelas! Elas têm a cor vermelha característica de nebulosas." 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
