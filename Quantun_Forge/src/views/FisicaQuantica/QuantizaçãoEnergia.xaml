<UserControl x:Class="Quantun_Forge.src.views.FisicaQuantica.QuantizaçãoEnergia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Estilos -->
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#F72585"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ButtonPrimaryStyle" TargetType="Button">
            <Setter Property="Background" Value="#F72585"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DA6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonSecondaryStyle" TargetType="Button" BasedOn="{StaticResource ButtonPrimaryStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Principal -->
            <StackPanel Grid.Column="0">
                <!-- Cabeçalho -->
                <TextBlock Text="💡 Quantização de Energia - Lei de Planck" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#000000" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="A energia de um fóton é proporcional à sua frequência: E = h·f" 
                           FontSize="14" 
                           Foreground="#5A5A6B" 
                           Margin="0,0,0,25"/>

                <!-- Simulação de Níveis Energéticos -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚛️ Níveis de Energia Quantizados" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <!-- Canvas dos Níveis -->
                        <Border Background="#ECF0F1" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="400"
                                Margin="0,0,0,15">
                            <Canvas x:Name="EnergyLevelsCanvas" ClipToBounds="True">
                                <!-- Eixo Vertical de Energia -->
                                <Line X1="50" Y1="20" X2="50" Y2="380" 
                                     Stroke="#2C3E50" 
                                     StrokeThickness="3"/>

                                <!-- Seta do Eixo -->
                                <Polygon Points="50,20 45,30 55,30" 
                                        Fill="#2C3E50"/>

                                <!-- Label do Eixo -->
                                <TextBlock Text="E (Energia)" 
                                          Canvas.Left="55" 
                                          Canvas.Top="15"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Foreground="#2C3E50"/>

                                <!-- Níveis de Energia (serão desenhados dinamicamente) -->
                                <!-- Nível n=1 -->
                                <Line x:Name="Level1" 
                                     X1="50" Y1="350" X2="700" Y2="350" 
                                     Stroke="#3498DB" 
                                     StrokeThickness="3"/>
                                <TextBlock x:Name="Level1Label" 
                                          Text="n=1 (E₁)" 
                                          Canvas.Left="710" 
                                          Canvas.Top="345"
                                          FontWeight="Bold"
                                          FontSize="11"
                                          Foreground="#3498DB"/>

                                <!-- Nível n=2 -->
                                <Line x:Name="Level2" 
                                     X1="50" Y1="270" X2="700" Y2="270" 
                                     Stroke="#2ECC71" 
                                     StrokeThickness="3"
                                     Opacity="0.5"/>
                                <TextBlock x:Name="Level2Label" 
                                          Text="n=2 (E₂)" 
                                          Canvas.Left="710" 
                                          Canvas.Top="265"
                                          FontWeight="Bold"
                                          FontSize="11"
                                          Foreground="#2ECC71"/>

                                <!-- Nível n=3 -->
                                <Line x:Name="Level3" 
                                     X1="50" Y1="190" X2="700" Y2="190" 
                                     Stroke="#F39C12" 
                                     StrokeThickness="3"
                                     Opacity="0.5"/>
                                <TextBlock x:Name="Level3Label" 
                                          Text="n=3 (E₃)" 
                                          Canvas.Left="710" 
                                          Canvas.Top="185"
                                          FontWeight="Bold"
                                          FontSize="11"
                                          Foreground="#F39C12"/>

                                <!-- Nível n=4 -->
                                <Line x:Name="Level4" 
                                     X1="50" Y1="110" X2="700" Y2="110" 
                                     Stroke="#E74C3C" 
                                     StrokeThickness="3"
                                     Opacity="0.5"/>
                                <TextBlock x:Name="Level4Label" 
                                          Text="n=4 (E₄)" 
                                          Canvas.Left="710" 
                                          Canvas.Top="105"
                                          FontWeight="Bold"
                                          FontSize="11"
                                          Foreground="#E74C3C"/>

                                <!-- Nível n=5 -->
                                <Line x:Name="Level5" 
                                     X1="50" Y1="50" X2="700" Y2="50" 
                                     Stroke="#9B59B6" 
                                     StrokeThickness="3"
                                     Opacity="0.5"/>
                                <TextBlock x:Name="Level5Label" 
                                          Text="n=5 (E₅)" 
                                          Canvas.Left="710" 
                                          Canvas.Top="45"
                                          FontWeight="Bold"
                                          FontSize="11"
                                          Foreground="#9B59B6"/>

                                <!-- Elétron (bolinha que se move entre níveis) -->
                                <Ellipse x:Name="Electron"
                                        Width="20"
                                        Height="20"
                                        Fill="#FF4DA6"
                                        Stroke="#C0392B"
                                        StrokeThickness="2"
                                        Canvas.Left="400"
                                        Canvas.Top="340"/>

                                <!-- Fóton emitido (animação) -->
                                <Path x:Name="PhotonPath"
                                     Stroke="#FFD700"
                                     StrokeThickness="4"
                                     Opacity="0">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="410,350">
                                                <PolyLineSegment Points="420,355 430,345 440,355 450,345"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Border>

                        <!-- Informações da Transição -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="📊 Estado Atual" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtEstadoAtual" 
                                              Text="Nível n = 1"
                                              FontSize="12"
                                              Foreground="#34495E"
                                              Margin="0,0,0,4"/>
                                    <TextBlock x:Name="TxtEnergiaAtual" 
                                              Text="E₁ = 0.00 eV"
                                              FontSize="12"
                                              Foreground="#34495E"
                                              FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="2" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="💫 Última Transição" 
                                              FontSize="13" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtTransicao" 
                                              Text="Aguardando transição..."
                                              FontSize="12"
                                              Foreground="#34495E"
                                              Margin="0,0,0,4"/>
                                    <TextBlock x:Name="TxtFotonEmitido" 
                                              Text="ΔE = 0.00 eV"
                                              FontSize="12"
                                              Foreground="#E67E22"
                                              FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Espectro de Radiação do Corpo Negro -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🌈 Espectro de Radiação (Corpo Negro)" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Border Background="#ECF0F1" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Height="250"
                                Margin="0,0,0,15">
                            <Canvas x:Name="SpectrumCanvas" ClipToBounds="True">
                                <!-- Eixos serão desenhados dinamicamente -->
                                <!-- Curva de Planck será desenhada no code-behind -->
                            </Canvas>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#E8F4F8" 
                                   BorderBrush="#3498DB" 
                                   BorderThickness="1" 
                                   CornerRadius="5" 
                                   Padding="10"
                                   Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="🌡️ Temperatura" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtTemperatura" 
                                              Text="3000 K"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#E74C3C"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                   Background="#FFF3E0" 
                                   BorderBrush="#F39C12" 
                                   BorderThickness="1" 
                                   CornerRadius="5" 
                                   Padding="10"
                                   Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="📏 λ máx" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock x:Name="TxtLambdaMax" 
                                              Text="966 nm"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#F39C12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                   Background="#EBFAF5" 
                                   BorderBrush="#2ECC71" 
                                   BorderThickness="1" 
                                   CornerRadius="5" 
                                   Padding="10"
                                   Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="🎨 Cor" 
                                              FontSize="11" 
                                              FontWeight="Bold" 
                                              Foreground="#2C3E50"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <Rectangle x:Name="ColorPreview"
                                             Width="60"
                                             Height="20"
                                             Fill="#FF4500"
                                             Stroke="#2C3E50"
                                             StrokeThickness="1"
                                             RadiusX="3"
                                             RadiusY="3"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Conceitos Importantes -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📚 Conceitos Fundamentais" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Quantização da Energia:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  A energia não é contínua, mas existe apenas em 'pacotes' discretos chamados quanta."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Constante de Planck (h):" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  h = 6,626 × 10⁻³⁴ J·s - relaciona energia e frequência de um fóton."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" Margin="0,0,0,10" LineHeight="20">
                            <Run Text="• Corpo Negro:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Objeto ideal que absorve toda radiação incidente e emite radiação térmica característica."/>
                        </TextBlock>

                        <TextBlock FontSize="12" Foreground="#34495E" TextWrapping="Wrap" LineHeight="20">
                            <Run Text="• Lei de Wien:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  λₘₐₓ · T = 2,898 × 10⁻³ m·K - relaciona comprimento de onda máximo e temperatura."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Coluna Lateral - Controles -->
            <StackPanel Grid.Column="2">
                <!-- Controles de Transição -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Controle de Transições" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Nível de Destino:" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,8"/>

                        <Button Content="n = 1 (Estado Fundamental)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#3498DB"
                               Click="TransicaoNivel1_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="n = 2" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#2ECC71"
                               Click="TransicaoNivel2_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="n = 3" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#F39C12"
                               Click="TransicaoNivel3_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="n = 4" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#E74C3C"
                               Click="TransicaoNivel4_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Button Content="n = 5" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#9B59B6"
                               Click="TransicaoNivel5_Click"
                               FontSize="11"
                               Padding="10,8"/>

                        <Separator Background="#E0E0E0" Margin="0,15"/>

                        <Button Content="🔄 Resetar para n=1" 
                               Style="{StaticResource ButtonPrimaryStyle}"
                               Click="Resetar_Click"/>
                    </StackPanel>
                </Border>

                <!-- Controle de Temperatura (Corpo Negro) -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="🌡️ Temperatura do Corpo Negro" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,15"/>

                        <Slider x:Name="SliderTemperatura"
                               Minimum="1000"
                               Maximum="10000"
                               Value="3000"
                               TickFrequency="500"
                               IsSnapToTickEnabled="True"
                               ValueChanged="SliderTemperatura_ValueChanged"
                               Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTemperaturaSlider" 
                                  Text="3000 K" 
                                  FontSize="12" 
                                  Foreground="#7F8C8D" 
                                  HorizontalAlignment="Center"
                                  FontWeight="Bold"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="Exemplos de Temperaturas:" 
                                  FontSize="11" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,10,0,8"/>

                        <Button Content="🕯️ Chama de Vela (1800K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#E67E22"
                               Click="TempVela_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="💡 Lâmpada Incandescente (3000K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#F39C12"
                               Click="TempLampada_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="☀️ Sol (5778K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#F1C40F"
                               Click="TempSol_Click"
                               FontSize="10"
                               Padding="8,6"/>

                        <Button Content="⭐ Estrela Azul (10000K)" 
                               Style="{StaticResource ButtonSecondaryStyle}"
                               Background="#3498DB"
                               Click="TempEstrela_Click"
                               FontSize="10"
                               Padding="8,6"/>
                    </StackPanel>
                </Border>

                <!-- Fórmulas -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="📐 Fórmulas" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#000000" 
                                   Margin="0,0,0,10"/>

                        <TextBlock FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="• Energia do fóton:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  E = h·f = h·c/λ" FontFamily="Consolas"/>
                        </TextBlock>

                        <TextBlock FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="• Níveis de energia:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  Eₙ = n²·E₁" FontFamily="Consolas"/>
                        </TextBlock>

                        <TextBlock FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap" Margin="0,0,0,8">
                            <Run Text="• Lei de Wien:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  λₘₐₓ·T = 2,898×10⁻³ m·K" FontFamily="Consolas"/>
                        </TextBlock>

                        <TextBlock FontSize="11" Foreground="#7F8C8D" TextWrapping="Wrap">
                            <Run Text="• Lei de Planck:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="  I(λ,T) = (2hc²/λ⁵) / (e^(hc/λkT) - 1)" FontFamily="Consolas" FontSize="9"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Info -->
                <Border Style="{StaticResource SectionBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Curiosidade" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#F39C12" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Max Planck descobriu a quantização da energia em 1900 ao tentar resolver o 'problema da catástrofe ultravioleta' na radiação do corpo negro!" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
